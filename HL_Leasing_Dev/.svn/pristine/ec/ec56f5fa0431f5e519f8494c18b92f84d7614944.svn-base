<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
		
	]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
			function query()　{
			    $('ast606_gps_result_ds').query();
			}
			
			function reset() {
			    $('ast606_gps_query_ds').reset();
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="yes_no_ds" lookupCode="YES_NO"/>
            <a:dataSet id="ast606_gps_query_ds">
                <a:fields>
                    <a:field name="contract_number"/>
                    <a:field name="bp_name"/>
                    <a:field name="gps_installed_flag_des" defaultValue="是" displayField="code_value_name" options="yes_no_ds" returnField="gps_installed_flag" valueField="code_value"/>
                    <a:field name="gps_installed_flag" defaultValue="Y"/>
                    <a:field name="gps_install_flag_des" defaultValue="是" displayField="code_value_name" options="yes_no_ds" returnField="gps_install_flag" valueField="code_value"/>
                    <a:field name="gps_install_flag" defaultValue="Y"/>
                    <a:field name="install_date"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="ast606_gps_result_ds" autoPageSize="true" autoQuery="true" model="ast.AST606.ast_car_gps_report" queryDataSet="ast606_gps_query_ds">
                <a:fields>
                    <a:field name="install_date" datatype="java.util.Date"/>
                    <a:field name="remove_date" datatype="java.util.Date"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="query" text="查询"/>
                <a:gridButton click="reset" text="重置"/>
            </a:screenTopToolbar>
            <a:form column="4" marginWidth="60" title="查询条件">
                <a:textField name="contract_number" bindTarget="ast606_gps_query_ds" prompt="合同号"/>
                <a:textField name="bp_name" bindTarget="ast606_gps_query_ds" prompt="承租人名称"/>
                <a:datePicker name="install_date" bindTarget="ast606_gps_query_ds" prompt="安装日期"/>
                <a:comboBox name="gps_install_flag_des" bindTarget="ast606_gps_query_ds" prompt="是否需安装GPS"/>
                <a:comboBox name="gps_installed_flag_des" bindTarget="ast606_gps_query_ds" prompt="是否已安装GPS"/>
            </a:form>
            <a:grid bindTarget="ast606_gps_result_ds" marginHeight="200" marginWidth="60" navBar="true">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="contract_number" align="center" prompt="合同号" width="150"/>
                    <a:column name="bp_name" align="center" prompt="承租人名称" width="120"/>
                    <a:column name="brand_des" align="center" prompt="品牌" width="100"/>
                    <a:column name="series_des" align="center" prompt="车系" width="100"/>
                    <a:column name="model_des" align="center" prompt="车型" width="100"/>
                    <a:column name="item_frame_number" align="center" prompt="车架号" width="100"/>
                    <a:column name="imei" align="center" prompt="设备号" width="100"/>
                    <a:column name="install_date" align="center" prompt="安装日期" renderer="Aurora.formatDate" width="100"/>
                    <a:column name="remove_date" align="center" prompt="监控期限" renderer="Aurora.formatDate" width="100"/>
                    <a:column name="gps_fee" align="center" prompt="GPS费用" width="100"/>
                    <a:column name="gps_provider_desc" align="center" prompt="GPS供应商" width="100"/>
                    <a:column name="description" align="center" prompt="车辆监控情况" width="120"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
