<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" dynamiccreateenabled="true">
    <a:init-procedure/>
    <a:view>
        <script><![CDATA[
            //保存前调用
            window['${/parameter/@bp_seq}${/parameter/@layout_code}_on_layout_dynamic_before_submit'] = function(ds, record) {
                window['${/parameter/@layout_code}_lock_layout_dynamic_window']();
                var check_flag = true;
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'inventory_info');
                var records = $(ds_id).getAll();
                var j = 0;
                for (var i = 0;i < records.length;i++) {
                    var record = records[i];
                    if (record.get('inventory_address_level') == 'MAIN_IBRARY') {
                        j++;
                    }
                }
                if (j > 1) {
                    window['${/parameter/@bp_seq}${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    Aurora.showMessage('${l:PROMPT}', '只能存在一个主库');
                    check_flag = false;
                    return check_flag;
                }
                window['${/parameter/@bp_seq}${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                return check_flag;
            };
        ]]></script>
        <a:screen-include screen="modules/cont/CON500/con_contract_get_layout_code.screen"/>
    </a:view>
</a:screen>
