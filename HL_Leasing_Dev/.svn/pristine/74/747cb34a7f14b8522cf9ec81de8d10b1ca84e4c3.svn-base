<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
		
	]]></a:init-procedure>
    <a:view>
        <a:link id="open_special_retail_detail_link" url="${/request/@context_path}/modules/prj/PRJ802/prj_project_special_retail_maintain.screen"/>
        <script><![CDATA[
			function prj802_reset()　{
			    $('prj802_special_retail_query_ds').reset();
			}
			
			function prj802_query() {
			    $('prj802_special_retail_result_ds').query();
			}
			
			function document_detail(value, record, name) {
                var special_retail_id = record.get('special_retail_id');
                return '<a href="javascript:openDetail(' + special_retail_id + ')">' + value + '</a>';
            }
            
            function openDetail(special_retail_id) {
                var url=$('open_special_retail_detail_link').getUrl();
                 // Aurora.go(url);
                new Aurora.Window({
                    id: 'new_special_retail_detail_window',
                    params:{
                        special_retail_id:special_retail_id
                    },
                    fullScreen:true,
                    url: url
                });
            }
		]]></script>
        <a:dataSets>
            <a:dataSet id="special_category_ds" fetchAll="true" loadData="true" lookupCode="PRJ801_SPECIAL_RETAIL_CATEGORY"/>
            <a:dataSet id="special_retail_status" fetchAll="true" loadData="true" lookupCode="PRJ801_SPECIAL_RETAIL_STATUS"/>
            <a:dataSet id="prj802_special_retail_query_ds">
                <a:fields>
                    <a:field name="special_retail_number"/>
                    <a:field name="user_name"/>
                    <a:field name="customer_name"/>
                    <a:field name="special_category"/>
                    <a:field name="special_category_des" displayField="code_value_name" options="special_category_ds" returnField="special_category" valueField="code_value"/>
                    <a:field name="status"/>
                    <a:field name="status_des" displayField="code_value_name" options="special_retail_status" returnField="status" valueField="code_value"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="prj802_special_retail_result_ds" autoQuery="true" model="prj.PRJ802.prj_project_special_retail_info" queryDataSet="prj802_special_retail_query_ds"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="prj802_reset" text="重置"/>
                <a:gridButton click="prj802_query" text="查询"/>
            </a:screenTopToolbar>
            <a:form column="5" marginWidth="30" title="查询条件">
                <a:textField name="special_retail_number" bindTarget="prj802_special_retail_query_ds" prompt="申请编号"/>
                <a:textField name="user_name" bindTarget="prj802_special_retail_query_ds" prompt="申请人"/>
                <a:textField name="customer_name" bindTarget="prj802_special_retail_query_ds" prompt="客户名称"/>
                <a:comboBox name="special_category_des" bindTarget="prj802_special_retail_query_ds" prompt="特批类型"/>
                <a:comboBox name="status_des" bindTarget="prj802_special_retail_query_ds" prompt="状态"/>
            </a:form>
            <a:grid id="prj802_special_retail_result_grid" bindTarget="prj802_special_retail_result_ds" marginHeight="250" marginWidth="30" navBar="true">
                <a:columns>
                    <a:column name="special_retail_number" align="center" prompt="申请编号" renderer="document_detail" width="120"/>
                    <a:column name="user_name" align="center" prompt="申请人" width="120"/>
                    <a:column name="customer_name" align="center" prompt="客户名称" width="120"/>
                    <a:column name="special_category_des" align="center" prompt="特批类型" width="120"/>
                    <a:column name="risk_open" align="center" prompt="风险敞口" width="120"/>
                    <a:column name="status_des" align="center" prompt="状态" width="120"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
