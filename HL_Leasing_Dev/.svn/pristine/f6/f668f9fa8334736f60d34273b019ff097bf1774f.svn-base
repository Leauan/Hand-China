<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    t1.employee_id,
                    t1.employee_name,
                    t1.unit_id,
                    t1.unit_name,
                    hlo.lease_organization,
                    hlo.description AS lease_organization_n
                FROM
                    exp_employee_assigns_v t1,
                    hls_lease_organization hlo,
                    exp_org_unit_v t
                WHERE
                    hlo.lease_organization = t.lease_organization AND
                    t.unit_id              = t1.unit_id AND
                    t1.user_id             = ${/session/@user_id} 
            ]]></bm:query-sql>
            <!--  <bm:parameters>
                <bm:parameter inputPath="/parameter/@batch_id"/>
                <bm:parameter inputPath="/session/@session_id"/>
            </bm:parameters> -->
        </bm:operation>
    </bm:operations>
</bm:model>
