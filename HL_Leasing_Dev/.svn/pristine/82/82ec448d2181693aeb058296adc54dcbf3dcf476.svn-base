<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application" cache="false" default-dispatch="${/model/url/@URL}" dispatch-style="redirect" trace="true">
    <a:init-procedure>
        <a:model-query model="csh.CSH502.csh_payment_req_query_for_print" rootPath="payment_req_path"/>
        <a:model-query model="csh.CSH502.csh_payment_req_query_for_print_e" rootPath="payment_req_e_path"/>
        <a:model-query model="csh.CSH502.csh_payment_req_for_print_com1" rootPath="payment_req_path_com1"/>
        <a:model-query model="csh.CSH502.csh_payment_req_for_print_com2" rootPath="payment_req_path_com2"/>
        <a:model-query model="csh.CSH502.csh_payment_req_for_print_com3" rootPath="payment_req_path_com3"/>
        <a:model-query model="csh.CSH502.csh_payment_req_for_print_com4" rootPath="payment_req_path_com4"/>
        <!-- <a:model-query model="csh.CSH502.csh_payment_req_ln_upd_query" rootPath="payment_req_ln_path"/>
        <a:model-query model="csh.CSH502.csh_payment_req_approved" rootPath="approved_info_path"/> -->
        <a:model-execute model="csh.CSH502.update_csh_payment_req_hd_print"/>
    </a:init-procedure>
    <a:view>
        <style media="print"><![CDATA[
	        .PageNext
	        {
	            page-break-after: always;
	        }
		]]></style>
        <style type="text/css"><![CDATA[
			table
			{
			border-collapse:collapse;
			border:none;
			}
			table td{ height:32px; border:#CCCCCC 1px solid;}
    	]]></style>
        <ajax-init/>
        <a:freeMarker><![CDATA[
        <#if  model.getObject('/model/payment_req_path').getChilds()??>
		<#list  model.getObject("/model/payment_req_path").getChilds() as payment_req_rec>
		 <#if (payment_req_rec.getString('rk')!'')!='1'> 
		    <div class="PageNext">
            </div>
         </#if>
		 <P align="left" style="margin-left:60px;" >
            <B>
                <FONT face="楷体">宏菱融资租赁（上海）有限公司</FONT>
            </B>
        </P>
        <P align="center" >
            <B>
                <FONT face="楷体" size="7">${payment_req_rec.getString('title')!''}</FONT>
            </B>
        </P>
        <P align="left" style="margin-left:60px;" >
            <B>
                <FONT face="楷体" >编码:${payment_req_rec.getString('payment_req_number')!''}</FONT>
                <br/>
            </B>
        </P>
       <table border="1" width="1000" style="margin-left:60px"   valign="middle">
            <tr align="center">
             <td >申请人：</td>
             <td colspan="2">${payment_req_rec.getString('req_man')!''}</td> 
             <td >业务部门</td>
             <td colspan="3">${payment_req_rec.getString('unit_name')!''}</td> 
           </tr>
		    <tr align="center">
             <td >收款单位名称</td>
             <td colspan="5">${payment_req_rec.getString('bp_bank_account_name')!''}</td> 
           </tr>
           <tr align="center">
             <td>账号</td>
             <td colspan="5">${payment_req_rec.getString('bp_bank_account_num')!''}</td> 
           </tr>
           <tr align="center">
             <td>开户银行</td>
             <td colspan="5">${payment_req_rec.getString('bp_branch_name')!''}</td> 
           </tr>
            <#if model.getObject("/model/payment_req_e_path").getChilds()??>
             <#list  model.getObject("/model/payment_req_e_path").getChilds() as payment_req_e_rec>
          <#if payment_req_rec.getString('ref_doc_id')  ==  payment_req_e_rec.getString('contract_id')>
           <tr align="center">
             <td>金额(人民币大写)</td>
             <td colspan="5">${payment_req_e_rec.getString('sum_act_amount_big')!''}</td> 
           </tr>
           </#if>
		  </#list> 
		  </#if>
                <tr align="center">
             <td>合同编号</td>
             <td width="25%">承租人</td>
             <td width="25%">车架号</td>
             <td width="15%">应付金额</td>
             <td colspan="3">计划付款日</td>
           </tr>
          <#if model.getObject("/model/payment_req_e_path").getChilds()??>
         <#list  model.getObject("/model/payment_req_e_path").getChilds() as payment_req_e_rec>
          <#if payment_req_rec.getString('ref_doc_id')  ==  payment_req_e_rec.getString('contract_id')>
            <tr align="center">
             <td>${payment_req_e_rec.getString('contract_number')!''}</td> 
             <td width="25%">${payment_req_e_rec.getString('bp_id_tenant_n')!''}</td>
             <td width="25%">${payment_req_e_rec.getString('item_frame_number')!''}</td>
             <td width="15%">${payment_req_e_rec.getString('actual_amount')!''}</td>
             <td colspan="3">${payment_req_e_rec.getString('due_date')!''}</td>
            </tr>
             </#if>
		  </#list> 
		  </#if>
           <tr align="center">
             <td>结算方式</td>
             <td colspan="5">电汇</td>
           </tr>
            <#if model.getObject("/model/payment_req_path_com1").getChilds()??>
         <#list  model.getObject("/model/payment_req_path_com1").getChilds() as payment_req_rec_com1>
          <#if payment_req_rec_com1.getString('contract_id')  ==  payment_req_rec.getString('ref_doc_id')>
           <tr align="center">
             <td rowspan="2">自动车部业务担当审批</td>
             <td colspan="5">${payment_req_rec_com1.getString('comment_text_out1')!''}</td>
           </tr>
           <tr align="center">
             <td colspan="1">签名</td>
             <td>${payment_req_rec_com1.getString('user1')!''}</td>
             <td>日期</td>
             <td colspan="3">${payment_req_rec_com1.getString('date1')!''}</td>
           </tr>
            </#if>
		  </#list> 
		  </#if>
		   <#if model.getObject("/model/payment_req_path_com2").getChilds()??>
         <#list  model.getObject("/model/payment_req_path_com2").getChilds() as payment_req_rec_com2>
          <#if payment_req_rec_com2.getString('contract_id')  ==  payment_req_rec.getString('ref_doc_id')>
           <tr align="center">
             <td rowspan="2">自动车部资产管理担当审批</td>
             <td colspan="5">${payment_req_rec_com2.getString('comment_text_out2')!''}</td>
           </tr>
           <tr align="center">
             <td colspan="1">签名</td>
             <td>${payment_req_rec_com2.getString('user2')!''}</td>
             <td>日期</td>
             <td colspan="3">${payment_req_rec_com2.getString('date2')!''}</td>
           </tr>
            </#if>
		  </#list> 
		  </#if>
		   <#if model.getObject("/model/payment_req_path_com3").getChilds()??>
         <#list  model.getObject("/model/payment_req_path_com3").getChilds() as payment_req_rec_com3>
          <#if payment_req_rec_com3.getString('contract_id')  ==  payment_req_rec.getString('ref_doc_id')>
            <tr align="center">
             <td rowspan="2">自动车部长审批</td>
             <td colspan="5">${payment_req_rec_com3.getString('comment_text_out3')!''}</td>
           </tr>
           <tr align="center">
             <td colspan="1">签名</td>
             <td>${payment_req_rec_com3.getString('user3')!''}</td>
             <td>日期</td>
             <td colspan="3">${payment_req_rec_com3.getString('date3')!''}</td>
           </tr>
            </#if>
		  </#list> 
		  </#if>
		  <#if model.getObject("/model/payment_req_path_com4").getChilds()??>
         <#list  model.getObject("/model/payment_req_path_com4").getChilds() as payment_req_rec_com4>
          <#if payment_req_rec_com4.getString('contract_id')  ==  payment_req_rec.getString('ref_doc_id')>
            <tr align="center">
             <td rowspan="2">营业本部长审批</td>
             <td colspan="5">${payment_req_rec_com4.getString('comment_text_out4')!''}</td>
           </tr>
           <tr align="center">
             <td colspan="1">签名</td>
             <td>${payment_req_rec_com4.getString('user4')!''}</td>
             <td>日期</td>
             <td colspan="3">${payment_req_rec_com4.getString('date4')!''}</td>
           </tr>
           </#if>
		  </#list> 
		  </#if>
      </table>
		</#list>
		</#if>
		 ]]></a:freeMarker>
        <script><![CDATA[
            window.onload = window.print();
        ]]></script>
    </a:view>
</a:screen>
