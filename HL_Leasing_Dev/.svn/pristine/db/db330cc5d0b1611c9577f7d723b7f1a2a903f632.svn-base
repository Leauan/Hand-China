<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    rank() over(Order By 1) rk,
                    v.payment_req_id,
                    SUM(v.actual_amount) sum_act_amount,
                    fnd_convert_to_chinese_pkg.amount_convert_to_chinese(SUM(v.actual_amount)) sum_act_amount_big
                FROM
                    (SELECT
                        CL.actual_amount,
                        cl.payment_req_id
                    FROM
                        csh_payment_req_debt_ln_lv cl
                    WHERE
                        cl.payment_req_id IN (${:@payment_req_id})
                    ) v #WHERE_CLAUSE#
                GROUP BY
                    v.payment_req_id
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
