<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:init-procedure>
        <a:model-query defaultWhereClause="t1.instance_id=${/parameter/@instance_id}" fetchAll="true" model="zjwfl.ZJWFL1060.zj_wfl_approve_history_v" rootPath="history_rp"/>
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
            function hls_ccr_modify_wfl_msg_detail_back() {
                $('${/parameter/@winId}').close();
            }
            
            function approve_history_ds_load(ds) {
                var records = ds.getAll();
                for (var i = 0;i < records.length;i++) {
                    records[i].getField('comment_text').setPropertity('tooltip', records[i].get('comment_text'));
                }
            }
         
        ]]></script>
        <a:dataSets>
            <a:dataSet id="approve_history_ds">
                <a:datas dataSource="/model/history_rp"><![CDATA[
            	]]></a:datas>
                <a:fields>
                    <a:field name="comment_text"/>
                </a:fields>
                <a:events>
                    <a:event name="load" handler="approve_history_ds_load"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="hls_ccr_modify_wfl_msg_detail_back" text="返回"/>
            </a:screenTopToolbar>
            <a:grid bindTarget="approve_history_ds" height="300" width="780">
                <a:columns>
                    <a:column name="node_desc" prompt="节点" width="150"/>
                    <a:column name="approver" prompt="审批人" width="150"/>
                    <a:column name="action_type_desc" prompt="审批动作" width="60"/>
                    <a:column name="create_date_fmt" prompt="审批时间" width="140"/>
                    <a:column name="comment_text" autoAdjust="true" prompt="审批意见" width="250"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
