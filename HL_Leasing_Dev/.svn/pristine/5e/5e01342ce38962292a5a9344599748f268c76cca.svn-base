<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="false">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT csh_payment_req_pkg.get_sum_compensatory_amt(p_payment_req_id => {@payment_req_id},
                													p_bp_id => {@bp_id},
                													p_user_id => ${/session/@user_id}) sum_compensatory_amt FROM dual
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
