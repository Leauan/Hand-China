    </bm:query-fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
				 SELECT *
   FROM (SELECT t3.contract_lease_item_id,
                (select a.sale_consultant from prj_project a where a.project_id=t2.project_id) sale_consultant,
                (select a.sale_consultant_tel from prj_project a where a.project_id=t2.project_id) sale_consultant_tel,
                t2.unit_id,
                t2.unit_id_n,
                t2.owner_user_id,
                t2.owner_user_id_n,
                (select b.mobil from sys_user a,exp_employees  b where a.user_id=t2.owner_user_id
                and a.employee_id=b.employee_id) mobil,
                t1.item_detail_id,
                t2.contract_number,
                t2.company_id,
                t2.contract_id,
                t2.bp_id_tenant bp_id,
                t2.bp_id_tenant_n bp_name,
                t3.brand_id,
                (SELECT v.description FROM hls_car_brands_vl v WHERE v.brand_id = t3.brand_id) brand_dis,
                t3.model_id,
                (SELECT v.description FROM hls_car_model_vl v WHERE v.model_id = t3.model_id) model_dis,
                t3.series_id,
                (SELECT v.description FROM hls_car_series_vl v WHERE v.series_id = t3.series_id) series_dis,
                t3.color_of_apprearance,
                t3.pattern,
                t1.item_frame_number,
                t1.item_engine_number,
                t1.key_flag,
                t1.registration_flag,
                t1.purchase_flag,
                t1.insurance_flag,
                t1.gps_install_flag,
                nvl(t1.arrange_flag,'N') arrange_flag,
                t1.gps_absolution_apply_reason,
                t1.gps_absolution_apply_status,
                (nvl((SELECT 'Y'
                       FROM dual
                      WHERE EXISTS (SELECT 1 FROM ast_car_gps t WHERE t.item_detail_id = t1.item_detail_id and t.enabled_flag='Y')),
                     'N')) gps_installed_flag,
                (SELECT v.code_value_name
                   FROM sys_code_values_v v
                  WHERE v.code = 'AST_CAR_GPS_ABSOLUTION_STATUS'
                        AND v.code_value = t1.gps_absolution_apply_status) gps_absolution_status_des
           FROM con_contract_item_detail t1,
                con_contract_lv          t2,
                con_contract_lease_item  t3
          WHERE t1.contract_lease_item_id = t3.contract_lease_item_id
                AND t3.contract_id = t2.contract_id
                AND t2.data_class = 'NORMAL'
                AND T2.lease_channel != '02'
         
         ) t  #WHERE_CLAUSE#
                ORDER BY
                    contract_number DESC
			]]></bm:query-sql>
        </bm:operation>
