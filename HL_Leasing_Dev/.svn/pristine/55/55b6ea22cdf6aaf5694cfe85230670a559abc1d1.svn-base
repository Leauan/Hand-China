<a:screen xmlns:c="aurora.application.action" xmlns:p="uncertain.proc" xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:init-procedure>
        <a:model-query fetchAll="true" model="rpt.RPT330.balance_sheet_columns" rootPath="/model/balance_sheet_columns"/>
        <!-- <a:model-query fetchAll="true" model="rpt.RPT330.get_current_date" rootPath="default_date_path"/> -->
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
            function close() {
                $('con_everyday_amount_report_window').close();
            }
            
            function query() {
                $('rpt330_con_every_amount_ds').query();
            }
            
            function reset() {
                $('rpt330_con_every_amount_ds').reset();
            }
        ]]></script>
        <a:dataSets>
            <!--  <a:dataSet id="month_ds" lookupCode="MONTH"/> -->
            <a:dataSet id="cash_received_record_ds">
                <a:fields>
                    <a:field name="bp_id"/>
                    <a:field name="bp_name" lovGridHeight="330" lovHeight="470" lovLabelWidth="120" lovService="cont.CON341.hls_bp_master_v_all_lov?bp_category=AGENT" lovWidth="700" title="承租人">
                        <a:mapping>
                            <a:map from="bp_id" to="bp_id"/>
                            <a:map from="bp_name" to="bp_name"/>
                        </a:mapping>
                    </a:field>
                    <!-- <a:field name="year" defaultValue="${/model/default_date_path/record/@year}" required="true"/>
                    <a:field name="month" defaultValue="${/model/default_date_path/record/@current_month}" displayField="code_value_name" options="month_ds" required="true" returnField="month" valueField="code_value"/>
                 -->
                </a:fields>
            </a:dataSet>
            <a:dataSet id="rpt330_con_every_amount_ds" autoPageSize="true" autoQuery="true" model="rpt.RPT330.contract_cashflow_everyday" queryDataSet="cash_received_record_ds" queryUrl="${/request/@context_path}/autocrud/rpt.RPT330.contract_cashflow_everyday/query?year=${/parameter/@year}&amp;month=${/parameter/@month}"><![CDATA[
                
            ]]></a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="close" text="退出"/>
                <a:gridButton click="query" text="查询"/>
                <a:gridButton click="reset" text="重置"/>
            </a:screenTopToolbar>
            <a:form column="1" marginWidth="80" title="查询条件">
                <!--  <a:textField name="year" bindTarget="cash_received_query_ds" prompt="年份"/>
                <a:comboBox name="month" bindTarget="cash_received_query_ds" prompt="月份"/> -->
                <a:lov name="bp_name" bindTarget="cash_received_record_ds" prompt="经销商"/>
            </a:form>
            <a:grid bindTarget="rpt330_con_every_amount_ds" marginHeight="260" marginWidth="80" navBar="true">
                <a:columns>
                    <a:column name="bp_name" lock="true" prompt="经销商名称" width="250"/>
                    <a:placeHolder id="balance_sheet_id"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
    <a:view-config>
        <c:create-config targetId="balance_sheet_id">
            <p:loop source="/model/balance_sheet_columns">
                <c:process-config>
                    <a:column prompt="${@field}">
                        <a:column name="attribute_${@no}" align="right" prompt="余额" renderer="Aurora.formatMoney"/>
                    </a:column>
                </c:process-config>
            </p:loop>
        </c:create-config>
    </a:view-config>
</a:screen>
