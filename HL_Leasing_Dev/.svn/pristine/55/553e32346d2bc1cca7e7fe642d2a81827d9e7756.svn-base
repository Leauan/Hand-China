                    <a:column name="company_short_name" align="center" autoAdjust="true" prompt="公司名称"/>
                    <a:column name="assign_flag" align="center" editor="company_result_grid_cb" prompt="是否分配"/>
                </a:columns>
                <a:editors>
                    <a:checkBox id="company_result_grid_cb"/>
                </a:editors>
            </a:grid> -->
        </a:screenBody>
