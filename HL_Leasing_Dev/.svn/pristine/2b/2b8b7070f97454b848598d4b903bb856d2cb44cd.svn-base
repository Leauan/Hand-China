<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true">
       <a:view>
        <a:link id="con_contract_cancel_link" model="cont.CON542A.con_contract_cancel" modelaction="update"/>
        <script><![CDATA[
            function CON542A_con_contract_query() {
                $('CON542A_contract_result_ds').query();
            }
            
            function CON542A_con_contract_reset() {
                $('CON542A_contract_query_ds').reset();
            }
            
         
            function summaryRenderer(datas, name) {
                var sum = 0;
                var sum2 = 0;
                for (var i = 0;i < datas.length;i++) {
                    record = datas[i];
                    if (name == "lease_item_amount") {
                        var t_1 = record.get("lease_item_amount");
                        var t_2 = parseFloat(t_1);
                        if (!isNaN(t_2)) {
                            sum += t_2;
                        }
                    }
                    if (name == "down_payment") {
                        var d_1 = record.get("down_payment");
                        var d_2 = parseFloat(d_1);
                        if (!isNaN(d_2)) {
                            sum2 += d_2;
                        }
                    }
                }
                if (name == "bp_vender") {
                    return '<div align="right">合计:</div>';
                }
                if (name == "lease_item_amount") {
                    return '<font color="red">' + Aurora.formatNumber(sum, 2) + '</font>';
                }
                if (name == "down_payment") {
                    return '<font color="red">' + Aurora.formatNumber(sum2, 2) + '</font>';
                }
            }
            
            
            function CON542A_con_contract_closed() {
			    debugger;
                var records = $('CON542A_contract_result_ds').getSelected();
                if (records.length != 1) {
                    Aurora.showMessage('${l:HLS.PROMPT}', '只能选择一条合同进行终止操作！');
                    return;
                }
                var cancelData = [];
                var data={};
                 var records_reason = $('contract_cancel_ds').getAt(0);
                if (Aurora.isEmpty(records_reason.get('cancel_reason'))) {
                    Aurora.showMessage('提示', '请维护合同取消原因！');
                    return;
                }
                data['contract_id'] = records[0].get('contract_id');
                data['cancel_reason'] = records_reason.get('cancel_reason');
                data['closed_date'] = records_reason.get('closed_date');
                data['_status'] = 'update';
                cancelData[0] = data;
                Aurora.showConfirm('${l:PROMPT}', '您确认要提交合同取消申请?', function() {
                    Aurora.request({
                        url: $('con_contract_cancel_link').getUrl(),
                        para: cancelData,
                        success: function() {
                            Aurora.SideBar.show({
                                msg: '提交成功',
                                duration: 2000
                            });
                            $('CON542A_contract_result_ds').query();
                        },
                        scope: this
                    });
                }, function() {
                    return;
                }, null, null);
            }
        ]]></script>
        <a:screen-include screen="modules/cont/CON500/con_contract_authority_list_validate.screen?document_category=CONTRACT&amp;function_code=CON542"/>
        <a:dataSets>
            <a:dataSet id="contract_cancel_ds" autoCreate="true">
                <a:fields>
                    <a:field name="cancel_reason" required="true"/>
                </a:fields>
            </a:dataSet>
                    <a:dataSet id="CON542A_contract_query_ds" autoCreate="true">
                <a:fields>
                    <a:field name="bp_name" autoComplete="true" lovGridHeight="350" lovHeight="500" lovLabelWidth="100" lovService="cont.CON541.hls_bp_master_v_for_lov?bp_category=TENANT" lovWidth="520" title="HLS.BP_TITLE">
                        <a:mapping>
                            <a:map from="bp_name" to="bp_name"/>
                            <a:map from="bp_id" to="bp_id_tenant"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="bp_id_tenant"/>
                    <a:field name="lease_channel_desc" displayField="description" options="CON542_lease_channel_name_ds" returnField="lease_channel" valueField="lease_channel"/>
                       <a:field name="contract_number" typeCase="Upper"/>
                    <a:field name="project_number" typeCase="Upper"/>
                   </a:fields>
            </a:dataSet>
            <a:dataSet id="CON542A_contract_result_ds" autoPageSize="true" autoQuery="true" model="cont.CON542A.con_contract_for_query" queryDataSet="CON542A_contract_query_ds" queryUrl="${/request/@context_path}/autocrud/cont.CON542A.con_contract_for_query/query" selectable="true" selectionModel="single">
                <a:events>
                    <a:event name="query" handler="aut_authority_list_validate_query"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="CON542A_con_contract_query" text="HLS.QUERY"/>
                <a:gridButton click="CON542A_con_contract_reset" text="HLS.RESET"/>
                 <a:gridButton click="CON542A_con_contract_closed" text="合同取消"/>
            </a:screenTopToolbar>
            <a:form column="4" labelWidth="100" marginWidth="30" title="CON301.CONTRACT_QUERY">
                <a:textField name="contract_number" bindTarget="CON542A_contract_query_ds" prompt="HLS.CONTRACT_NUMBER"/>
                <a:lov name="bp_name" bindTarget="CON542A_contract_query_ds" prompt="HLS.TENANT_CODE"/>
                <a:numberField name="lease_item_amount_from" bindTarget="CON542A_contract_query_ds" prompt="租赁物总价从"/>
                <a:numberField name="lease_item_amount_to" bindTarget="CON542A_contract_query_ds" prompt="租赁物总价到"/>
                <a:textField name="project_number" bindTarget="CON542A_contract_query_ds" prompt="申请编号"/>
             </a:form>
            <a:form labelWidth="100" marginWidth="30" title="取消原因">
                <a:textArea name="cancel_reason" bindTarget="contract_cancel_ds" height="60" prompt="取消原因" width="800"/>
            </a:form>
            <a:grid id="CON542_con_contract_grid_ds" bindTarget="CON542A_contract_result_ds" marginHeight="300" marginWidth="30" navBar="true">
                <a:columns>
                    <a:column name="contract_number" prompt="HLS.CONTRACT_NUMBER" width="150"/>
                    <a:column name="project_number" prompt="申请编号" width="120"/>
                     <a:column name="print_date" prompt="签约时间" renderer="Aurora.formatDate" width="120"/>
                    <a:column name="bp_name" prompt="HLS.TENANT_NAME" width="200"/>
                    <a:column name="lease_item_amount" align="right" footerRenderer="summaryRenderer" prompt="租赁物总价" renderer="Aurora.formatMoney" width="120"/>
                    <a:column name="down_payment" align="right" footerRenderer="summaryRenderer" prompt="首付款" renderer="Aurora.formatMoney" width="120"/>
                   </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
