<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    'Y' as flag
                FROM
                    dual
                WHERE
                    EXISTS
                    (SELECT
                        1
                    FROM
                        exp_org_position_vl p,
                        exp_employee_assigns a,
                        exp_employees e ,
                        sys_user s
                    WHERE
                        a.position_id   =p.position_id AND
                        e.employee_id   =a.employee_id AND
                        e.employee_id   =s.employee_id AND
                        p.POSITION_CODE ='00221' AND --岗位编码  自动车副部长
                        p.ENABLED_FLAG  ='Y' AND
                        a.enabled_flag  ='Y' AND
                        s.user_id       =${/session/@user_id}
                    )
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
