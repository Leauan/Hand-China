<doc watermark='永达融资' >
	<header>
		<p>
		    <img src='YONDA_LOGO.jpg' />
			<pbdr>
				<bottom />
			</pbdr>
			 <t bold="true" font="宋体" fontSize="18" fontColor="#000"></t>
			 
		</p>
	</header>
	<footer >
		<p align="left">
        <pbdr>
            <top space="1" sz="6" color="auto" value="single"/>
        </pbdr>
        </p>
	</footer>
	<body>
		<p align="center" line='900' >
		    <t bold="true" font="宋体" fontSize="50"  fontColor="#000">项目审批结果记录单</t>
		</p>
		<p align="left" >
			<t  font="宋体" fontSize="20"   fontColor="#000">项目编号：${model.getObject('/model/prj_project_info_path/record/@project_number')!''}</t>
		</p>
		<p align="left" >
			<t font="宋体" fontSize="20"   fontColor="#000">项目名称：${model.getObject('/model/prj_project_info_path/record/@project_name')!''}</t>
		</p>
		<p/>
		<tbl border="true" align="center">
		 <#if model.getObject('/model/approve_risk_path').getChilds()??>
		     <#list  model.getObject("/model/approve_risk_path").getChilds() as approve_risk_r>
		        <tr>
		            <tc width="15">
		             <p align="left" >
			            <t  bold="true"  font="宋体" fontSize="20"    fontColor="#000">审批人：${approve_risk_r.getString('user_name')!''}</t>
		              </p>
		               <p line="200" />
		                <p align="left" >
			            <t  font="宋体" fontSize="20"   fontColor="#000">审批意见：${approve_risk_r.getString('comment_risk')!''}</t>
		              </p>
		              <p line="200" />
		              <p align="right" >
			            <t  bold="true"  font="宋体" fontSize="20"   fontColor="#000">审批时间：${approve_risk_r.getString('creation_date')!''}</t>
		              </p>
		            </tc>
		        </tr>
		  </#list>
	     </#if>
	     </tbl> 
	</body>
</doc>
