<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application" cache="false" default-dispatch="${/model/url/@URL}" dispatch-style="redirect" trace="true">
    <a:init-procedure>
        <a:model-query model="csh.CSH502.csh_payment_req_query_for_print_a" rootPath="payment_req_path"/>
        <a:model-query model="csh.CSH502.csh_payment_req_query_for_print_d" rootPath="payment_req_d_path"/>
        <a:model-query model="csh.CSH502.csh_payment_req_query_for_print_c" rootPath="payment_req_c_path"/>
        <!-- <a:model-query model="csh.CSH502.csh_payment_req_ln_upd_query" rootPath="payment_req_ln_path"/>
        <a:model-query model="csh.CSH502.csh_payment_req_approved" rootPath="approved_info_path"/> -->
        <a:model-execute model="csh.CSH502.update_csh_payment_req_hd_print"/>
    </a:init-procedure>
    <a:view>
        <style media="print"><![CDATA[
	        .PageNext
	        {
	            page-break-after: always;
	        }
		]]></style>
        <style type="text/css"><![CDATA[
			table
			{
			border-collapse:collapse;
			border:none;
			}
			table td{ height:32px; border:#CCCCCC 1px solid;}
    	]]></style>
        <ajax-init/>
        <a:freeMarker><![CDATA[
        <#if  model.getObject('/model/payment_req_c_path').getChilds()??>
		<#list  model.getObject("/model/payment_req_path").getChilds() as payment_req_rec>
		<#if (payment_req_rec.getString('rk')!'')!='1'> 
		    <div class="PageNext">
            </div>
         </#if>
		 <P align="left" style="margin-left:60px;" >
            <B>
                <FONT face="楷体">宏菱融资租赁（上海）有限公司</FONT>
            </B>
        </P>
        <P align="center" >
            <B>
                <FONT face="楷体" size="7">支付请示书</FONT>
            </B>
        </P>
        <P align="left" style="margin-left:60px;" >
            <B>
                <FONT face="楷体" >编码:${payment_req_rec.getString('payment_req_number')!''}</FONT>
                <br/>
            </B>
        </P>
       <table border="1" width="1000" style="margin-left:60px"   valign="middle">
            <tr align="center">
             <td width="15%">申请人：</td>
             <td colspan="2">${payment_req_rec.getString('req_man')!''}</td> 
             <td>结算方式</td>
             <td colspan="3">电汇</td>
           </tr>
             <#list  model.getObject("/model/payment_req_c_path").getChilds() as payment_req_c_rec>
               <#if payment_req_rec.getString('payment_req_id')  ==  payment_req_c_rec.getString('payment_req_id')>
		    <tr align="center">
             <td width="15%">总金额（人民币小写）</td>
             <td  colspan="2">${payment_req_c_rec.getString('sum_act_amount')!''}</td> 
             <td>人民币(大写)</td>
             <td colspan="3">${payment_req_c_rec.getString('sum_act_amount_big')!''}</td> 
           </tr>
            </#if>
          </#list> 
           <tr align="center">
             <td>合同编号</td>
             <td>承租人</td>
             <td>申请金额</td>
             <td>计划付款日</td>
             <td>对象账号</td>
             <td>对象账户名</td>
             <td>开户行</td>
           </tr>
         <#if model.getObject("/model/payment_req_d_path").getChilds()??>
          <#list  model.getObject("/model/payment_req_d_path").getChilds() as payment_req_d_rec>
           <#if payment_req_rec.getString('payment_req_id')  ==  payment_req_d_rec.getString('payment_req_id')>
            <tr align="center">
             <td>${payment_req_d_rec.getString('contract_number')!''}</td> 
             <td>${payment_req_d_rec.getString('bp_tenant_name')!''}</td>
             <td>${payment_req_d_rec.getString('actual_amount')!''}</td>
             <td>${payment_req_d_rec.getString('due_date')!''}</td>
             <td>${payment_req_d_rec.getString('bp_bank_account_num')!''}</td>
             <td>${payment_req_d_rec.getString('bp_bank_account_name')!''}</td>
             <td>${payment_req_d_rec.getString('bank_full_name1')!''}</td>
            </tr>
               </#if>
		  </#list> 
		  </#if>
          <tr align="center">
             <td>自动车部业务担当审批</td>
             <td>审批日期</td>
             <td>${payment_req_rec.getString('date1')!''}</td>
             <td>审批意见</td>
             <td colspan="3">${payment_req_rec.getString('comment_text_out1')!''}</td>
           </tr>
           <tr align="center">
             <td>自动车部资产管理担当审批</td>
             <td>审批日期</td>
             <td>${payment_req_rec.getString('date2')!''}</td>
             <td>审批意见</td>
             <td colspan="3">${payment_req_rec.getString('comment_text_out2')!''}</td>
           </tr>
           <tr align="center">
             <td>自动车部长审批</td>
             <td>审批日期</td>
             <td>${payment_req_rec.getString('date3')!''}</td>
             <td>审批意见</td>
             <td colspan="3">${payment_req_rec.getString('comment_text_out3')!''}</td>
           </tr>
            <!-- <tr align="center">
             <td>营业本部长审批</td>
             <td>审批日期</td>
             <td>${payment_req_rec.getString('date1')!''}</td>
             <td>审批意见</td>
             <td colspan="3">${payment_req_rec.getString('comment_text_out4')!''}</td>
           </tr>-->
      </table>
		</#list>
		</#if>
		 ]]></a:freeMarker>
        <script><![CDATA[
            window.onload = window.print();
        ]]></script>
    </a:view>
</a:screen>
