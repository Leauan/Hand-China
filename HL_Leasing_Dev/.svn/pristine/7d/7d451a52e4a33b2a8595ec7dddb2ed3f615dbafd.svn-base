<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:view>
        <script><![CDATA[
            function ebank_csh331_ds_close(){
                window.close();
            }
            
            function ebank_csh331_ds_return(){
                window.location = '${/request/@context_path}/home_page.screen';
            }

            function ebank_csh331_ds_query() {
                $('ebank_csh331_withholding_doc_result').query();
            }
            
            function ebank_csh331_ds_reset() {
                $('ebank_csh331_withholding_doc_query').reset();
            }
            
            function ebank_csh331_ds_export(){
                $('ebank_csh331_withholding_doc_result_grid_id')._export();
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="doc_status_ds" lookupCode="RD_EBANK_SPD_DOCUMENT_STATUS"/>
            <a:dataSet id="hd_csh_cashflow_ds" autoQuery="true" model="ebank.EBANK_CSH331.csh_cashflow_choose"/>
            <a:dataSet id="csh_trans_flag_ds">
                <a:datas>
                    <a:record name="是" code="Y"/>
                    <a:record name="否" code="N"/>
                    <a:record name="全部" code="ALL"/>
                </a:datas>
            </a:dataSet>
            <a:dataSet id="ebank_csh331_withholding_doc_query">
                <a:fields>
                    <a:field name="document_number"/>
                    <a:field name="contract_number"/>
                    <a:field name="customer_name"/>
                    <a:field name="cus_bank_account"/>
                    <a:field name="status_desc" defaultValue="交易结束" displayField="code_value_name" options="doc_status_ds" returnField="status" valueField="code_value"/>
                    <a:field name="status" defaultValue="FINISH"/>
                    <a:field name="csh_trans_flag_desc" defaultValue="全部" displayField="name" options="csh_trans_flag_ds" returnField="csh_trans_flag" valueField="code"/>
                    <a:field name="csh_trans_flag" defaultValue="ALL"/>
                    <a:field name="cf_item_1_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                    <a:field name="cf_item_9_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                    <a:field name="cf_type_x1" defaultValue="8"/>
                    <a:field name="cf_type_x1_desc" defaultValue="留购金" displayField="description" options="hd_csh_cashflow_ds" readOnly="true" returnField="cf_type_x1" valueField="cf_item"/>
                    <a:field name="cf_type_x2"/>
                    <a:field name="cf_type_x2_desc" displayField="description" options="hd_csh_cashflow_ds" readOnly="true" returnField="cf_type_x2" valueField="cf_item"/>
                    <a:field name="cf_type_x3"/>
                    <a:field name="cf_type_x3_desc" displayField="description" options="hd_csh_cashflow_ds" readOnly="true" returnField="cf_type_x3" valueField="cf_item"/>
                    <a:field name="cf_item_flag" defaultValue="Y"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="ebank_csh331_withholding_doc_result" autoPageSize="true" autoQuery="true" model="ebank.EBANK_CSH331.hls_ebank_ccb_document" queryDataSet="ebank_csh331_withholding_doc_query" selectable="true" selectionModel="single">
                <a:fields>
                    <a:field name="note" readOnly="true"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="ebank_csh331_ds_return" text="HLS.EXIT"/>
                <a:gridButton click="ebank_csh331_ds_query" text="HLS.QUERY"/>
                <a:gridButton click="ebank_csh331_ds_reset" text="HLS.RESET"/>
                <a:gridButton click="ebank_csh331_ds_export" text="HLS.EXPORT"/>
                <a:gridButton id="ebank_csh331_close_btn_id" click="ebank_csh331_ds_close" text="HLS.CLOSE"/>
            </a:screenTopToolbar>
            <a:form column="4" labelWidth="110" marginWidth="30" title="代扣单查询">
                <a:textField name="document_number" bindTarget="ebank_csh331_withholding_doc_query" prompt="代扣单编号"/>
                <a:textField name="cus_bank_account" bindTarget="ebank_csh331_withholding_doc_query" prompt="代扣账号"/>
                <a:comboBox name="status_desc" bindTarget="ebank_csh331_withholding_doc_query" prompt="代扣单状态"/>
                <a:comboBox name="csh_trans_flag_desc" bindTarget="ebank_csh331_withholding_doc_query" prompt="合并状态"/>
                <a:textField name="transaction_number_from" bindTarget="ebank_csh331_withholding_doc_query" prompt="批次编号从"/>
                <a:textField name="transaction_number_to" bindTarget="ebank_csh331_withholding_doc_query" prompt="批次编号到"/>
                <a:dateTimePicker name="status_date_from" bindTarget="ebank_csh331_withholding_doc_query" prompt="最后处理时间从"/>
                <a:dateTimePicker name="status_date_to" bindTarget="ebank_csh331_withholding_doc_query" prompt="最后处理时间到"/>
                <a:textField name="customer_name" bindTarget="ebank_csh331_withholding_doc_query" prompt="承租人"/>
                <a:textField name="contract_number" bindTarget="ebank_csh331_withholding_doc_query" prompt="合同编号"/>
                <a:comboBox name="cf_type_x1_desc" bindTarget="ebank_csh331_withholding_doc_query" prompt="现金流1"/>
                <a:comboBox name="cf_type_x2_desc" bindTarget="ebank_csh331_withholding_doc_query" prompt="现金流2"/>
                <a:comboBox name="cf_type_x3_desc" bindTarget="ebank_csh331_withholding_doc_query" prompt="现金流3"/>
                <a:checkBox name="cf_item_1_flag" bindTarget="ebank_csh331_withholding_doc_query" prompt="租金"/>
                <a:checkBox name="cf_item_9_flag" bindTarget="ebank_csh331_withholding_doc_query" prompt="罚息"/>
            </a:form>
            <a:grid id="ebank_csh331_withholding_doc_result_grid_id" bindTarget="ebank_csh331_withholding_doc_result" marginHeight="200" marginWidth="30" navBar="true">
                <a:columns>
                    <a:column name="document_number" align="center" lock="true" prompt="代扣单编号" width="120"/>
                    <a:column name="transaction_number" align="center" lock="true" prompt="批次编号" width="120"/>
                    <a:column name="status_desc" align="center" prompt="代扣单状态" width="80"/>
                    <a:column name="contract_number" align="center" prompt="合同编号" width="160"/>
                    <a:column name="times" align="center" prompt="期数" width="60"/>
                    <a:column name="due_date" align="center" prompt="支付日" renderer="Aurora.formatDate" width="80"/>
                    <a:column name="source_type_desc" align="center" prompt="代扣项目" width="70"/>
                    <a:column name="customer_name" prompt="承租人名称" width="110"/>
                    <a:column name="cus_bank_acc_name" prompt="户名" width="110"/>
                    <a:column name="cus_bank_id_n" prompt="付款人开户行名称" width="100"/>
                    <a:column name="cus_bank_account" prompt="付款人账号" width="150"/>
                    <a:column name="receivable_amount" prompt="金额" renderer="Aurora.formatMoney" width="110"/>
                    <a:column name="csh_trans_num" prompt="收款编号" width="100"/>
                    <a:column name="cus_id_phone" prompt="手机号" width="100"/>
                    <a:column name="csh_trans_flag_desc" align="center" prompt="合并标志" width="80"/>
                    <a:column name="status_date" align="center" prompt="最后处理时间" width="135"/>
                    <a:column name="error_msg" prompt="错误信息" width="120"/>
                    <a:column name="note" editor="ta" prompt="备注" width="200"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
        <script><![CDATA[
             Aurora.onReady(function(){
                 var trans_num = '${/parameter/@transaction_number}';
                 var query_ds = $('ebank_csh331_withholding_doc_query');
                 var record = query_ds.getCurrentRecord();
                 var ds = $('ebank_csh331_withholding_doc_result');
                 if (!Aurora.isEmpty(trans_num)){
                     record.set('transaction_number_from', trans_num);
                     record.set('transaction_number_to', trans_num);
                     record.set('status', '');
                     record.set('status_desc', '');
                     $('ebank_csh331_close_btn_id').setVisible(true);
                     ds.query();
                 }else{
                     $('ebank_csh331_close_btn_id').setVisible(false);
                 }
             });
        ]]></script>
    </a:view>
</a:screen>
