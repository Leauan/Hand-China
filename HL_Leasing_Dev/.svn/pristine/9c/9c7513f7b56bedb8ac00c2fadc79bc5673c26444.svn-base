<?xml version="1.0" encoding="UTF-8"?>
<!--
	&author:DJ
	$date:2013/11/20
	$purpose:项目上会工作流评委意见汇总
-->
<a:screen xmlns:c="aurora.application.action" xmlns:a="http://www.aurora-framework.org/application" xmlns:p="uncertain.proc" trace="true">
    <a:init-procedure>
        <a:model-query model="wfl_screen.PRJ_PROJECT.prj_project_approval_comment_summary" rootPath="comment_summary_record"/>
    </a:init-procedure>
    <a:view>
        <script charset="utf-8" src="${/request/@context_path}/kindeditor/kindeditor-min.js"><![CDATA[ ]]></script>
        <script charset="utf-8" src="${/request/@context_path}/kindeditor/lang/zh_CN.js"><![CDATA[ ]]></script>
        <script><![CDATA[
            function summaryEditor_create(list) {
                var k = KindEditor;
            
                var config = {
                    width: '99%',
                    height: '500px',
                    resizeType: 0,
                    allowPreviewEmoticons: false,
                    allowImageUpload: false,
                    items: ['undo', 'redo', '|', 'cut', 'copy', 'paste', 'plainpaste', '|', 'preview', 'print', '|', 'insertorderedlist', 'insertunorderedlist', '|', 'table', 'link', 'unlink', 'pagebreak', 'hr', '|', '/', 'fontname', 'fontsize', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline', '|', 'lineheight', 'justifyleft', 'justifycenter', 'justifyright', 'indent', 'outdent', '|', 'selectall', 'removeformat', '|']
                };
            
                for (var i = 0;i < list.length;i++) {
                    list[i]['value'] = k.create('textarea[id="' + list[i]['name'] + '"]', config);
            
                    if ('${/parameter/@readOnly}' == 'true') {
                        list[i]['value'].readonly(true);
                        list[i]['value'].toolbar.div.hide();
                    }
                }
            }
            
            var summaryEditorList = [];
            
        ]]></script>
        <a:dataSets>
            <a:dataSet id="commentSummaryDs" model="wfl_screen.PRJ_PROJECT.prj_project_approval_comment_summary">
                <a:datas dataSource="/model/comment_summary_record"/>
                <a:fields>
                    <a:field name="approver_comment_summary"/>
                    <a:field name="exists_comment_flag" checkedValue="Y" readOnly="${/parameter/@readOnly}" uncheckedValue="N"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:form labelSeparator="" labelWidth="0" marginWidth="30" title="汇总信息">
                <div><![CDATA[综述]]></div>
                <a:textArea name="approver_comment_summary" id="approver_comment_summary" bindTarget="commentSummaryDs" prompt=""/>
            </a:form>
            <a:switch test="/parameter/@show_save">
                <a:case value="Y">
                    <script><![CDATA[
                    	
			            zjwfl5110_ApproveChecker_add('comment_summary',function(type){
			            	var ds = $('commentSummaryDs');
		                    var record = ds.getAt(0);
		                    
		                    var list = summaryEditorList;
		                    
		                    //比较editor中数据和record中数据是否相同
		                    for (var i=0;i < list.length;i++)
			                {
			                    var temp = list[i]['value'].html();
			                    var name = list[i]['name'];
			                    var value = record.get(name);
			                    
			                    if(Ext.isEmpty(temp)&&Ext.isEmpty(value))
			                    {
			                        Aurora.showMessage('提示','汇总信息不能为空，请填写！');
		                        	return false;
			                    }
			                    else if(temp != value)
			                    {
			                        var editor_version = record.get('editor_version');
			                        if(Ext.isEmpty(editor_version))
			                        {
			                            editor_version = 0;
			                        }
			                        else
			                        {
			                            editor_version = editor_version + 1;
			                        }
			                        record.set('editor_version',editor_version);
			                        break;
			                    }
			                }
		                    
		                    if(!ds.validate())
		                    {
		                        return false;
		                    }
		                    if(record.dirty)
		                    {
		                        Aurora.showMessage('提示','汇总信息已被修改，请保存！');
		                        return false;
		                    }
		                    return true;
			            });
	                    
			            function save_prj_approval()
			            {
			                var ds = $('commentSummaryDs');
			                var record = ds.getAt(0);
			                
			                var list = summaryEditorList;
			                
			                for (var i=0;i < list.length;i++)
			                {
			                    var value = list[i]['value'].html();
			                    var name = list[i]['name'];
			                    record.set(name,value);
			                }
			                
			                
			                if(!ds.validate())
			                {
			                    return;
			                }
			                ds.submit();
			            }
			            
			        ]]></script>
                    <a:hBox>
                        <a:gridButton click="save_prj_approval" text="保存汇总"/>
                    </a:hBox>
                </a:case>
            </a:switch>
            <script><![CDATA[
	            Aurora.onReady(function(K) {
	            
	                var list = summaryEditorList;
	            
	                list[0] = {
	                    name: 'approver_comment_summary'
	                };
	            
	                summaryEditor_create(list);
	            
	            });
            ]]></script>
        </a:screenBody>
    </a:view>
</a:screen>
