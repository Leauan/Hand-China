                var url_l = $('${/parameter/@layout_code}${/parameter/@pre_layout}get_atch_download_link').getUrl() + '?table_pk_value=' + contract_id + '&table_name=CON_CONTRACT' + '&doc_code=' + contract_id +'&tab_group=CONTRACT'+ '&all_flag=Y';
                window.open(href = url_l, target = "_self");
