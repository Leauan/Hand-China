                            contract_number: record.get('contract_number')
                        },
                        url: $('${/parameter/@layout_code}_con_contract_content_confirm_link_id').getUrl(),
                        title: '合同文本生成',
                        width: 1300,
                        height: 550
                    });
                    //在关闭页面之后,刷新一下ds
                    win.on('close', function() {
                        if (ds_id) {
                            $(ds_id).query();
                        }
                    });
                } else {
                    Aurora.showErrorMessage('错误', '请先点击保存生成合同编号！');
                }
