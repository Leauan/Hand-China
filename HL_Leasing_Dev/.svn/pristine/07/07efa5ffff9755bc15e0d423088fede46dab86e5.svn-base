<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view>
        <script><![CDATA[
			function exp_1070_back(){
			    history.go(-1);
			}
			function exp_1070_next(){
			    history.go(1);
			}
			function exp_1070_quit(){
			    location.href = $('sys_service_welcome_link').getUrl();
                parent.shMenu('show');
			}
			function querywflgroup(){
			    $('sys_code_result_ds').query();
			}
			function editorFunction_group_code(record,name){
			    if(record.isNew){
			        return 'sys_code_result_grid_tfu';
			    }else {
			        return '';
			    }
			}
			
		]]></script>
        <a:dataSets>
            <a:dataSet id="wfl_group_query_ds"/>
            <a:dataSet id="sys_code_result_ds" autoQuery="true" model="exp.EXP1070.cfl_wfl_approver_group" queryDataSet="wfl_group_query_ds" selectable="true" submitUrl="wfl_group_update.svc">
                <a:fields>
                    <a:field name="enabled_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="sys_code_ref_ds" bindName="result_ds" bindTarget="sys_code_result_ds" model="exp.EXP1070.cfl_wf_approver_relation" selectable="true">
                <a:fields>
                    <a:field name="approver_employee_id"/>
                    <a:field name="review_employee_id"/>
                    <a:field name="manager_employee_id"/>
                    <a:field name="manager_employee" lovGridHeight="300" lovHeight="450" lovService="zjwfl.zj_wfl_employee_lov" lovWidth="550" title="员工选择">
                        <a:mapping>
                            <a:map from="id" to="manager_employee_id"/>
                            <a:map from="description" to="manager_employee"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="review_employee" lovGridHeight="300" lovHeight="450" lovService="zjwfl.zj_wfl_employee_lov" lovWidth="550" title="员工选择">
                        <a:mapping>
                            <a:map from="description" to="review_employee"/>
                            <a:map from="id" to="review_employee_id"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="approver_employee" lovGridHeight="300" lovHeight="450" lovService="zjwfl.zj_wfl_employee_lov" lovWidth="550" title="员工选择">
                        <a:mapping>
                            <a:map from="description" to="approver_employee"/>
                            <a:map from="id" to="approver_employee_id"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="enabled_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <!-- <a:gridButton click="exp_1070_back" text="HLS.BACK"/>
                <a:gridButton click="exp_1070_next" text="HLS.FORWARD"/> -->
                <a:gridButton click="exp_1070_quit" text="HLS.EXIT"/>
                <a:gridButton click="querywflgroup" text="HLS.QUERY"/>
            </a:screenTopToolbar>
            <a:form column="3" labelWidth="80" title="HAP_QUERY_TITLE">
                <a:textField name="approver_group_code" bindTarget="wfl_group_query_ds" prompt="审批组代码" typeCase="upper" width="200">
                    <a:events>
                        <a:event name="enterdown" handler="querywflgroup"/>
                    </a:events>
                </a:textField>
                <a:textField name="approver_group_desc" bindTarget="wfl_group_query_ds" prompt="审批组名称" width="200">
                    <a:events>
                        <a:event name="enterdown" handler="querywflgroup"/>
                    </a:events>
                </a:textField>
            </a:form>
            <a:form column="2">
                <a:grid id="sysGrid" bindTarget="sys_code_result_ds" marginHeight="170" navBar="true" width="650">
                    <a:toolBar>
                        <a:button type="add"/>
                        <a:button type="clear"/>
                        <a:button type="save"/>
                    </a:toolBar>
                    <a:columns>
                        <a:column name="approver_group_code" editorFunction="editorFunction_group_code" prompt="审批组代码" sortable="true" width="280"/>
                        <a:column name="approver_group_desc" editor="sys_code_result_grid_tf" prompt="审批组描述" width="200"/>
                        <a:column name="enabled_flag" align="center" editor="sys_code_result_grid_ckb" prompt="启用" sortable="true" width="50"/>
                    </a:columns>
                    <a:editors>
                        <a:checkBox id="sys_code_result_grid_ckb"/>
                        <a:textField id="sys_code_result_grid_tf"/>
                        <a:textField id="sys_code_result_grid_tfu" typeCase="upper"/>
                    </a:editors>
                </a:grid>
                <a:grid id="refSysGrid" autoFocus="false" bindTarget="sys_code_ref_ds" marginHeight="170" navBar="true" width="650">
                    <a:toolBar>
                        <a:button type="add"/>
                        <a:button type="clear"/>
                    </a:toolBar>
                    <a:columns>
                        <a:column name="approver_seq" editor="sys_code_ref_grid_nf" prompt="审批组序号" sortable="true" width="100"/>
                        <a:column name="approver_employee" editor="grid_lov" prompt="审核人" width="100"/>
                        <a:column name="review_employee" editor="grid_lov" prompt="复核人" width="100"/>
                        <a:column name="manager_employee" editor="grid_lov" prompt="复核经理" width="100"/>
                        <a:column name="enabled_flag" align="center" editor="sys_code_ref_grid_ckb" prompt="启用" width="80"/>
                    </a:columns>
                    <a:editors>
                        <a:checkBox id="sys_code_ref_grid_ckb"/>
                        <a:textField id="sys_code_ref_grid_tf"/>
                        <a:lov id="grid_lov"/>
                        <a:numberField id="sys_code_ref_grid_nf" allowDecimals="false"/>
                    </a:editors>
                </a:grid>
            </a:form>
        </a:screenBody>
    </a:view>
</a:screen>
