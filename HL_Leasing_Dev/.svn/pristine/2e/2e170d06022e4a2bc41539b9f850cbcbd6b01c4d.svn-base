<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:view>
        <script><![CDATA[
    		function prj_cdd_item_sub_tab_group_back(){
    		    $('${/parameter/@winid}').close();
    		}
    		
    		function prj_cdd_item_sub_tab_group_save(){
    		   // $('prj_cdd_item_sub_tab_group_ds').setSubmitParameter('parent_tab_group_id',${/parameter/@parent_tab_group_id});
    		    $('prj_cdd_item_sub_tab_group_ds').submit();
    		}
    		
    		function hls220_sub_tab_add(ds,record,index){
    		    record.set('parent_tab_group_id',${/parameter/@parent_tab_group_id});
    		}
    	]]></script>
        <a:dataSets>
            <a:dataSet id="prj_cdd_item_sub_tab_group_ds" autoQuery="true" model="hls.HLS220.prj_cdd_item_tab_sub_group" queryUrl="${/request/@context_path}/autocrud/hls.HLS220.prj_cdd_item_tab_sub_group/query?parent_tab_group_id=${/parameter/@parent_tab_group_id}" selectable="true">
                <a:fields>
                    <a:field name="tab_group" lovGridHeight="400" lovHeight="530" lovService="hls.HLS220.prj_cdd_item_tab_group?enabled_flag=Y" lovWidth="480">
                        <a:mapping>
                            <a:map from="tab_group_id" to="tab_group_id"/>
                            <a:map from="tab_group" to="tab_group"/>
                            <a:map from="tab_group_name" to="tab_group_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="enabled_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                </a:fields>
                <a:events>
                    <a:event name="add" handler="hls220_sub_tab_add"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="prj_cdd_item_sub_tab_group_back" text="HLS.BACK"/>
                <a:gridButton click="prj_cdd_item_sub_tab_group_save" text="HLS.SAVE"/>
            </a:screenTopToolbar>
            <a:grid bindTarget="prj_cdd_item_sub_tab_group_ds" height="400" navBar="true" width="500">
                <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="clear"/>
                    <a:button type="delete"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="tab_group" editor="hls220_lov_id" prompt="分组编码" width="150"/>
                    <a:column name="tab_group_name" prompt="分组编码" width="150"/>
                    <a:column name="enabled_flag" align="center" editor="hls220_checkbox_id" prompt="启用" width="50"/>
                </a:columns>
                <a:editors>
                    <a:lov id="hls220_lov_id"/>
                    <a:checkBox id="hls220_checkbox_id"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
