<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="false">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    sr.role_code
                FROM
                    sys_role sr
                WHERE
                    sr.role_id IN
                    (SELECT
                        s.role_id
                    FROM
                        sys_user_role_groups s
                    WHERE
                        s.user_id = ${/session/user_id}
                    )
            ]]></bm:query-sql>
        </bm:operation>
        <!--  <bm:parameters>
            <bm:parameter name="role_type" dataType="varchar2" input="false" output="true" outputPath="@role_type"/>
        </bm:parameters> -->
    </bm:operations>
</bm:model>
