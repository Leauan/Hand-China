<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="false">
    <bm:fields>
        <bm:field name="user_id" displayWidth="200" forDisplay="true" forQuery="true" physicalName="user_id" prompt="用户id"/>
        <bm:field name="description" databaseType="VARCHAR" datatype="java.lang.String" displayWidth="150" forDisplay="true" forQuery="true" physicalName="description" prompt="用户姓名"/>
    </bm:fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT su.user_id,su.description FROM sys_user su #WHERE_CLAUSE#
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field name="user_id" queryExpression="su.user_id=${@user_id}"/>
        <bm:query-field name="description" queryExpression="su.description=${@description}"/>
    </bm:query-fields>
</bm:model>
