<?xml version="1.0" encoding="UTF-8"?>
<a:service xmlns:s="aurora.plugin.script" xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure>
        <s:server-script><![CDATA[
            //importPackage(java.util.zip);
            importPackage(java.io);
            importPackage(org.apache.tools.zip); /*可以传入参数*/
            
            function writeFile(zos, fn, fp) {
                var ze = new ZipEntry(fn);
                zos.putNextEntry(ze);
                transfer(fp, zos);
            }
            
            function transfer(file, os) {
                var fis = new FileInputStream(file);
                var b = new java.lang.reflect.Array.newInstance(java.lang.Byte.TYPE, 1024 * 64);
                var len = -1;
                while ((len = fis.read(b)) != -1) {
                    os.write(b, 0, len);
                }
                fis.close();
            }
            
            
            function getdate() {
                var now = new Date()
                y = now.getFullYear()
                m = now.getMonth() + 1
                d = now.getDate()
                m = m < 10 ? "0" + m : m
                d = d < 10 ? "0" + d : d
                return y + "" + m + "" + d
            }
            $ctx["__request_type__"] = 'file'; //to indicate this request is not a JSON_REQUEST
            var resp = $ctx['_instance.javax.servlet.http.HttpServletResponse'];
            resp.setHeader("Pragma", "No-cache");
            resp.setHeader("Cache-Control", "no-cache, must-revalidate");
            var date_str = getdate();
            var doc_code = '合同文本附件'
            //println(decodeURI($ctx.parameter.doc_code));
            var type = $ctx.parameter.type;
            var filename = doc_code + '-' + date_str + ".zip"
            //
            resp.setDateHeader("Expires", 0);
            resp.setContentType("application/x-msdownload");
            
            try {
                var attachment_batch_dl = $bm('cont.CON580.con_contract_content_download');
                var result = attachment_batch_dl.queryAsMap({
                    table_name: $ctx.parameter.table_name,
                    //842
                    table_pk_value: $ctx.parameter.table_pk_value,
                    //'3597'
                });
                var arr = result.getChildren();
                if (arr.length >= 1) {
                    if (type == 'SIN') {
                        //单个下载
                        resp.setHeader("Content-disposition", "attachment; filename=" + encodeURI(arr[0].file_name, 'utf-8'));
                        var os = resp.getOutputStream();
                        transfer(arr[0].file_path+arr[0].file_name, os);
                        os.flush();
                    }
                    if (type == 'ZIP') {
                        //打包下载
                        resp.setHeader("Content-disposition", "attachment; filename=" + encodeURI(filename));
                        var zos = new ZipOutputStream(resp.getOutputStream());
                        zos.setEncoding("GBK"); //如果是org.apache.tools.zip需要追加字符集
                        for (var i = 0;i < arr.length;i++) {
                            var f = arr[i];
                            if (f.file_path && f.file_name) {
                                writeFile(zos, f.file_name, f.file_path + f.file_name);
                            }
                        }
                        zos.close();
                    }
                }
            } catch (e) {
                var logger = $logger("server-script");
                logger.severe(e.message);
            }
        ]]></s:server-script>
    </a:init-procedure>
</a:service>
