<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:view>
        <a:link id="con_contract_signing_maintain_link" url="${/request/@context_path}/modules/cont/CON544/con_contract_signing_maintain.screen"/>
        <script><![CDATA[
            function con_contract_credit_back_msg_back() {
                $('${/parameter/@winId}').close();
            }
            
            function con_contract_credit_back_msg_confirm() {
                Aurora.Masker.mask($('${/parameter/@winId}').wrap, '正在操作......');
                var contract_credit_back = $('contract_credit_back_id').value;
                var contract_id = '${/parameter/@contract_id}';
                Aurora.request({
                    url: $('contract_credit_back_link').getUrl(),
                    para: {
                        contract_id: contract_id,
                        contract_credit_back: contract_credit_back
                    },
                    success: function(res) {
                        Aurora.SideBar.show({
                            msg: '退回成功',
                            duration: 2000
                        });
                        location.href = $('con_contract_signing_maintain_link').getUrl();
                    },
                    failure: function() {
                        Aurora.Masker.unmask($('${/parameter/@winId}').wrap);
                    },
                    error: function() {
                        Aurora.Masker.unmask($('${/parameter/@winId}').wrap);
                    },
                    scope: this
                });
            }
        ]]></script>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="con_contract_credit_back_msg_back" text="取消"/>
                <a:gridButton click="con_contract_credit_back_msg_confirm" text="确定"/>
            </a:screenTopToolbar>
            <a:form title="退回原因">
                <a:textArea name="contract_credit_back" id="contract_credit_back_id" height="180" prompt="" width="450"/>
            </a:form>
        </a:screenBody>
    </a:view>
</a:screen>
