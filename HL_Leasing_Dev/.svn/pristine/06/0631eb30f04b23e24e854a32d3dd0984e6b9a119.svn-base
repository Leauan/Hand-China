<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure><![CDATA[
	]]></a:init-procedure>
    <a:view>
        <a:link id="update_grant_car" model="hls.HLS051.hls_product_car_discount_update" modelaction="batch_update"/>
        <script><![CDATA[
            function hls051_grant_car_close() {
                $('hls_grant_car_window').close();
            }
            
            function hls051_grant_car_save(ds, record) {
                debugger;
                var ds = $('hls051_plan_to_grant_car_ds');
                var records = ds.getAll();
                var saveData = [];
                for (var i = 0;i < records.length;i++) {
                    var record = records[i];
                    record.set('_status', 'update');
                    record.set('product_plan_id', '${/parameter/@product_plan_id}');
                    saveData.push(record.data)
                }
                Aurora.request({
                    url: $('update_grant_car').getUrl(),
                    para: saveData,
                    success: function(args) {
                        Aurora.Masker.unmask(Ext.getBody());
                        Aurora.SideBar.show({
                            msg: '操作成功',
                            duration: 5000
                        });
                    },
                    failure: function(args) {
                        Aurora.Masker.unmask(Ext.getBody());
                    },
                    error: function(args) {
                        Aurora.Masker.unmask(Ext.getBody());
                    },
                    scope: this
            
                });
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="hls051_product_plan_car_query_ds">
                <a:fields>
                    <a:field name="grant_id"/>
                    <a:field name="description"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="hls051_plan_to_grant_car_ds" autoQuery="true" fetchAll="true" model="hls.HLS051.hls_product_car_discount" queryDataSet="hls051_product_plan_car_query_ds" queryUrl="${/request/@context_path}/autocrud/hls.HLS051.hls_product_car_discount/query?product_plan_id=${/parameter/@product_plan_id}">
                <a:fields>
                    <a:field name="product_grant_id" defaultValue="${/parameter/@product_plan_id}"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="hls051_grant_car_close" text="关闭"/>
                <!-- <a:gridButton click="hls051_grant_aera_query" text="查询"/> -->
                <a:gridButton click="hls051_grant_car_save" text="保存"/>
            </a:screenTopToolbar>
            <a:treeGrid id="hls051_tab1_id_tree_grid_id" bindTarget="hls051_plan_to_grant_car_ds" idField="grant_id" marginHeight="180" marginWidth="30" navBar="true" parentField="parent_grant_id" showCheckBox="true">
                <a:columns>
                    <a:column name="grant_desc" prompt="车系名称" width="400"/>
                </a:columns>
                <!-- <a:editors>
                                <a:comboBox id="tabDs_grid_comb"/>
                            </a:editors> -->
            </a:treeGrid>
            <!-- <a:events>
                    <a:event name="select" handler="hls_doc_layout_tab_select"/>
                </a:events> -->
        </a:screenBody>
    </a:view>
</a:screen>
