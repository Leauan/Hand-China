<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    TO_CHAR(fdate,'yyyy-mm-dd') field,
                    to_number(TO_CHAR(fdate, 'dd')) no
                FROM
                    (SELECT
                        fdate
                    FROM
                        (SELECT
                            TRUNC(to_date(${@year}
                            ||'-'
                            ||${@month}
                            || '-'
                            || 1, 'yyyy-mm-dd'), 'MONTH') + LEVEL - 1 AS fdate
                        FROM
                            dual CONNECT BY LEVEL <= 31
                        ) t
                    WHERE
                        TO_CHAR(fdate, 'MM') = TO_CHAR(to_date(${@year}
                        ||'-'
                        ||${@month}
                        || '-'
                        || 1, 'yyyy-mm-dd'), 'MM')
                    )
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
