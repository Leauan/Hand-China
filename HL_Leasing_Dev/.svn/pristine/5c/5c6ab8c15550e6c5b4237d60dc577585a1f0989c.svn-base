<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure/>
    <a:view>
        <a:link id="cont346_rent_balance_excel_link" url="${/request/@context_path}/modules/cont/CON346/con_rent_balance_query.svc"/>
        <script><![CDATA[
            function con346_rent_balance_reset() {
                $('con346_rent_balance_query_ds').reset();
            }
            
             function con346_rent_balance_query() {
                $('con346_rent_balance_result_ds').query();
            }
            
            function amtSumInfo(data, name) {
                if (name == 'loan_prj_name') {
                    return '<font color=red>' + '合计:' + '</font>';
                } else {
                    return colum_caculateTotal(data, name);
                }
            }
            
            function colum_caculateTotal(data, name) {
                var total = 0;
                var length = data.length;
                var value = 0;
                for (var i = 0;i < length;i++) {
            
                    if (Ext.isEmpty(data[i].get(name))) {
                        value = 0;
                    } else {
                        value = data[i].get(name);
                    }
                    total = plus(total, value);
                }
                return '<font color=red>' + Aurora.formatMoney(total) + '</font>';
            
            }
            
            function con346_rent_balance_excel() {
                var url;
                url = $('cont346_rent_balance_excel_link').getUrl() + '?';
                window.open(url);
            }
        ]]></script>
        <a:dataSets>
            <!-- 查询的ds -->
            <a:dataSet id="con346_rent_balance_query_ds">
                <a:fields>
                    <!-- 合同承租人-->
                    <a:field name="contract_number_n" lovHeight="500" lovService="cont.CON345.con_contract_for_lov" lovWidth="600" title="合同信息">
                        <a:mapping>
                            <a:map from="contract_id" to="contract_id"/>
                            <a:map from="contract_number" to="contract_number_n"/>
                        </a:mapping>
                    </a:field>
                    <!-- 经销商-->
                    <a:field name="master_bp_name" lovHeight="500" lovService="cont.CON345.hls_bp_master_agent_lov" lovWidth="600" title="经销店">
                        <a:mapping>
                            <a:map from="bp_code" to="agent_code"/>
                            <a:map from="bp_name" to="master_bp_name"/>
                        </a:mapping>
                    </a:field>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="con346_rent_balance_result_ds" autoQuery="true" model="cont.CON346.con_rent_balance_query" pageSize="60" queryDataSet="con346_rent_balance_query_ds"/>
        </a:dataSets>
        <a:screenTopToolbar>
            <a:screenTitle/>
            <a:gridButton click="con346_rent_balance_query" text="HLS.QUERY"/>
            <a:gridButton click="con346_rent_balance_reset" text="HLS.RESET"/>
            <a:gridButton click="con346_rent_balance_excel" text="导出"/>
        </a:screenTopToolbar>
        <a:screenBody>
            <a:form column="3" labelWidth="100" marginWidth="50" title="查询条件">
                <a:datePicker name="base_date" bindTarget="con346_rent_balance_query_ds" format="yyyy-mm" prompt="基准月"/>
                <a:textField name="tenant_name" bindTarget="con346_rent_balance_query_ds" prompt="承租人名称"/>
                <a:lov name="contract_number_n" bindTarget="con346_rent_balance_query_ds" prompt="合同编号"/>
                <a:lov name="master_bp_name" bindTarget="con346_rent_balance_query_ds" prompt="经销店编号"/>
            </a:form>
            <a:grid id="con346_con_rent_balance_grid_ds" bindTarget="con346_rent_balance_result_ds" marginHeight="180" marginWidth="50" navBar="true">
                <a:columns>
                    <a:column name="agent_code" align="center" lock="true" prompt="经销商编码" width="80"/>
                    <a:column name="agent_name" align="center" prompt="经销商名称" width="150"/>
                    <a:column name="tenant_code" align="center" prompt="承租人编码" width="150"/>
                    <a:column name="tenant_name" align="center" prompt="承租人名称" width="150"/>
                    <a:column name="liv_province" align="center" prompt="省份" width="150"/>
                    <a:column name="contract_number" align="center" prompt="合同编码" width="150"/>
                    <a:column name="inception_of_lease" align="center" prompt="起租日" width="150"/>
                    <a:column name="product_name_write" align="center" prompt="产品名称" width="150"/>
                    <a:column name="series_id_n" align="center" prompt="车型" width="150"/>
                    <a:column name="int_rate_display" align="center" prompt="利率" width="130"/>
                    <a:column name="base_rate" align="center" prompt="基准利率" width="130"/>
                    <a:column name="lease_times" align="center" prompt="租赁期间" width="150"/>
                    <a:column name="down_payment_ratio" align="center" prompt="首付比例" width="130"/>
                    <a:column name="invoice_price" align="center" footerRenderer="amtSumInfo" prompt="购置价" renderer="Aurora.formatMoney" width="150"/>
                    <a:column name="residual_value" align="center" footerRenderer="amtSumInfo" prompt="留购价" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="total_rental" align="center" footerRenderer="amtSumInfo" prompt="租金" renderer="Aurora.formatMoney" width="150"/>
                    <a:column name="down_payment" align="center" footerRenderer="amtSumInfo" prompt="首付款" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="current_due_date" align="center" prompt="当期收款预定日" width="150"/>
                    <a:column name="current_due_amount" align="center" footerRenderer="amtSumInfo" prompt="当期应收款金额" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="current_received_amount" align="right" footerRenderer="amtSumInfo" prompt="当期已收款金额" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="current_unreceived_amount" footerRenderer="amtSumInfo" prompt="当期未收款金额" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="month_due_amount" align="right" footerRenderer="amtSumInfo" prompt="当月末应收款余额合计" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="month_principal_amount" align="right" footerRenderer="amtSumInfo" prompt="当月末本金余额合计" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="month_interest_amount" align="right" footerRenderer="amtSumInfo" prompt="当月末利息余额合计" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="month_vat_interest_amount" align="right" footerRenderer="amtSumInfo" prompt="当月末利息余额增值税" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="month_residual_amount" align="right" footerRenderer="amtSumInfo" prompt="当月末留购金余额" renderer="Aurora.formatMoney" width="130"/>
                    <a:column name="overdue_times" align="center" prompt="逾期期数" width="130"/>
                    <a:column name="overdue_days" align="right" prompt="逾期天数" width="130"/>
                    <a:column name="month_overdue_amount" align="right" footerRenderer="amtSumInfo" prompt="当月逾期金额合计" renderer="Aurora.formatMoney" width="130"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
