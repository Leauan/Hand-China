<bm:model xmlns:e="aurora.service.exception" xmlns:o="aurora.database.local.oracle" xmlns:bm="http://www.aurora-framework.org/schema/bm" xmlns:f="aurora.database.features" alias="v" baseTable="HLS_CAR_TYPE">
    <bm:fields>
        <bm:field name="type_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="TYPE_ID" prompt="HLS_CAR_TYPE.TYPE_ID"/>
        <bm:field name="model_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="MODEL_ID" prompt="HLS_CAR_TYPE.MODEL_ID"/>
        <bm:field name="brand_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="BRAND_ID" prompt="HLS_CAR_TYPE.BRAND_ID"/>
        <bm:field name="series_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="SERIES_ID" prompt="HLS_CAR_TYPE.SERIES_ID"/>
        <bm:field name="type_code" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="TYPE_CODE" prompt="HLS_CAR_TYPE.TYPE_CODE"/>
        <!-- <bm:field name="description_id" databaseType="NUMBER" datatype="java.lang.Long" multiLanguage="true" multiLanguageDescField="type_dis" physicalName="DESCRIPTION_ID" prompt="HLS_CAR_TYPE.DESCRIPTION_ID"/> -->
        <bm:field name="description" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="DESCRIPTION" prompt="HLS_CAR_TYPE.DESCRIPTION"/>
        <bm:field name="enabled_flag" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="ENABLED_FLAG" prompt="HLS_CAR_TYPE.ENABLED_FLAG"/>
        <bm:field name="vehicle_source_n"/>
        <bm:field name="trim_color_n"/>
        <bm:field name="vehicle_source" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="VEHICLE_SOURCE" prompt="HLS_CAR_TYPE.VEHICLE_SOURCE"/>
        <bm:field name="trim_color" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="TRIM_COLOR" prompt="HLS_CAR_TYPE.TRIM_COLOR"/>
    </bm:fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    v.type_id,
                    v.brand_id,
                    v.series_id,
                    v.model_id,
                    v.type_code,
                    v.description,
                    v.enabled_flag,
                    v.vehicle_source,
                    v.trim_color,
                    v.vehicle_source_n,
                    v.trim_color_n
                FROM
                    hls_car_type_vl v #WHERE_CLAUSE#
                ORDER BY
                    v.type_code
            ]]></bm:query-sql>
        </bm:operation>
        <bm:operation name="insert">
            <bm:parameters>
                <bm:parameter name="type_id" input="false" output="true" outputPath="@type_id"/>
            </bm:parameters>
            <bm:update-sql><![CDATA[
        		begin
				  HLS222_SAVE_PKG.type_manage(p_sql_type     => 'INSERT',
                                              p_type_id         =>${@type_id},
                                              p_brand_id       => ${@brand_id},
                                              p_series_id      => ${@series_id},
                                              p_model_id     => ${@model_id},
                                              p_type_code     => ${@type_code},
                                              p_description    => ${@description},
                                              P_vehicle_source=> ${@vehicle_source},
                                              p_trim_color => ${@trim_color},
                                              p_enabled_flag => ${@enabled_flag},
                                              p_user_id       => ${/session/@user_id});
				end;
        	]]></bm:update-sql>
        </bm:operation>
        <bm:operation name="update">
            <bm:update-sql><![CDATA[
        		begin
				   HLS222_SAVE_PKG.type_manage(p_sql_type		=> 'UPDATE',
				                              p_type_id        =>${@type_id},
				  							     p_brand_id     => ${@brand_id},
				  							     p_series_id    => ${@series_id},
				  							     p_model_id     => ${@model_id},
								                 p_type_code   => ${@type_code},
								                 p_description  => ${@description},
								                 p_enabled_flag => ${@enabled_flag},
								                 p_user_id      => ${/session/@user_id},
								                 p_vehicle_source		=> ${@vehicle_source},
								                 p_trim_color		=> ${@trim_color});
				end;
        	]]></bm:update-sql>
        </bm:operation>
        <bm:operation name="delete">
            <bm:update-sql><![CDATA[
        		begin
				   HLS222_SAVE_PKG.type_manage(p_sql_type		=> 'DELETE',
				                              p_type_id        =>${@type_id},
				  							     p_brand_id     => ${@brand_id},
				  							     p_series_id    => ${@series_id},
				  							     p_model_id     => ${@model_id},
								                 p_type_code   => ${@type_code},
								                 p_description  => ${@description},
								                 p_enabled_flag => ${@enabled_flag},
								                 p_user_id      => ${/session/@user_id},
								                 p_vehicle_source		=> ${@vehicle_source},
								                 p_trim_color		=> ${@trim_color});
				end;
        	]]></bm:update-sql>
        </bm:operation>
    </bm:operations>
    <bm:data-filters>
        <bm:data-filter name="brand_id" enforceOperations="query" expression="v.brand_id=${@brand_id}"/>
        <bm:data-filter name="series_id" enforceOperations="query" expression="v.series_id=${@series_id}"/>
        <bm:data-filter name="model_id" enforceOperations="query" expression="v.model_id=${@model_id}"/>
    </bm:data-filters>
    <bm:query-fields>
        <!--   <bm:query-field name="series_id" queryExpression="v.series_id=${@series_id}"/> -->
        <bm:query-field name="model_id" queryExpression="v.model_id=${@model_id}"/>
        <bm:query-field name="type_id" queryExpression="v.type_id=${@type_id}"/>
    </bm:query-fields>
    <bm:features>
        <f:standard-who/>
        <o:sequence-pk/>
    </bm:features>
    <bm:primary-key>
        <bm:pk-field name="type_id"/>
    </bm:primary-key>
    <e:exception-descriptor-config>
        <e:exception-descriptor exception="java.sql.SQLException" handleClass="aurora.database.SQLExceptionDescriptor">
            <e:error-message code="1" message="同一品牌车系下车型重复"/>
        </e:exception-descriptor>
    </e:exception-descriptor-config>
</bm:model>
