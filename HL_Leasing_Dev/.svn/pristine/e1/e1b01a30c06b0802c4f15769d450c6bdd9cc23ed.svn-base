<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view template="default">
        <script><![CDATA[
            function gld_company_accounts_ref_grid_submit() {
                //debugger;
                var result_ds = $('gld_company_accounts_ref_ds');
                if (result_ds.validate()) {
                    result_ds.submit();
                }
            }
            
            function gld_company_accounts_ref_grid_query() {
                $('gld_company_accounts_ref_ds').query();
            }
            
            function gld_company_accounts_ref_grid_add() {
                $('gld_company_accounts_ref_grid').showEditorByRecord($('gld_company_accounts_ref_ds').create());
            }
            
            function responsibilityCenterDs_grid_clear() {
                $('gld_company_accounts_ref_grid').clear();
            }
            
            function onUpdate_query_ds(ds, record, name, value, oldvalue) {
                if (name == 'set_of_books_id') {
                    if (value != oldvalue) {
                        record.set('account_id', '');
                        record.set('account_desc', '');
                    }
                    record.getField('account_desc').setLovPara('set_of_books_id', value);
                    if (value != null && value != '') {
                        record.getField('account_desc').setReadOnly(false);
                    } else {
                        record.getField('account_desc').setReadOnly(true);
                    }
                }
            }
            
            function onUpdate_grid_ds(ds, record, name, value, oldvalue) {
                if (name == 'set_of_books_id') {
                    if (value != oldvalue) {
                        record.set('account_id', '');
                        record.set('account_code', '');
                        record.set('account_desc', '');
                    }
                    record.getField('account_code').setLovPara('set_of_books_id', value);
                }
                if (name == 'ref_code1_desc') {
                    record.set('ref_code2_desc', '');
                    record.set('ref_code2', '');
                }
                if (name == 'ref_code2_desc') {
                    record.set('ref_code1_desc', '');
                    record.set('ref_code1', '');
                }
            }
            
            function onQuery_grid_ds(ds) {
                // debugger;
                // var records = ds.getAll();
                // var record;
                // var account_code;
                // var count = ds.totalCount;
                // for(var i = 0;i<count;i++){
                // record = records[i];
                // account_code = record.getField('account_code');
                // if(account_code == undefined){
                // null;
                // }else{
                // record.getField('account_code').setLovPara('set_of_books_id', record.get('set_of_books_id'));			
                // }
                // }
            }
            
            function editorFun(record, value) {
                if (record.isNew == true) {
                    return 'gld_company_accounts_ref_grid_editor_lov';
                } else {
                    return '';
                }
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="enable_flag_ds">
                <a:datas>
                    <a:record name="是" code="Y"/>
                    <a:record name="否" code="N"/>
                </a:datas>
            </a:dataSet>
            <a:dataSet id="ref_code_ds" lookupCode="GLD_ACCOUNTS_REF"/>
            <a:dataSet id="gld_company_accounts_ref_query_ds" model="gld.GLD160.gld_company_accounts_ref">
                <a:fields>
                    <a:field name="account_set_name" lovGridHeight="330" lovHeight="460" lovLabelWidth="110" lovService="gld.GLD160.gld_account_sets_lov" lovWidth="600" title="科目表查询">
                        <a:mapping>
                            <a:map from="account_set_id" to="set_of_books_id"/>
                            <a:map from="account_set_name" to="account_set_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="set_of_books_id"/>
                    <a:field name="account_id"/>
                    <a:field name="account_desc" lovGridHeight="330" lovHeight="460" lovLabelWidth="110" lovService="gld.GLD160.gld_accounts_lov" lovWidth="600" readOnly="true" title="科目查询">
                        <a:mapping>
                            <a:map from="account_id" to="account_id"/>
                            <a:map from="description" to="account_desc"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="enabled_flag"/>
                    <a:field name="enabled_flag_desc" displayField="name" options="enable_flag_ds" prompt="是否启用" returnField="enabled_flag" valueField="code"/>
                </a:fields>
                <a:events>
                    <a:event name="update" handler="onUpdate_query_ds"/>
                </a:events>
            </a:dataSet>
            <a:dataSet id="gld_company_accounts_ref_ds" autoQuery="true" model="gld.GLD160.gld_company_accounts_ref" pageSize="15" queryDataSet="gld_company_accounts_ref_query_ds" selectable="true">
                <a:fields>
                    <a:field name="set_of_books_id"/>
                    <a:field name="account_set_code" lovGridHeight="330" lovHeight="460" lovLabelWidth="110" lovService="gld.GLD160.gld_account_sets_lov" lovWidth="600" required="true" title="科目表查询">
                        <a:mapping>
                            <a:map from="account_set_id" to="set_of_books_id"/>
                            <a:map from="account_set_code" to="account_set_code"/>
                            <a:map from="account_set_name" to="account_set_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="account_set_name"/>
                    <a:field name="company_id" defaultValue="${/session/@company_id}" required="true"/>
                    <a:field name="company_id_desc" defaultValue="国环租赁"/>
                    <a:field name="account_id"/>
                    <a:field name="account_code" lovGridHeight="330" lovHeight="460" lovLabelWidth="110" lovService="gld.GLD160.gld_accounts_lov" lovWidth="600" required="true" title="科目查询">
                        <a:mapping>
                            <a:map from="account_id" to="account_id"/>
                            <a:map from="account_code" to="account_code"/>
                            <a:map from="description" to="account_desc"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="account_desc"/>
                    <a:field name="enabled_flag" checkedValue="Y" defaultValue="Y" unCheckedValue="N"/>
                    <a:field name="ref_code1_desc" displayField="code_value_name" options="ref_code_ds" returnField="ref_code1" valueField="code_value"/>
                    <a:field name="ref_code2_desc" displayField="code_value_name" options="ref_code_ds" returnField="ref_code2" valueField="code_value"/>
                    <a:field name="ref_code3_desc" displayField="code_value_name" options="ref_code_ds" returnField="ref_code3" valueField="code_value"/>
                    <a:field name="ref_code4_desc" displayField="code_value_name" options="ref_code_ds" returnField="ref_code4" valueField="code_value"/>
                    <a:field name="ref_code5_desc" displayField="code_value_name" options="ref_code_ds" returnField="ref_code5" valueField="code_value"/>
                    <a:field name="ref_code6_desc" displayField="code_value_name" options="ref_code_ds" returnField="ref_code6" valueField="code_value"/>
                </a:fields>
                <a:events>
                    <a:event name="update" handler="onUpdate_grid_ds"/>
                    <a:event name="query" handler="onQuery_grid_ds"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar height="50">
                <a:screenTitle/>
                <a:gridButton click="gld_company_accounts_ref_grid_query" text="HLS.QUERY"/>
                <a:gridButton click="gld_company_accounts_ref_grid_add" text="HLS.NEW"/>
                <a:gridButton click="gld_company_accounts_ref_grid_submit" text="HLS.SAVE"/>
                <a:gridButton click="responsibilityCenterDs_grid_clear" text="HLS.CLEAR"/>
            </a:screenTopToolbar>
            <a:form column="3" labelWidth="100" title="HAP_QUERY_TITLE">
                <a:lov name="account_set_name" bindTarget="gld_company_accounts_ref_query_ds" prompt="科目表"/>
                <a:lov name="account_desc" bindTarget="gld_company_accounts_ref_query_ds" prompt="科目"/>
                <a:comboBox name="enabled_flag_desc" bindTarget="gld_company_accounts_ref_query_ds"><![CDATA[
            	]]></a:comboBox>
            </a:form>
            <a:grid id="gld_company_accounts_ref_grid" bindTarget="gld_company_accounts_ref_ds" marginHeight="180" marginWidth="30" navBar="true">
                <a:columns>
                    <a:column name="company_id_desc" prompt="公司" width="200"/>
                    <a:column name="account_set_code" editorFunction="editorFun" prompt="科目表代码" width="150"/>
                    <a:column name="account_set_name" prompt="科目表名称"/>
                    <a:column name="account_code" editorFunction="editorFun" prompt="科目代码"/>
                    <a:column name="account_desc" prompt="科目名称" width="200"/>
                    <a:column name="enabled_flag" editor="gld_company_accounts_ref_grid_editor_check" prompt="启用"/>
                    <a:column name="ref_code1_desc" editor="gld_company_accounts_ref_grid_editor_comb" prompt="辅助字段1"/>
                    <a:column name="ref_code2_desc" editor="gld_company_accounts_ref_grid_editor_comb" prompt="辅助字段2"/>
                    <a:column name="ref_code3_desc" editor="gld_company_accounts_ref_grid_editor_comb" prompt="辅助字段3"/>
                    <a:column name="ref_code4_desc" editor="gld_company_accounts_ref_grid_editor_comb" prompt="辅助字段4"/>
                    <a:column name="ref_code5_desc" editor="gld_company_accounts_ref_grid_editor_comb" prompt="辅助字段5"/>
                    <a:column name="ref_code6_desc" editor="gld_company_accounts_ref_grid_editor_comb" prompt="辅助字段6"/>
                </a:columns>
                <a:editors>
                    <a:textField id="gld_company_accounts_ref_grid_editor_tf"/>
                    <a:comboBox id="gld_company_accounts_ref_grid_editor_comb"/>
                    <a:checkBox id="gld_company_accounts_ref_grid_editor_check"/>
                    <a:lov id="gld_company_accounts_ref_grid_editor_lov"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
