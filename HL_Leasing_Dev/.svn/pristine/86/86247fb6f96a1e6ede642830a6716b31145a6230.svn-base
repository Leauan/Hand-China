<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" dynamiccreateenabled="true" trace="true">
    <a:init-procedure/>
    <a:view>
        <a:link id="open_hls_agent_linkage_detail_query_link" url="${/request/@context_path}/modules/hls/HLS890/hls_agent_linkage_detail_query.screen"/>
        <a:link id="update_confirm_flag" model="hls.HLS892.update_confirm_flag" modelaction="batch_update"/>
        <script><![CDATA[
           function open_hls_linkage_bp_number_win(ds_id, record_id) {
                var record = $(ds_id).findById(record_id);
                var param = record.data;
                var hd_id = record.get('hd_id');
                var final_count = record.get('final_count');
                var cars_num = record.get('cars_num');
                var linkage_amount = record.get('linkage_amount');
                var win = new Aurora.Window({
                    id: 'hls_linkage_bp_number_window',
                    url: $('open_hls_agent_linkage_detail_query_link').getUrl(),
                    params: {
                        hd_id: hd_id,
                        final_count: final_count,
                        cars_num: cars_num,
                        linkage_amount: linkage_amount,
                        winId: 'hls_linkage_bp_number_window'
                    },
                    title: '联动矩阵',
                    width: 600,
                    height: 360
                });
            
            }
            window['${/parameter/@layout_code}_dynamic_link_renderer'] = function(value, record, name, config_record) {
                if (name == 'detail' && !record.isNew) {
                    return '<a href="javascript:open_hls_linkage_bp_number_win(\'' + record.ds.id + '\',\'' + record.id + '\')">' + '联动矩阵' + '</a>';
                }
                return value;
            };
            
            window['${/parameter/@layout_code}_user_button1_layout_dynamic_click'] = function() {
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'hls_linkage_bp_month');
                var records = $(ds_id).getSelected();
                debugger;
                if ($(ds_id).isModified()) {
                    Aurora.showMessage('提示', '请先保存!');
                    return;
                }
                if (records.length == 0) {
                    Aurora.showMessage('提示', '至少选择一条确认!');
                    return;
                }
                var param = [];
                for (var i = 0;i < records.length;i++) {
                    var record = records[i];
                    var record_id = record.get('record_id');
                    param.push({
                        'record_id': record_id,
                        'flag':'Y',
                        '_status': 'update'
                    });
                }
                Aurora.request({
                    url: $('update_confirm_flag').getUrl(),
                    para: param,
                    success: function(res) {
                        Aurora.SideBar.show({
                            msg: '确认成功',
                            duration: 2000
                        });
                        $(ds_id).query();
                    },
                    failure: function() {
                        window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    },
                    error: function() {
                        window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    },
                    scope: this
                });
            };
             window['${/parameter/@layout_code}_user_button2_layout_dynamic_click'] = function() {
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'hls_linkage_bp_month');
                var records = $(ds_id).getSelected();
                debugger;
                if ($(ds_id).isModified()) {
                    Aurora.showMessage('提示', '请先保存!');
                    return;
                }
                if (records.length == 0) {
                    Aurora.showMessage('提示', '至少选择一条确认!');
                    return;
                }
                var param = [];
                for (var i = 0;i < records.length;i++) {
                    var record = records[i];
                    var record_id = record.get('record_id');
                    param.push({
                        'record_id': record_id,
                        'flag':'R',
                        '_status': 'update'
                    });
                }
                Aurora.request({
                    url: $('update_confirm_flag').getUrl(),
                    para: param,
                    success: function(res) {
                        Aurora.SideBar.show({
                            msg: '确认成功',
                            duration: 2000
                        });
                        $(ds_id).query();
                    },
                    failure: function() {
                        window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    },
                    error: function() {
                        window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    },
                    scope: this
                });
            };
            //更新时调用
            window['${/parameter/@bp_seq}${/parameter/@layout_code}_on_layout_dynamic_update'] = function(ds, record, name, value, old_value, bp_seq) {
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'hls_linkage_bp_month');
                if (ds.id == ds_id) {
                    if (name == 'modify_count') {
                        var last_month_count = record.get('last_month_count');
                        var last_mod_count = record.get('last_mod_count');
                        var last_modify_count = record.get('last_modify_count');
                        var final_count = last_month_count - last_modify_count + value;
                        record.set('final_count', final_count);
                    }
            
                }
            };
            //保存方法
            window['${/parameter/@layout_code}_SAVE_LAYOUT_DYNAMIC_CLICK'] = function(nextStep) {
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'hls_linkage_bp_month');
                $(ds_id).submit();
            }
        ]]></script>
        <a:screen-include screen="modules/cont/CON500/con_contract_get_layout_code.screen"/>
    </a:view>
</a:screen>
