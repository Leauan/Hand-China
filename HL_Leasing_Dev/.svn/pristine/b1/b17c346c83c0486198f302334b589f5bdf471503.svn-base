                                <a:column name="submit_time" align="center" prompt="实际发送日期" renderer="Aurora.formatDate" width="100"/>
                                <a:column name="logs" align="center" prompt="日志" renderer="on_yonda_hls_tl_itfc_detail_renderer" width="80"/>
                            </a:columns>
                        </a:grid>
