                    <a:events>
                        <a:event name="enterdown" handler="query_tl_itfc"/>
                    </a:events>
                </a:textField>
                <a:comboBox name="write_off_flag_display" bindTarget="yonda_hls_tl_itfc_query_ds" prompt="核销状态">
                    <a:events>
                        <a:event name="enterdown" handler="query_tl_itfc"/>
                    </a:events>
                </a:comboBox>
            </a:form>
