                    } else {
                        url = $('${/parameter/@layout_code}_prj500_cdd_uploadFile_id').getUrl() + '?table_name=AST_CON_INSURANCE_2&header_id=' + record.get('ast_con_car_insurance_id');
                    }
                    var win = new Aurora.Window({
