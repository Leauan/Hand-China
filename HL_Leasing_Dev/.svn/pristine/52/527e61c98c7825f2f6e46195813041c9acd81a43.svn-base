<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure><![CDATA[
	]]></a:init-procedure>
    <a:view>
        <a:link id="update_ebank_area" model="ebank.EBANK_CSH110.csh_to_area_update" modelaction="batch_update"/>
        <script><![CDATA[
            function csh_area_closed() {
                $('chose_window').close();
            }
            
            function csh_area_save(ds, record) {
                debugger;
                var ds = $('csh_to_area_ds');
                var records = ds.getAll();
                //console.log(records);
                var saveData = [];
                for (var i = 0;i < records.length;i++) {
                    var record = records[i];
                    record.set('_status', 'update');
                    record.set('ebank_id', '${/parameter/@ebank_id}');
                    record.set('ebank_spd_flag', '${/parameter/@ebank_spd_flag}');
                    saveData.push(record.data)
                }
                Aurora.request({
                    url: $('update_ebank_area').getUrl(),
                    para: saveData,
                    success: function(args) {
                        Aurora.Masker.unmask(Ext.getBody());
                        Aurora.SideBar.show({
                            msg: '操作成功',
                            duration: 5000
                        });
                    },
                    failure: function(args) {
                        Aurora.Masker.unmask(Ext.getBody());
                    },
                    error: function(args) {
                        Aurora.Masker.unmask(Ext.getBody());
                    },
                    scope: this
            
                });
            }
            // showCheckBox="true"
        ]]></script>
        <a:dataSets>
            <a:dataSet id="hls051_product_plan_area_query_ds">
                <a:fields>
                    <a:field name="area_code"/>
                    <a:field name="description"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="csh_to_area_ds" autoQuery="true" fetchAll="true" model="ebank.EBANK_CSH110.csh_ebank_province_city" queryDataSet="hls051_product_plan_area_query_ds" queryUrl="${/request/@context_path}/autocrud/ebank.EBANK_CSH110.csh_ebank_province_city/query?ebank_id=${/parameter/@ebank_id}&amp;ebank_spd_flag=${/parameter/@ebank_spd_flag}">
                <a:fields>
                    <a:field name="ebank_id" defaultValue="${/parameter/@ebank_id}"/>
                    <a:field name="ebank_spd_flag" checkedValue="0" defaultValue="${/parameter/@ebank_spd_flag}" uncheckedValue="1"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="csh_area_closed" text="关闭"/>
                <a:gridButton click="csh_area_save" text="保存"/>
            </a:screenTopToolbar>
            <a:treeGrid id="csh_tab1_id_tree_grid_id" bindTarget="csh_to_area_ds" idField="area_id" marginHeight="180" marginWidth="30" navBar="true" parentField="parent_area_id">
                <a:columns>
                    <a:column name="area_desc" prompt="省市分行" width="300"/>
                    <a:column name="ebank_num" editor="editor_num" prompt="大额行号" width="300"/>
                    <a:column name="notes" editor="editor_ef" prompt="银行名称" width="300"/>
                    <a:column name="ebank_spd_flag" align="center" editor="editor_sub_check" prompt="浦发标志" width="80"/>
                </a:columns>
                <a:editors>
                    <a:numberField id="editor_num"/>
                    <a:textField id="editor_ef"/>
                    <a:checkBox id="editor_sub_check"/>
                </a:editors>
            </a:treeGrid>
        </a:screenBody>
    </a:view>
</a:screen>
