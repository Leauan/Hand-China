<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:view>
        <script><![CDATA[
			function yonda_rpt010_query_fun(){
			    $('yonda_rpt010_result_ds').query();
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="yonda_rpt010_query_ds" autoCreate="true">
                <a:fields>
                    <a:field name="contract_number" autoComplete="true" lovGridHeight="300" lovHeight="450" lovService="cont.CON500.con_contract_number_lov" lovWidth="500" title="HLS.CONTRACT_NUMBER">
                        <a:mapping>
                            <a:map from="contract_number" to="contract_number"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="bp_name" autoComplete="true" lovGridHeight="350" lovHeight="500" lovService="basic.hls_bp_master_v_for_lov" lovWidth="500" title="HLS.BP_TITLE">
                        <a:mapping>
                            <a:map from="bp_id" to="bp_id"/>
                            <a:map from="bp_name" to="bp_name"/>
                        </a:mapping>
                    </a:field>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="yonda_rpt010_result_ds" model="rpt.RPT010.yonda_coc_report" queryDataSet="yonda_rpt010_query_ds"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="yonda_rpt010_query_fun" text="查询"/>
            </a:screenTopToolbar>
            <a:form column="2" title="查询条件">
                <a:lov name="contract_number" bindTarget="yonda_rpt010_query_ds" prompt="合同编号"/>
                <a:lov name="bp_name" bindTarget="yonda_rpt010_query_ds" prompt="商业伙伴"/>
                <a:datePicker name="signing_date_from" bindTarget="yonda_rpt010_query_ds" prompt="签约日期从"/>
                <a:datePicker name="signing_date_to" bindTarget="yonda_rpt010_query_ds" prompt="到"/>
                <a:datePicker name="incept_confirm_date_from" bindTarget="yonda_rpt010_query_ds" prompt="起租日期从"/>
                <a:datePicker name="incept_confirm_date_to" bindTarget="yonda_rpt010_query_ds" prompt="到"/>
            </a:form>
            <a:grid id="yonda_rpt010_gd_result" bindTarget="yonda_rpt010_result_ds" marginHeight="200" marginWidth="100" navBar="true">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="contract_number" prompt="合同编号"/>
                    <a:column name="bp_info" prompt="承租人信息"/>
                    <a:column name="bp_name" prompt="承租人名称"/>
                    <a:column name="bp_type" prompt="承租人类型"/>
                    <a:column name="id_card_no" prompt="身份证号"/>
                    <a:column name="ref_v03" prompt="法人代表"/>
                    <a:column prompt="承租人所属行业"/>
                    <a:column prompt="租人企业规模"/>
                    <a:column name="business_license_num" prompt="工商注册号"/>
                    <a:column name="tax_registry_num" prompt="税务登记号"/>
                    <a:column name="lease_title" prompt="租赁物基本信息"/>
                    <a:column prompt="租赁物使地"/>
                    <a:column name="rent_info" prompt="租金信息"/>
                    <a:column name="lease_item_amount" align="right" prompt="融资额(万元)"/>
                    <a:column name="rental_total" align="right" prompt="租金总额(万元)"/>
                    <a:column name="lease_charge" align="right" prompt="手续费(万元)"/>
                    <a:column name="other_fee2" align="right" prompt="其他一次性支出(万元)"/>
                    <a:column name="currency" prompt="币种"/>
                    <a:column name="guarantee_info" prompt="担保及关联交易"/>
                    <a:column prompt="有无担保"/>
                    <a:column prompt="担保金额(万元)"/>
                    <a:column prompt="担保人"/>
                    <a:column prompt="承租人是否关联方"/>
                    <a:column name="others_info" prompt="其他信息"/>
                    <a:column name="business_type" prompt="租赁方式"/>
                    <a:column name="trans_info" prompt="委托人/转租人/"/>
                    <a:column name="signing_date" prompt="合同生效日期"/>
                    <a:column name="lease_month" prompt="租赁期限(月)"/>
                    <a:column prompt="补充说明"/>
                    <a:column name="lease_name" prompt="租赁物名称"/>
                    <a:column prompt="租赁物类型(大类)"/>
                    <a:column prompt="租赁物类型(小类)"/>
                    <a:column name="lease_item_amount" prompt="租赁物价款(万元)"/>
                    <a:column name="lease_num" prompt="租赁物数量"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
