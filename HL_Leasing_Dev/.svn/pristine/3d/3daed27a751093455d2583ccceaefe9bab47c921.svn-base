<a:screen xmlns:c="aurora.application.action" xmlns:p="uncertain.proc" xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:init-procedure>
        <a:model-query fetchAll="true" model="hls.HLS891.linkage_sheet_columns" rootPath="/model/linkage_sheet_columns"/>
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
            function colorChangeFuntion(value, record, name) {
                var final_count = '${/parameter/@final_count}';
                if (value <= final_count) {
                    return '<div style="background-color:#FFFF00">' + value + '</div>';
                }else{
                    return value;
                }
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="hls_linkage_hd_ds" autoQuery="true" queryUrl="${/request/@context_path}/autocrud/hls.HLS891.linkage_submit_wfl/query?record_id=${/parameter/@record_id}">
                <a:fields>
                    <a:field name="bp_name" readOnly="true"/>
                    <a:field name="month" readOnly="true"/>
                    <a:field name="modify_count" readOnly="true"/>
                    <a:field name="linkage_desc" readOnly="true"/>
                    <a:field name="last_modify_count" readOnly="true"/>
                    <a:field name="last_month_count" readOnly="true"/>
                    <a:field name="final_count" readOnly="true"/>
                    <a:field name="hd_id"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="hls890_agent_linkage_number_ds" autoPageSize="true" autoQuery="true" bindName="line" bindTarget="hls_linkage_hd_ds" fetchAll="true" model="hls.HLS891.hls_linkage_bp_number" selectable="true" submitUrl="${/request/@context_path}/modules/hls/HLS890/hls_linkage_detail_create.svc"><![CDATA[
                
            ]]></a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:form column="1" labelWidth="140" marginWidth="80" title="基本信息">
                <a:hBox labelWidth="120">
                    <a:textField name="bp_name" bindTarget="hls_linkage_hd_ds" prompt="经销商" width="428"/>
                    <a:textField name="month" bindTarget="hls_linkage_hd_ds" prompt="月份"/>
                    <a:textField name="linkage_desc" bindTarget="hls_linkage_hd_ds" prompt="所选政策描述"/>
                </a:hBox>
                <a:hBox labelWidth="120">
                    <a:numberField name="last_month_count" allowDecimals="false" bindTarget="hls_linkage_hd_ds" prompt="上月按揭台数"/>
                    <a:numberField name="last_modify_count" allowDecimals="false" bindTarget="hls_linkage_hd_ds" prompt="上月调整台数"/>
                    <a:numberField name="modify_count" allowDecimals="false" bindTarget="hls_linkage_hd_ds" prompt="当月调整台数"/>
                    <a:numberField name="final_count" allowDecimals="false" bindTarget="hls_linkage_hd_ds" prompt="最终台数"/>
                </a:hBox>
            </a:form>
            <a:grid id="hls890_agent_linkage_number_grid" bindTarget="hls890_agent_linkage_number_ds" marginHeight="200" marginWidth="80" navBar="true">
                <a:columns>
                    <a:column name="hd_id" hidden="true"/>
                    <a:column name="amount" align="right" allowFormat="true" lock="true" prompt="优惠保理额度（万元）" renderer="Aurora.formatMoney" width="180"/>
                    <a:column prompt="优惠保理费率和按揭台数">
                        <a:placeHolder id="linkage_sheet_id"/>
                    </a:column>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
    <a:view-config>
        <c:create-config targetId="linkage_sheet_id">
            <p:loop source="/model/linkage_sheet_columns">
                <c:process-config>
                    <a:column name="attribute_${@no}" align="center" prompt="${@field}" renderer="colorChangeFuntion"/>
                </c:process-config>
            </p:loop>
        </c:create-config>
    </a:view-config>
</a:screen>
