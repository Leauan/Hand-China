<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:view>
        <script><![CDATA[
            function con_contract_info_query(){
                $('con_contract_info_ds').query();
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="for_query_ds" autoCreate="true">
                <a:fields>
                    <a:field name="contract_number"/>
                    <a:field name="unit_id"/>
                    <a:field name="employee_id"/>
                    <a:field name="unit_id_desc" lovGridHeight="350" lovHeight="500" lovService="basic.exp_org_unit_v?org_unit_type=4S" lovWidth="500" title="供应商信息">
                        <a:mapping>
                            <a:map from="unit_id" to="unit_id"/>
                            <a:map from="unit_name" to="unit_id_desc"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="employee_id_des" lovGridHeight="350" lovHeight="500" lovService="cont.CON543.exp_employees_lov" lovWidth="500" title="客户经理">
                        <a:mapping>
                            <a:map from="employee_id" to="employee_id"/>
                            <a:map from="name" to="employee_id_des"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="start_date"/>
                    <a:field name="end_date"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="con_contract_info_ds" autoPageSize="true" autoQuery="true" model="cont.CON410.con_contract_all_v" pageSize="10" queryDataSet="for_query_ds"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton id="hls_standard_his_id" click="con_contract_info_query" text="查询"/>
            </a:screenTopToolbar>
            <a:form column="4" labelWidth="120" marginWidth="80" title="查询条件">
                <a:textField name="contract_number" bindTarget="for_query_ds" prompt="合同号"/>
                <a:lov name="unit_id_desc" bindTarget="for_query_ds" prompt="供应商"/>
                <a:lov name="employee_id_des" bindTarget="for_query_ds" prompt="客户经理"/>
                <a:datePicker name="start_date" bindTarget="for_query_ds" prompt="签约时间从"/>
                <a:datePicker name="end_date" bindTarget="for_query_ds" prompt="签约时间到"/>
            </a:form>
            <a:grid bindTarget="con_contract_info_ds" marginHeight="180" marginWidth="80" navBar="true">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="contract_number" lock="true" prompt="合同号" width="150"/>
                    <a:column name="unit_id_des" prompt="供应商" width="150"/>
                    <a:column name="brand_id_des" prompt="车型"/>
                    <a:column name="series_id_des" prompt="车系"/>
                    <a:column name="model_id_des" prompt="车型" width="200"/>
                    <a:column name="employee_id_des" prompt="客户经理" width="80"/>
                    <a:column name="item_frame_number" prompt="车架号" width="150"/>
                    <a:column name="signing_date" align="center" prompt="签约时间" renderer="Aurora.formatDate"/>
                    <a:column name="hd_user_col_n12" align="right" prompt="厂方指导价" renderer="Aurora.formatMoney"/>
                    <a:column prompt="购车款付款明细">
                        <a:column name="other_fee" align="right" prompt="车辆开票价" renderer="Aurora.formatMoney"/>
                        <a:column name="full_write_off_date" align="center" prompt="付款日期" renderer="Aurora.formatDate"/>
                    </a:column>
                    <a:column name="hd_user_col_n02" align="right" prompt="贴息金额（元）" renderer="Aurora.formatMoney"/>
                    <a:column name="discount_date" align="center" prompt="贴息核销日期" renderer="Aurora.formatDate"/>
                    <a:column name="price_list_des" prompt="产品名称" width="200"/>
                </a:columns>
                <a:editors><![CDATA[
                   
                ]]></a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
