<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:init-procedure>
        <a:model-query fetchAll="true" model="csh.CSH511.csh_transaction" rootPath="csh_transaction_path"/>
        <a:model-query fetchAll="true" model="basic.hls_sys_time_default_value" rootPath="sys_default_value"/>
        <a:model-query defaultWhereClause="t1.cf_direction=&apos;INFLOW&apos;" fetchAll="true" model="hls.HLS005.hls_cashflow_type_v_lov" rootPath="cashflow_type_path"/>
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
            Aurora.onReady(function() {
                Aurora.showMessage('温馨提示', '<font color=red>核销客户债权，请根据合同编号查询！</font>');
                var cf_df_flag = '${/parameter/@cf_df_flag}';
                var lease_channel = '${/model/csh_transaction_path/record/@lease_channel}';
                if (lease_channel) {
            
                   } else {
                    lease_channel = '00';
                }
                if ('${/model/csh_transaction_path/record/@transaction_type}' == 'RECEIPT') {
                    var url = "${/request/@context_path}/autocrud/cont.CON500.con_contract_cashflow_v_new/query?contract_status=CANCEL&description=${/model/csh_transaction_path/record/@description}&lease_channel=" + lease_channel + '&bp_id=${/parameter/@bp_id}&fee_type=${/parameter/@fee_type}';
                    var url2 = "${/request/@context_path}/autocrud/cont.CON500.con_contract_cashflow_v/query?limit_flag=${/parameter/@limit_flag}&bp_id1=${/parameter/@bp_id1}&amp;contract_status=CANCEL&description=${/model/csh_transaction_path/record/@description}&lease_channel=" + lease_channel + '&bp_id=${/parameter/@bp_id}&fee_type=${/parameter/@fee_type}';
                    if (cf_df_flag == 'Y') {
                        $('receipt_ref_contract_result_ds').setQueryUrl(url);
                    } else {
                        $('receipt_ref_contract_result_ds').setQueryUrl(url2);
                    }
                } else {
                    var url = "${/request/@context_path}/autocrud/cont.CON500.con_contract_cashflow_v_new/query?contract_status=CANCEL&description=${/model/csh_transaction_path/record/@description}&lease_channel=" + lease_channel + '&bp_id=${/parameter/@bp_id}&fee_type=${/parameter/@fee_type}';
                    var url2 = "${/request/@context_path}/autocrud/cont.CON500.con_contract_cashflow_v/query?limit_flag=${/parameter/@limit_flag}&bp_id1=${/parameter/@bp_id1}&amp;contract_status=CANCEL&lease_channel=" + lease_channel + '&bp_id=${/parameter/@bp_id}&fee_type=${/parameter/@fee_type}';
            
                    $('receipt_ref_contract_result_ds').setQueryUrl(url);
            
                }
            
            
            });
            
            function csh513_receipt_ref_con_query() {
                $('receipt_ref_contract_result_ds').query();
            }
            
            function csh513_receipt_ref_con_reset() {
                $('receipt_ref_contract_query_ds').reset();
            }
            
            function griddbclick(grid, record, row, name) {
                $('${/parameter/@lovid}').commit(record);
            
            }
            
            function con_dateValidator(record, name, value) { //日期校验方法
                if (name == 'due_date_from' || name == 'due_date_to') {
                    var start_date = Aurora.formatDate(record.get('due_date_from'));
                    var end_date = Aurora.formatDate(record.get('due_date_to'));
                    if ( !! end_date) { //由于结束日期非必填，只有在结束日期填了才进行比较
                        if (!compareDate(start_date, end_date)) {
                            return '${l:CSH510.CSH_RECEIPT_DATE_CHECK}'; //校验不通过返回字符串
                        }
                    }
                    return true; //校验通过返回true
                }
            }
            
            function compareDate(start, end) {
                if (start > end) {
                    return false;
                }
                return true;
            }
            
            function on_receipt_ref_contract_update(ds, record, name, value, oldvalue) {
                if (name == 'bp_name') {
                    if (!value) {
                        record.set('bp_id_tenant', '');
                    }
                }
            }
            
            function on_receipt_ref_contract_result_query(ds, qpara) {
                var trx_currency = '${/model/csh_transaction_path/record/@currency_code}';
                if ('${/parameter/@cross_currency_flag}' == 'Y') {
                    qpara['not_currency'] = trx_currency;
                } else {
                    qpara['currency'] = trx_currency;
                }
            
                var cf_df_flag = '${/parameter/@cf_df_flag}';
                var url = "${/request/@context_path}/autocrud/cont.CON500.con_contract_cashflow_new_v/query?contract_status=CANCEL";
                if (cf_df_flag == 'Y') {
                    qpara['transaction_id'] = '${/parameter/@transaction_id}';
                }
            
            }
            
            function csh513_receipt_batch_comfirm() {
                var rs = $('receipt_ref_contract_result_ds').getSelected();
                if (rs.length == 0) {
                    Aurora.showMessage('提示', '请至少选择一条数据');
                    return;
                }
                for (var i = 0;i < rs.length;i++) {
                    var new_record;
                    if (i == 0) {
                        new_record = $('receipt_write_off_creditor_result_ds').getCurrentRecord();
                    } else {
                        new_record = $('receipt_write_off_creditor_result_ds').create();
                    }
                    new_record.set('document_id', rs[i].get('contract_id'));
                    new_record.set('document_line_id', rs[i].get('cashflow_id'));
                    new_record.set('penalty_cashflow_id', rs[i].get('penalty_cashflow_id'));
                    new_record.set('document_category', rs[i].get('document_category'));
                    new_record.set('contract_number', rs[i].get('contract_number'));
                    new_record.set('project_id', rs[i].get('project_id'));
                    new_record.set('project_name', rs[i].get('project_name'));
                    new_record.set('cf_type', rs[i].get('cf_type'));
                    new_record.set('cf_type_name', rs[i].get('cf_type_name'));
                    new_record.set('cf_item', rs[i].get('cf_item'));
                    new_record.set('cf_item_name', rs[i].get('cf_item_name'));
                    new_record.set('bp_id', rs[i].get('bp_id_tenant'));
                    new_record.set('bp_name', rs[i].get('bp_name'));
                    new_record.set('due_date', rs[i].get('due_date'));
                    new_record.set('times', rs[i].get('times'));
                    new_record.set('due_amount', rs[i].get('due_amount'));
                    new_record.set('principal', rs[i].get('principal'));
                    new_record.set('interest', rs[i].get('interest'));
                    new_record.set('unreceived_amount', rs[i].get('unreceived_amount'));
                    new_record.set('unreceived_principal', rs[i].get('unreceived_principal'));
                    new_record.set('unreceived_interest', rs[i].get('unreceived_interest'));
                    new_record.set('penalty', rs[i].get('penalty'));
                    new_record.set('write_off_order', rs[i].get('write_off_order'));
                    new_record.set('write_off_order100', rs[i].get('write_off_order100'));
                    new_record.set('write_off_order101', rs[i].get('write_off_order101'));
                    new_record.set('rent_bank_account', rs[i].get('rent_bank_account'));
                    new_record.set('deposit_bank_account', rs[i].get('deposit_bank_account'));
                }
                $('${/parameter/@lovid}').commit();
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="receipt_ref_contract_cashflow_type_ds">
                <a:datas dataSource="/model/cashflow_type_path"/>
            </a:dataSet>
            <a:dataSet id="receipt_ref_contract_query_ds" autoCreate="true" autoQuery="true">
                <a:fields>
                    <a:field name="transaction_type" defaultValue="${/model/csh_transaction_path/record/@transaction_type}"/>
                    <!--defaultValue="${/model/csh_transaction_path/record/@bp_name}"-->
                    <a:field name="bp_name" lovGridHeight="350" lovHeight="500" lovService="basic.hls_bp_master_v_for_lov" lovWidth="500" title="HLS.BP_TITLE">
                        <a:mapping>
                            <a:map from="bp_id" to="bp_id_tenant"/>
                            <a:map from="bp_name" to="bp_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="bp_id" defaultValue="${/model/csh_transaction_path/record/@bp_id}"/>
                    <!--defaultValue="${/model/csh_transaction_path/record/@bp_id}-->
                    <a:field name="bp_id_tenant"/>
                    <a:field name="project_name" readOnly="true"/>
                    <a:field name="contract_number" lovGridHeight="350" lovHeight="550" lovService="csh.CSH513.con_contract_for_lov?transaction_id=${/parameter/@transaction_id}&amp;limit_flag=${/parameter/@limit_flag}&amp;bp_id=${/parameter/@bp_id}&amp;con_wf_flag=Y&amp;lease_channel=${/model/csh_transaction_path/record/@lease_channel}" lovWidth="550" title="合同">
                        <a:mapping>
                            <a:map from="contract_number" to="contract_number"/>
                            <a:map from="contract_id" to="contract_id"/>
                            <a:map from="contract_name" to="contract_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="contract_id"/>
                    <a:field name="contract_name" readOnly="true"/>
                    <a:field name="due_date_from" validator="con_dateValidator"/>
                    <a:field name="due_date_to" defaultValue="${/model/sys_default_value/record/@now_time}" validator="con_dateValidator"/>
                    <a:field name="not_write_off_flag_f" defaultValue="FULL"/>
                    <a:field name="cf_direction" defaultValue="INFLOW"/>
                    <a:field name="cf_status" defaultValue="RELEASE"/>
                    <a:field name="contract_writeoff_status" defaultValue="Y"/>
                    <a:field name="no_cf_type"/>
                    <a:field name="cf_type_name" displayField="description" options="receipt_ref_contract_cashflow_type_ds" returnField="cf_type" valueField="cf_type"/>
                </a:fields>
                <a:events>
                    <a:event name="update" handler="on_receipt_ref_contract_update"/>
                </a:events>
            </a:dataSet>
            <a:dataSet id="receipt_ref_contract_result_ds" autoQuery="true" model="cont.CON500.con_contract_cashflow_v" queryDataSet="receipt_ref_contract_query_ds" queryUrl="${/request/@context_path}/autocrud/cont.CON500.con_contract_cashflow_v/query?limit_flag=${/parameter/@limit_flag}&amp;bp_id1=${/parameter/@bp_id1}&amp;contract_status=CANCEL&amp;description=${/model/csh_transaction_path/record/@description}&amp;lease_channel=${/model/csh_transaction_path/record/@lease_channel}" selectable="true">
                <a:events>
                    <a:event name="query" handler="on_receipt_ref_contract_result_query"/>
                </a:events>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="csh513_receipt_ref_con_query" text="HLS.QUERY"/>
                <a:gridButton click="csh513_receipt_ref_con_reset" text="HLS.RESET"/>
                <a:gridButton click="csh513_receipt_batch_comfirm" text="确定"/>
            </a:screenTopToolbar>
            <a:form column="4" labelWidth="110" title="CSH513.WRITE_OFF_OBJECT_QUERY" width="1000">
                <a:lov name="bp_name" bindTarget="receipt_ref_contract_query_ds" prompt="CSH513.BP_TENANT"/>
                <a:lov name="contract_number" bindTarget="receipt_ref_contract_query_ds" prompt="HLS.CONTRACT_NUMBER"/>
                <a:textField name="contract_name" bindTarget="receipt_ref_contract_query_ds" prompt="合同名称"/>
                <a:comboBox name="cf_type_name" bindTarget="receipt_ref_contract_query_ds" prompt="CSH513.CF_TYPE"/>
                <a:datePicker name="due_date_from" bindTarget="receipt_ref_contract_query_ds" prompt="CSH513.DUE_DATE_FROM"/>
                <a:datePicker name="due_date_to" bindTarget="receipt_ref_contract_query_ds" prompt="CSH513.DUE_DATE_TO"/>
                <a:numberField name="due_amount_from" allowFormat="true" bindTarget="receipt_ref_contract_query_ds" prompt="CSH513.DUE_AMOUNT_FROM"/>
                <a:numberField name="due_amount_to" allowFormat="true" bindTarget="receipt_ref_contract_query_ds" prompt="CSH513.DUE_AMOUNT_TO"/>
            </a:form>
            <a:grid id="receipt_ref_contract_grid_ds" bindTarget="receipt_ref_contract_result_ds" height="350" navBar="true" width="1000">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="contract_number" prompt="HLS.CONTRACT_NUMBER" width="120"/>
                    <a:column name="bp_name" prompt="CSH513.BP_TENANT" width="200"/>
                    <a:column name="times" prompt="HLS.PERIOD_NUMBER" width="40"/>
                    <a:column name="cf_item_name" prompt="CSH513.CF_ITEM"/>
                    <a:column name="due_date" prompt="CSH513.DUE_DATE" renderer="Aurora.formatDate"/>
                    <a:column name="due_amount" align="right" prompt="CSH513.DUE_AMOUNT" renderer="Aurora.formatMoney"/>
                    <a:column name="principal" align="right" prompt="CSH513.PRINCIPAL" renderer="Aurora.formatMoney"/>
                    <a:column name="interest" align="right" prompt="CSH513.INTEREST" renderer="Aurora.formatMoney"/>
                    <a:column name="received_amount" align="right" prompt="CSH513.RECEIVED_AMOUNT" renderer="Aurora.formatMoney"/>
                    <a:column name="received_principal" align="right" prompt="CSH513.RECEIVED_PRINCIPAL" renderer="Aurora.formatMoney"/>
                    <a:column name="received_interest" align="right" prompt="CSH513.RECEIVED_INTEREST" renderer="Aurora.formatMoney"/>
                    <a:column name="penalty" align="right" prompt="CSH513.WRITE_OFF_PENALTY" renderer="Aurora.formatMoney"/>
                </a:columns>
                <a:events>
                    <a:event name="dblclick" handler="griddbclick"/>
                </a:events>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
