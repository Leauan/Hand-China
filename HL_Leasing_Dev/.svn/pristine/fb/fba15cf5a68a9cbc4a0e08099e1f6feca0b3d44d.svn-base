<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:init-procedure><![CDATA[
    ]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
            function query_tl_itfc() {
                $('yonda_hls_tl_itfc_result_transfor_ds').query();
                $('yonda_hls_tl_itfc_result_dealing_ds').query();
                $('yonda_hls_tl_itfc_result_failure_ds').query();
                $('yonda_hls_tl_itfc_result_complete_ds').query();
            }
            
            function exit() {
                $('yonda_hls_tl_ln_winid').close();
            }
            
            function on_yonda_hls_tl_itfc_detail_renderer(value, record, name) {
                if (record.get('tl_itfc_line_id')) {
                    return '<a href="javascript:windowopen_yonda_tl_detail_logs(\'' + record.get('tl_itfc_line_id') + '\');">日志</a>';
                }
            }
            
            function windowopen_yonda_tl_detail_logs(tl_itfc_line_id) {
                new Aurora.Window({
                    id: 'yonda_hls_tl_logs_link_winid',
                    url: $('yonda_hls_tl_logs_link_id').getUrl(),
                    params: {
                        'source_id': tl_itfc_line_id,
                        'source_table': 'YONDA_HLS_TL_ITFC_LINE'
                    },
                    width: 550,
                    height: 400
                });
            }
            
            
        ]]></script>
        <a:dataSets>
            <a:dataSet id="tl_itfc_trx_status" lookupCode="CSH602_YONDA_HLS_TL_LN_STATUS"/>
            <a:dataSet id="con_write_off_flag_ds" lookupCode="CON_WRITE_OFF_FLAG"/>
            <a:dataSet id="yonda_hls_tl_itfc_query_ds" autoCreate="true">
                <a:fields>
                    <a:field name="bp_name"/>
                    <a:field name="dbtacc"/>
                    <a:field name="contract_number"/>
                    <a:field name="trx_status"/>
                    <a:field name="trx_status_display" displayField="code_value_name" options="tl_itfc_trx_status" returnField="trx_status" valueField="code_value"/>
                    <a:field name="due_date"/>
                    <a:field name="write_off_flag_display" displayField="code_value_name" options="con_write_off_flag_ds" returnField="write_off_flag" valueField="code_value"/>
                    <a:field name="cf_item"/>
                    <a:field name="cf_item_desc" displayField="cf_item_desc" options="cf_item_ds" returnField="cf_item" valueField="cf_item"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="yonda_hls_tl_itfc_result_transfor_ds" autoPageSize="true" autoQuery="true" model="csh.CSH602.yonda_hls_tl_itfc_v" queryDataSet="yonda_hls_tl_itfc_query_ds" queryUrl="${/request/@context_path}/autocrud/csh.CSH602.yonda_hls_tl_itfc_v/query?tl_itfc_header_id=${/parameter/@tl_itfc_header_id}&amp;line_trx_status=TRANSFOR"/>
            <a:dataSet id="yonda_hls_tl_itfc_result_dealing_ds" autoPageSize="true" autoQuery="true" model="csh.CSH602.yonda_hls_tl_itfc_v" queryDataSet="yonda_hls_tl_itfc_query_ds" queryUrl="${/request/@context_path}/autocrud/csh.CSH602.yonda_hls_tl_itfc_v/query?tl_itfc_header_id=${/parameter/@tl_itfc_header_id}&amp;line_trx_status=DEALING"/>
            <a:dataSet id="yonda_hls_tl_itfc_result_complete_ds" autoPageSize="true" autoQuery="true" model="csh.CSH602.yonda_hls_tl_itfc_v" queryDataSet="yonda_hls_tl_itfc_query_ds" queryUrl="${/request/@context_path}/autocrud/csh.CSH602.yonda_hls_tl_itfc_v/query?tl_itfc_header_id=${/parameter/@tl_itfc_header_id}&amp;line_trx_status=COMPLETE"/>
            <a:dataSet id="yonda_hls_tl_itfc_result_complete_not_writeoff_ds" autoPageSize="true" autoQuery="true" model="csh.CSH602.yonda_hls_tl_itfc_v" queryDataSet="yonda_hls_tl_itfc_query_ds" queryUrl="${/request/@context_path}/autocrud/csh.CSH602.yonda_hls_tl_itfc_v/query?tl_itfc_header_id=${/parameter/@tl_itfc_header_id}&amp;line_trx_status=COMPLETE_NOT_WRITEOFF"/>
            <a:dataSet id="yonda_hls_tl_itfc_result_failure_ds" autoPageSize="true" autoQuery="true" model="csh.CSH602.yonda_hls_tl_itfc_v" queryDataSet="yonda_hls_tl_itfc_query_ds" queryUrl="${/request/@context_path}/autocrud/csh.CSH602.yonda_hls_tl_itfc_v/query?tl_itfc_header_id=${/parameter/@tl_itfc_header_id}&amp;line_trx_status=FAILURE"/>
        </a:dataSets>
