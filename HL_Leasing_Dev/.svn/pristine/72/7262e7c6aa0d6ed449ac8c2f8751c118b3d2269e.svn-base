<a:screen xmlns:c="aurora.application.action" xmlns:p="uncertain.proc" xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:init-procedure>
        <a:model-query fetchAll="true" model="hls.HLS891.linkage_sheet_columns" rootPath="/model/linkage_sheet_columns"/>
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
            function close() {
                $('hls_linkage_bp_number_window').close();
            }
            
            function save() {
                if ($('hls890_agent_linkage_number_ds').validate()) {
                    Aurora.Masker.mask(Ext.getBody());
                    $('hls890_agent_linkage_number_ds').submit();
                }
            }
            
            function createLineRecord() {
                var ds = $('hls890_agent_linkage_number_ds');
                var hd_id = '${/parameter/@hd_id}';
                var newdata = {};
                newdata['hd_id'] = hd_id;
                var record = new Aurora.Record(newdata);
                record.isNew = 'true';
                record.dirty = 'false';
                ds.add(record);
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="hls_linkage_hd_ds" autoQuery="true" queryUrl="${/request/@context_path}/autocrud/hls.HLS891.hls_linkage_bp_hd/query?hd_id=${/parameter/@hd_id}">
                <a:fields>
                    <a:field name="bp_name" readOnly="true"/>
                    <a:field name="hd_id"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="hls890_agent_linkage_number_ds" autoPageSize="true" autoQuery="true" bindName="line" bindTarget="hls_linkage_hd_ds" fetchAll="true" model="hls.HLS891.hls_linkage_bp_number" selectable="true" submitUrl="${/request/@context_path}/modules/hls/HLS890/hls_linkage_detail_create.svc"><![CDATA[
                
            ]]></a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="close" text="退出"/>
                <a:gridButton click="save" text="HLS.SAVE"/>
            </a:screenTopToolbar>
            <a:form column="1" marginWidth="80" title="基本信息">
                <a:textField name="bp_name" bindTarget="hls_linkage_hd_ds" prompt="经销商" width="424"/>
            </a:form>
            <a:grid id="hls890_agent_linkage_number_grid" bindTarget="hls890_agent_linkage_number_ds" marginHeight="200" marginWidth="80" navBar="true">
                <a:toolBar>
                    <a:button id="btn_ref_add" click="createLineRecord" icon="${/request/@context_path}/images/add.gif" text="HLS.NEW"/>
                    <a:button type="delete"/>
                    <!--   <a:button type="save"/> -->
                </a:toolBar>
                <a:columns>
                    <a:column name="hd_id" hidden="true"/>
                    <a:column name="amount" align="right" allowFormat="true" editor="hls890_agent_linkage_number_grid_nf" lock="true" prompt="优惠保理额度（千元）" renderer="Aurora.formatMoney" width="180"/>
                    <a:column prompt="优惠保理费率和按揭台数">
                        <a:placeHolder id="linkage_sheet_id"/>
                    </a:column>
                </a:columns>
                <a:editors>
                    <a:numberField id="hls890_agent_linkage_number_grid_nf"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
    <a:view-config>
        <c:create-config targetId="linkage_sheet_id">
            <p:loop source="/model/linkage_sheet_columns">
                <c:process-config>
                    <a:column name="attribute_${@no}" align="center" editor="hls890_agent_linkage_number_grid_nf" prompt="${@field}"/>
                </c:process-config>
            </p:loop>
        </c:create-config>
    </a:view-config>
</a:screen>
