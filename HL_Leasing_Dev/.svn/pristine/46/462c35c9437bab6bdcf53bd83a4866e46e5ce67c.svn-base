<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" xmlns:f="aurora.database.features" alias="t1" baseTable="EXP_EMPLOYEE_ASSIGNS_V">
    <bm:fields>
        <bm:field name="enabled_flag" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="ENABLED_FLAG" prompt="EXP_EMPLOYEE_ASSIGNS_V.ENABLED_FLAG"/>
        <bm:field name="employee_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="EMPLOYEE_ID" prompt="EXP_EMPLOYEE_ASSIGNS_V.EMPLOYEE_ID"/>
        <bm:field name="employee_enabled" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="EMPLOYEE_ENABLED" prompt="EXP_EMPLOYEE_ASSIGNS_V.EMPLOYEE_ENABLED"/>
        <bm:field name="employee_code" databaseType="VARCHAR2" datatype="java.lang.String" forDisplay="true" forQuery="true" physicalName="EMPLOYEE_CODE" prompt="员工编码"/>
        <bm:field name="employee_name" databaseType="VARCHAR2" datatype="java.lang.String" forDisplay="true" forQuery="true" physicalName="EMPLOYEE_NAME" prompt="员工名称"/>
        <bm:field name="position_name" databaseType="VARCHAR2" datatype="java.lang.String" forDisplay="true" physicalName="POSITION_NAME" prompt="岗位"/>
        <bm:field name="unit_name" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="UNIT_NAME" prompt="EXP_EMPLOYEE_ASSIGNS_V.UNIT_NAME"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field field="employee_code" queryExpression="upper(t1.employee_code) like &apos;%&apos; || upper(${@employee_code}) || &apos;%&apos;"/>
        <bm:query-field field="employee_name" queryExpression="upper(t1.employee_name) like &apos;%&apos; || upper(${@employee_name}) || &apos;%&apos;"/>
    </bm:query-fields>
    <bm:features>
        <f:standard-who/>
    </bm:features>
    <bm:data-filters>
        <bm:data-filter enforceOperations="query" expression="t1.unit_code=&apos;06&apos;"/>
    </bm:data-filters>
</bm:model>
