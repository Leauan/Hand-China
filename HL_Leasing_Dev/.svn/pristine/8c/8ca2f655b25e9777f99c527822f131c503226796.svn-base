<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[select 
  t.post_id,
  t.item_id,
  t.new_flag,
  (t.item_length||t.item_type||t.org_code||t.bus_type||t.bus_detail||
  t.bus_number||t.ocu_place||t.start_date||t.end_date||t.currency||
  t.credit_amount||t.share_credit||t.debt_amount||t.guta_method||
  t.pay_type||t.pay_months||t.left_months||t.due_date||t.last_due_date||
  t.due_amount||t.rec_amount||t.left_amount||t.overdue_times||t.overdue_amount||
  t.over31_60||t.over61_90||t.over91_180||t.over181||t.over_times_t||t.top_over_times||
  t.five_status||t.item_status||t.repay24||t.overdraft||t.new_flag||t.tenant_name||t.card_type||
  t.id_card_no||t.ref_v01) base_str
from hls_zx_post_base t
where t.post_id = ${@post_id}]]></bm:query-sql>
            <bm:parameters>
                <bm:parameter name="post_id"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="post_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="POST_ID"/>
        <bm:field name="item_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="ITEM_ID"/>
        <bm:field name="base_str" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="BASE_STR"/>
        <bm:field name="new_flag"/>
    </bm:fields>
</bm:model>
