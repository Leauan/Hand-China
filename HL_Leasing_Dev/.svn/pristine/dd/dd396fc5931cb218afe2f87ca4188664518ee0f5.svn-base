<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT su.bp_category,
       su.user_name,
       (SELECT 'JF'
          FROM sys_role_vl srv, sys_user_role_groups sur
         where srv.role_id = sur.role_id
           and sur.user_id = su.user_id
           AND SRV.role_code = '0031') role_code_name
  FROM sys_user su
 WHERE su.user_id = ${/session/@user_id}
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
