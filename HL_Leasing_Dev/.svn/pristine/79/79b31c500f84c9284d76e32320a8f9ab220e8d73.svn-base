                    <a:field name="account_code_to" autoComplete="true" lovHeight="600" lovLabelWidth="100" lovUrl="${/request/@context_path}/modules/hls/HLS530/gld_company_account_tree.screen" lovWidth="550" title="HLS530.ACCOUNT_NAME">
