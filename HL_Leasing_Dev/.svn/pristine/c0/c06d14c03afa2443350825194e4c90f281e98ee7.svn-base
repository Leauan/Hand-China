<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application" cache="false" default-dispatch="${/model/url/@URL}" dispatch-style="redirect" trace="true">
    <a:init-procedure>
        <a:model-query model="csh.CSH501.csh_payment_req_info" rootPath="payment_req_path"/>
    </a:init-procedure>
    <a:view>
        <style media="print"><![CDATA[
        .PageNext
        {
            page-break-after: always;
        }
]]></style>
        <style type="text/css"><![CDATA[
table
{
border-collapse:collapse;
border:none;
};
td{
    height:50px;
}
    ]]></style>
        <script><![CDATA[

    ]]></script>
        <ajax-init/>
        <a:freeMarker><![CDATA[
        <#if  model.getObject('/model/payment_req_path').getChilds()??>
		<#list  model.getObject("/model/payment_req_path").getChilds() as payment_req_rec>
		 <#if (payment_req_rec.getString('rk')!'')!='1'> 
		    <div class="PageNext">
            </div>
         </#if>
		 <P align="center">
            <B>
                <FONT face="楷体" size="7" style="border-bottom:4px double black;">请款单</FONT>
                <br/>
            </B>
        </P>
       <table border="1" width="1000"  style="margin-left:80px;"  >
            <tr>
             <td width="10%">合同编号</td>
             <td width="15%">${payment_req_rec.getString('contract_number')!''}</td> 
             <td width="10%">车架号</td>
             <td width="15%">${payment_req_rec.getString('item_frame_number')!''}</td> 
             <td width="10%">申请日期</td>
             <td width="15%">${payment_req_rec.getString('req_date')!''}</td> 
             <td width="10%">币种</td>
             <td width="15%">人民币</td>  
           </tr>
		    <tr>
             <td >对象名称</td>
             <td colspan="3">${payment_req_rec.getString('bp_name')!''}</td> 
             <td >承租人</td>
             <td colspan="3">${payment_req_rec.getString('bp_tenant_name')!''}</td> 
           </tr>
      </table>
      <p/>
      <table border="1" width="1000"  style="margin-left:80px;">
         <tr>
           <td width="20%" style="text-align:center;">应付项目</td>
           <td width="15%" style="text-align:center;">本次申请金额</td>
           <td width="15%" style="text-align:center;">应付金额</td>
           <td width="15%" style="text-align:center;">剩余未付金额</td>
           <td width="10%" style="text-align:center;">申请付款日期</td>
           <td width="15%" style="text-align:center;">已申请支付金额</td>
           <td width="10%" style="text-align:center;">计划付款日期</td>
         </tr>
		       <tr>
		       <td>${payment_req_rec.getString('cf_description')!''}</td>
		       <td style="text-align:right;">${payment_req_rec.getString('amount')!''}</td>
		       <td style="text-align:right;">${payment_req_rec.getString('due_amount')!''}</td>
		       <td style="text-align:right;">${payment_req_rec.getString('residual_amount')!''}</td>
		       <td style="text-align:center;">${payment_req_rec.getString('req_date')!''}</td>
		       <td style="text-align:right;">${payment_req_rec.getString('applied_pay_amount')!''}</td>
		       <td style="text-align:center;">${payment_req_rec.getString('due_date')!''}</td>
		       </tr>
		     </table>
		     <p/>
		  </#list>
		  </#if>
		 ]]></a:freeMarker>
        <script><![CDATA[
            window.onload = window.print();
        ]]></script>
    </a:view>
</a:screen>
