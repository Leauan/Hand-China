<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[select 
  bank.bank_name,b.branch_name,c.city_code,c.city_name,b.branch_code
from hls_sap_branchbank b,hls_sap_city c,hls_sap_bank bank
#WHERE_CLAUSE#]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="branch_code"/>
        <bm:field name="bank_name" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="120" forDisplay="true" forQuery="true" physicalName="BANK_NAME" prompt="银行名称"/>
        <bm:field name="branch_name" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="120" forDisplay="true" forQuery="true" physicalName="BRANCH_NAME" prompt="支行名称"/>
        <bm:field name="city_code" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="CITY_CODE"/>
        <bm:field name="city_name" databaseType="VARCHAR2" datatype="java.lang.String" forDisplay="true" forQuery="true" physicalName="CITY_NAME" prompt="城市"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field field="bank_name" queryOperator="like"/>
        <bm:query-field field="branch_name" queryOperator="like"/>
        <bm:query-field field="city_name" queryOperator="like"/>
    </bm:query-fields>
    <bm:data-filters>
        <bm:data-filter enforceOperations="query" expression="bank.bank_id=b.bank_id and c.city_id = b.city_id"/>
    </bm:data-filters>
</bm:model>
