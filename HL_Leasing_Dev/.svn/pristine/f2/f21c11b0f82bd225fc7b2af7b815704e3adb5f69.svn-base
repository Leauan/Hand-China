<a:screen xmlns:c="aurora.application.action" xmlns:p="uncertain.proc" xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:init-procedure>
        <a:model-query fetchAll="true" model="rpt.RPT330.get_current_date" rootPath="default_date_path"/>
    </a:init-procedure>
    <a:view>
        <a:link id="con_everyday_amount_report_link" url="${/request/@context_path}/modules/rpt/RPT330/con_everyday_amount_report.screen"/>
        <script><![CDATA[
            function query() {
                var record = $('cash_received_query_ds').getCurrentRecord();
                var year = record.get('year');
                var month = record.get('month');
                if (year && month) {
                    var win = new Aurora.Window({
                        id: 'con_everyday_amount_report_window',
                        url: $('con_everyday_amount_report_link').getUrl(),
                        params: {
                            year: year,
                            month: month,
                            winId: 'con_everyday_amount_report_window'
                        },
                        title: '每日合同未收本金',
                        fullScreen: true
                    });
                }else{
                    Aurora.showMessage('提示','请输入年月！');
                    return '';
                }
                // win.on('close', function() {
                // $('acp310_invoice_result_ds').query();
                // });
            }
            
            function reset() {
                $('cash_received_query_ds').reset();
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="month_ds" lookupCode="MONTH"/>
            <a:dataSet id="cash_received_query_ds">
                <a:fields>
                    <a:field name="year" defaultValue="${/model/default_date_path/record/@year}" required="true"/>
                    <a:field name="month" defaultValue="${/model/default_date_path/record/@current_month}" displayField="code_value_name" options="month_ds" required="true" returnField="month" valueField="code_value"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="query" text="查询"/>
                <a:gridButton click="reset" text="重置"/>
            </a:screenTopToolbar>
            <a:form column="2" title="查询条件">
                <a:textField name="year" bindTarget="cash_received_query_ds" prompt="年份"/>
                <a:comboBox name="month" bindTarget="cash_received_query_ds" prompt="月份"/>
            </a:form>
        </a:screenBody>
    </a:view>
</a:screen>
