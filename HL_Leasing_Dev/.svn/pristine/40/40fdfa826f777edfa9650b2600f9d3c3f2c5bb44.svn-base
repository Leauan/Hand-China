<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view>
        <a:link id="ast_car_gps_link" url="${/request/@context_path}/modules/ast/AST506/ast_lease_item_maintance.screen"/>
        <a:link id="ast_car_gps_absolution_apply_link" model="ast.AST506.ast_car_gps_absolution_apply" modelaction="execute"/>
        <script><![CDATA[
			function back() {
			    if(!Aurora.isEmpty('${/parameter/@winid}')) {
                    $('${/parameter/@winid}').close();
                }else {
                	$('trailer_launch_window').close();
                }
			}
			
			function save2() {
			    $('con_item_info_ds_2').submit();
			}
			
			function gps_absolution_submit() {
			    Aurora.showConfirm('确认','您确定提交GPS免除申请吗？',function() {				    
	                Aurora.request({
	                    url:$('ast_car_gps_absolution_apply_link').getUrl(),
	                    para:{
	                        item_detail_id:$('con_item_info_ds_2').getCurrentRecord().get('item_detail_id')
	                    },
	                    success:function() {
	                        Aurora.SideBar.show({
                                msg: '提交成功',
                                duration: 2000
                            });
	                        var url=$('ast_car_gps_link').getUrl();
	                		Aurora.go(url);
	                    },
	                    scope:this	                    
	                    
	                });                
			    });
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="con_item_info_ds_2" autoCreate="true" autoQuery="true" model="ast.AST506.con_contract_item_v" queryUrl="${/request/@context_path}/autocrud/ast.AST506.con_contract_item_v/query?contract_id=${/parameter/@contract_id}">
                <a:fields>
                    <a:field name="gps_absolution_apply_reason" readOnly="true"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
            </a:screenTopToolbar>
            <a:form column="1" marginWidth="30" title="基本信息">
                <a:hBox>
                    <a:textField name="contract_number" bindTarget="con_item_info_ds_2" prompt="合同号" readOnly="true"/>
                    <a:textField name="bp_name" bindTarget="con_item_info_ds_2" prompt="承租人" readOnly="true"/>
                    <a:textField name="item_frame_number" bindTarget="con_item_info_ds_2" prompt="车架号" readOnly="true"/>
                    <a:textField name="item_engine_number" bindTarget="con_item_info_ds_2" prompt="发动机号" readOnly="true"/>
                </a:hBox>
                <a:hBox>
                    <a:textField name="brand_dis" bindTarget="con_item_info_ds_2" prompt="品牌" readOnly="true"/>
                    <a:textField name="series_dis" bindTarget="con_item_info_ds_2" prompt="车系" readOnly="true"/>
                    <a:textField name="model_dis" bindTarget="con_item_info_ds_2" prompt="车型" readOnly="true"/>
                    <a:textField name="color_of_apprearance" bindTarget="con_item_info_ds_2" prompt="外观颜色" readOnly="true"/>
                </a:hBox>
                <a:hBox>
                    <a:textArea name="gps_absolution_apply_reason" bindTarget="con_item_info_ds_2" prompt="免除原因" width="845"/>
                </a:hBox>
            </a:form>
        </a:screenBody>
    </a:view>
</a:screen>
