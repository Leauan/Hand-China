<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="false">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    mail_to,
                    mail_cc,
                    subject,
                    body,
                    content_type
                FROM
                    zj_sys_mailing_list
                WHERE
                    sent_flag    = 'N' AND
                    error_times <= 3 AND
                    (
                        sysdate - creation_date
                    )
                    < 3
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="mail_to"/>
        <bm:field name="mail_cc"/>
        <bm:field name="subject"/>
        <bm:field name="body"/>
        <bm:field name="content_type"/>
    </bm:fields>
</bm:model>
