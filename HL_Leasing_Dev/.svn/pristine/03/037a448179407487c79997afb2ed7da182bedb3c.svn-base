            function con555_con_contract_save1() {
                debugger;
                con555_detail_result_save();
                var contract_id = $('con555_detail_ds').getCurrentRecord().get('contract_id');
                var url = $('con555B_con_contract_location_id').getUrl();
                var detail_mask;
                detail_mask = Ext.getBody();
                Aurora.Masker.mask(detail_mask, '${l:HLS.EXECUTING}');
                Aurora.request({
                    url: url,
                    para: {
                        contract_id:contract_id,
                        archive_status:'30'
                        },
                    success: function() {
                        $('con555_detail_ds').query();
                        Aurora.Masker.unmask(detail_mask);
                        Aurora.SideBar.show({
                            msg: '操作成功',
                            duration: 2000
                        });
                    },
                    failure: function() {
            			Aurora.Masker.unmask(detail_mask);
                       },
                    error: function() {
            			Aurora.Masker.unmask(detail_mask);
                       },
                    scope: this
                });
            
            }
            

            
