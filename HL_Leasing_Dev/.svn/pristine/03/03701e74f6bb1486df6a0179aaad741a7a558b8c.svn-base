<a:screen xmlns:s="aurora.plugin.script" xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" dynamiccreateenabled="true" trace="true">
    <a:init-procedure>
        <s:server-script import="con_print_path.js"><![CDATA[
            set_parameter_file_path();
        ]]></s:server-script>
    </a:init-procedure>
    <a:view>
        <a:link id="con_contract_get_layout_code_link_id" model="cont.CON500.con_contract_get_layout_code" modelaction="update"/>
        <a:link id="create_cdd_link" model="check_after_save_bm.prj_project_create_check" modelaction="execute"/>
        <a:link id="collection_copy_from_template_link_id" url="${/request/@context_path}/modules/cont/CON637/con_collection_doc_create.svc"/>
        <a:link id="collection_atm_batch_download_pdf_link_id" url="${/request/@context_path}/modules/cont/CON637/con_collection_atm_batch_dl.svc"/>
        <a:link id="acr637_con_collection_batch_link" model="cont.CON637.con_collection_batch" modelaction="batch_update"/>
        <a:link id="acr637_con_collection_batch_delete_link" model="cont.CON637.con_collection_batch" modelaction="delete"/>
        <a:link id="acr637_con_contract_modify_link" url="${/request/@context_path}/modules/cont/CON505/con_contract_modify.screen"/>
        <script><![CDATA[
        	  function acr637_con_collection_batch_delete() {
                Aurora.request({
                    url: $('acr637_con_collection_batch_delete_link').getUrl(),
                    para: {},
                    success: function() {
            
                       },
                    failure: function() {
                        Aurora.Masker.unmask(Ext.getBody());
                    },
                    error: function() {
                        Aurora.Masker.unmask(Ext.getBody());
                    },
                    scope: this,
                    sync: true
                });
             }
        	   
              //打印催收函
              window['${/parameter/@layout_code}_user_button1_layout_dynamic_click'] = function() {
			   var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'con_contract');
               var records = $(ds_id).getSelected();
               if (records.length == 0) {
                    Aurora.showMessage('${l:PROMPT}', '请选择一条单据');
                    return;
	            } 
	            var datas = [];
	            for (i = 0;i < records.length;i++) {
	                var obj = {};
	                obj['contract_id'] = records[i].get('contract_id');
	                obj['_status'] = 'update';
	                datas[i] = obj;
	            }
	            //将选中的合同放入同一批次中
	            acr637_con_collection_batch_delete();
	            Aurora.Masker.mask(Ext.getBody(), '正在打印...');
	            Aurora.request({
                    url: $('acr637_con_collection_batch_link').getUrl(),
                    para: datas,
                    success: function(data) {
		               //匹配文档
		                Aurora.request({
		                    url: '${/request/@context_path}/autocrud/cont.CON637.con_collection_doc_create/update',
		                    success: function() {
		                        //生成文本和pdf文件
		                        Aurora.request({
			                        url: $('collection_copy_from_template_link_id').getUrl(),
			                        para: {
			                            file_path: '${/parameter/@file_path}'
			                        },
			                        success: function() {
			                            //下载pdf
			                            Aurora.Masker.unmask(Ext.getBody());
			                			var url_l = $('collection_atm_batch_download_pdf_link_id').getUrl() + '?type=ZIP';
						                window.open(href = url_l, target = "_self");
			                        },
			                        failure: function() {
			                            Aurora.Masker.unmask(Ext.getBody());
			                            credit_flag = 'N';
			                            window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
			                        },
			                        error: function() {
			                            Aurora.Masker.unmask(Ext.getBody());
			                            credit_flag = 'N';
			                            window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
			                        },
			                        scope: this
			                    });
		                    },
		                    failure: function() {
		                        Aurora.Masker.unmask(Ext.getBody());
		                        credit_flag = 'N';
		                        window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
		                    },
		                    error: function() {
		                        Aurora.Masker.unmask(Ext.getBody());
		                        credit_flag = 'N';
		                        window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
		                    },
		                    scope: this
		                });
                    },
                    failure: function() {
                        Aurora.Masker.unmask(Ext.getBody());
                        credit_flag = 'N';
                        window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    },
                    error: function() {
                        Aurora.Masker.unmask(Ext.getBody());
                        credit_flag = 'N';
                        window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    },
                    scope: this
                }); 
              };
              
              function open_contract_win(ds_id, record_id) {
                var record = $(ds_id).findById(record_id);
                var param={};
               // var param = record.data;
                param['contract_id'] = record.get('contract_id');
                param['function_code'] = 'CON301';
                param['maintain_type'] = 'UPDATE';
                param['url_title'] = '${l:CON301.CONTRACT_DETAIL}';
                hls_doc_get_layout_code('con_contract_get_layout_code_link_id', param, 'acr637_con_contract_modify_link');
            }
              
              window['${/parameter/@layout_code}_dynamic_link_renderer'] = function(value, record, name, config_record) {
                if (name == 'contract_number' && value) {
                    return '<a href="javascript:open_contract_win(\'' + record.ds.id + '\',\'' + record.id + '\')">' + value + '</a>';
                }
                return value;
            };
        ]]></script>
        <a:screen-include screen="modules/cont/CON500/con_contract_authority_list_validate.screen?document_category=CONTRACT&amp;function_code=CON501"/>
        <a:screen-include screen="modules/cont/CON500/con_contract_get_layout_code.screen"/>
    </a:view>
</a:screen>
