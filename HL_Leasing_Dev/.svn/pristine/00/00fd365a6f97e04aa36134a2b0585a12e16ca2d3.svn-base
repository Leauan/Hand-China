<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:fields>
        <bm:field name="value_code"/>
        <bm:field name="value_name" displayWidth="200" forDisplay="true" forQuery="true" prompt="经销商名称"/>
        <bm:field name="bp_code" displayWidth="200" forDisplay="true" forQuery="true" prompt="经销商编码"/>
    </bm:fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    hbm.bp_id value_code,
                    hbm.bp_name value_name,
                    hbm.bp_code
                FROM
                    hls_bp_master hbm
                WHERE
                    hbm.enabled_flag = 'Y' AND
                    hbm.bp_category  = 'AGENT'
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field name="bp_code" queryExpression="hbm.bp_code=${@bp_code}"/>
        <bm:query-field name="value_name" queryExpression="hbm.value_name=${@value_name}"/>
    </bm:query-fields>
</bm:model>
