<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:view>
        <a:dataSets>
            <a:dataSet id="hls_public_notice_ds" autoQuery="true" model="sys.sys_notice" queryUrl="${/request/@context_path}/autocrud/sys.sys_notice/query?hls_notice_definition_id=${/parameter/@hls_notice_definition_id}">
                <a:fields>
                    <a:field name="notice_name" readOnly="true"/>
                    <a:field name="notice_msg" readOnly="true"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:form labelWidth="100">
                <a:textField name="notice_name" bindTarget="hls_public_notice_ds" prompt="通知名称" width="493"/>
                <a:textArea name="notice_msg" bindTarget="hls_public_notice_ds" height="200" prompt="通知内容" width="490"/>
            </a:form>
            <a:upload pkvalue="${/parameter/@hls_notice_definition_id}" showdelete="false" showupload="false" sourcetype="HLS_NOTICE_DEFINITION"/>
        </a:screenBody>
    </a:view>
</a:screen>
