                <a:textField name="project_number" bindTarget="contractQueryScreen_paraDs" prompt="申请编号"/>
                <a:textField name="contract_name" bindTarget="contractQueryScreen_paraDs" prompt="合同名称"/>
                <a:comboBox name="overdue_status_desc" bindTarget="contractQueryScreen_paraDs" prompt="是否逾期"/>
                <a:lov name="bp_name" bindTarget="contractQueryScreen_paraDs" prompt="承租人"/>
                <a:textField name="received_times" bindTarget="contractQueryScreen_paraDs" prompt="已还款期数"/>
                <!-- <a:lov name="guarantor_name" bindTarget="contractQueryScreen_paraDs" prompt="担保人"/>
                <a:lov name="unit_id_n" bindTarget="contractQueryScreen_paraDs" prompt="所属部门"/>
                <a:textField name="license_number" bindTarget="contractQueryScreen_paraDs" prompt="车牌号" typeCase="upper"/> -->
                <a:datePicker name="date_from" bindTarget="contractQueryScreen_paraDs" prompt="起租日期从"/>
                <a:datePicker name="date_to" bindTarget="contractQueryScreen_paraDs" prompt="起租日期到"/>
                <a:datePicker name="lease_end_date_from" bindTarget="contractQueryScreen_paraDs" prompt="结束日期从"/>
                <a:datePicker name="lease_end_date_to" bindTarget="contractQueryScreen_paraDs" prompt="结束日期到"/>
            </a:form>
            <a:grid id="contractQueryScreen_mainDs_grid" bindTarget="contractQueryScreen_mainDs" marginHeight="200" marginWidth="30" navBar="true">
