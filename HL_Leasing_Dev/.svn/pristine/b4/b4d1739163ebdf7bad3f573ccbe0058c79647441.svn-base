                    <a:column name="contract_number" lock="true" prompt="合同编号" width="120"/>
                    <a:column name="contract_name" prompt="合同名称" showTitle="true" width="220"/>
                    <a:column name="project_number" align="center" prompt="申请编号" width="120"/>
                    <a:column name="bp_name" prompt="承租人名称" showTitle="true" width="100"/>
                    <a:column name="received_times" prompt="已还款期数" showTitle="true" width="120"/>
                    <!-- <a:column name="unit_id_n" prompt="所属部门" showTitle="true" width="110"/> -->
                    <a:column name="contract_status_n" align="center" prompt="合同状态" width="100"/>
                    <a:column name="inception_of_lease" align="center" prompt="起租日期" width="100"/>
                    <a:column name="lease_end_date" align="center" prompt="结束日期" width="100"/>
                    <!-- <a:column name="license_number" align="center" prompt="车牌号" width="80"/> -->
                    <a:column name="overdue_status" align="center" prompt="是否逾期" width="100"/>
