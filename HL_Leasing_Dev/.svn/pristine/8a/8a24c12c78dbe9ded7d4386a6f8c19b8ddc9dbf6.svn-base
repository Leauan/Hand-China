<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
		
	]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
			function query() {
			    $('ast607_rent_dun_result_ds').query();
			}
			
			function reset() {
			    $('ast607_rent_dun_query_ds').reset();
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="ast607_rent_dun_query_ds">
                <a:fields>
                    <a:field name="contract_number"/>
                    <a:field name="bp_name"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="ast607_rent_dun_result_ds" autoPageSize="true" autoQuery="true" model="ast.AST607.ast_rent_dun" queryDataSet="ast607_rent_dun_query_ds"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="query" text="查询"/>
                <a:gridButton click="reset" text="重置"/>
            </a:screenTopToolbar>
            <a:form column="4" marginWidth="60" title="查询条件">
                <a:textField name="contract_number" bindTarget="ast607_rent_dun_query_ds" prompt="合同号"/>
                <a:textField name="bp_name" bindTarget="ast607_rent_dun_query_ds" prompt="承租人名称"/>
                <a:textField name="overdue_times" bindTarget="ast607_rent_dun_query_ds" prompt="逾期期数"/>
            </a:form>
            <a:grid bindTarget="ast607_rent_dun_result_ds" marginHeight="200" marginWidth="60" navBar="true">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="contract_number" align="center" prompt="合同号" width="150"/>
                    <a:column name="bp_name" align="center" prompt="承租人名称" width="120"/>
                    <a:column name="brand_des" align="center" prompt="品牌" width="100"/>
                    <a:column name="series_des" align="center" prompt="车系" width="100"/>
                    <a:column name="model_des" align="center" prompt="车型" width="100"/>
                    <a:column name="item_frame_number" align="center" prompt="车架号" width="100"/>
                    <a:column name="other_fee" align="right" prompt="设备金额" width="100"/>
                    <a:column name="lease_item_amount" align="right" prompt="合同金额" width="100"/>
                    <a:column name="deposit" align="right" prompt="保证金" width="100"/>
                    <a:column name="down_payment" align="right" prompt="首付款" width="100"/>
                    <a:column name="residual_value" align="right" prompt="留购价" width="100"/>
                    <a:column name="pmt" align="right" prompt="每期租金" width="100"/>
                    <a:column name="lease_times" align="center" prompt="期数" width="100"/>
                    <a:column name="received_times" align="center" prompt="已还期数" width="100"/>
                    <a:column name="remain_principal" align="right" prompt="剩余还款金额" width="100"/>
                    <a:column name="overdue_times" align="center" prompt="逾期期数" width="100"/>
                    <a:column name="overdue_days" align="center" prompt="逾期天数" width="100"/>
                    <a:column name="penalty" align="right" prompt="逾期罚息" width="100"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
