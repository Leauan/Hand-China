<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure>
        <a:model-query model="prj.PRJ501RM.get_sysdate" rootPath="default_sysdate"/>
    </a:init-procedure>
    <a:view>
        <a:link id="prj501rm_save_and_submit_link" model="prj.PRJ501RM.insert_prj_project_inquire" modelaction="insert"/>
        <a:screen-include screen="modules/zjwfl/zj_wfl_common_javascript.screen"/>
        <script><![CDATA[
			function prj501rm_save_and_submit(){
			    var record = $('prj501rm_supply_agreement_ds').getAt(0);
			    if($('prj501rm_supply_agreement_ds').validate()){
				    Aurora.Masker.mask(Ext.getBody(), '${l:HLS.EXECUTING}');
		            Aurora.request({
		                url: $('prj501rm_save_and_submit_link').getUrl(),
		                para: {
		                    instance_id: '${/parameter/@instance_id}',
		                    project_id: '${/parameter/@project_id}',
		                    from_node_id: '${/parameter/@from_node_id}',
		                    node_desc: '${/parameter/@node_desc}',
		                    node_action_id: '${/parameter/@node_action_id}',
		                    return_reason:record.get('return_reason')
		                },
		                success: function(response) {
		                    if (response.result.return_number == 0) {
		                        Aurora.SideBar.show({
		                            msg: '提交成功',
		                            duration: 2000
		                        });
		                        Aurora.Masker.unmask(Ext.getBody());
		                        zjwfl5110_approvePage_close();
		                        $('zj_wfl_workflow_service_window').close();
		                    }
		                },
		                failure: function() {
		                    Aurora.Masker.unmask(Ext.getBody());
		                },
		                error: function() {
		                    Aurora.Masker.unmask(Ext.getBody());
		                },
		                scope: this
		            });
			    }
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="prj501rm_supply_agreement_ds" autoCreate="true" loadData="true">
                <a:fields>
                    <a:field name="return_time" defaultValue="${/model/default_sysdate/record/@nowdate}" readOnly="true"/>
                    <a:field name="return_reason" required="true"/>
                    <a:field name="project_id" defaultValue="${/parameter/@project_id}" readOnly="true"/>
                    <a:field name="instance_id" defaultValue="${/parameter/@instance_id}"/>
                    <a:field name="user_id" defaultValue="${/parameter/@user_id}"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="prj501rm_save_and_submit" text="保存并提交"/>
            </a:screenTopToolbar>
            <a:form>
                <a:hBox>
                    <a:dateTimePicker name="return_time" bindTarget="prj501rm_supply_agreement_ds" prompt="提醒时间"/>
                </a:hBox>
                <a:box>
                    <a:textArea name="return_reason" bindTarget="prj501rm_supply_agreement_ds" prompt="提醒内容" width="500"/>
                </a:box>
            </a:form>
        </a:screenBody>
    </a:view>
</a:screen>
