<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" dynamiccreateenabled="true">
    <a:view>
        <a:link id="con_df_car_confirm_link_id" url="${/request/@context_path}/modules/cont/CON650/con_df_car_confirm.screen"/>
        <a:link id="update_agent_id_and_confirm_link" model="cont.CON650.update_agent_id_and_confirm" modelaction="batch_update"/>
        <script><![CDATA[
            //确认
            window['${/parameter/@layout_code}_user_button1_layout_dynamic_click'] = function() {
                window['${/parameter/@bp_seq}${/parameter/@layout_code}_lock_layout_dynamic_window']();
                $('${/parameter/@layout_code}_user_button1').disable();
                var ds_id = get_dsid_by_basetable(window['${/parameter/@pre_layout_code}_layoutDataSetList'], 'con_contract_df_car_info');
                var ds_id2 = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'con_contract');
                var record2 = $(ds_id2).getAt(0);
                var records = $(ds_id).getSelected();
                if (!record2.get('agent_inventory_id')) {
                    Aurora.showInfoMessage('', '请先填写库点信息', null, 250, 100);
                    $('${/parameter/@layout_code}_user_button1').enable();
                    window['${/parameter/@bp_seq}${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    return;
                }
                var param = [];
                for (var i = 0;i < records.length;i++) {
                    var record = records[i];
                    var status = record.get('mortgage_status');
                    param.push({
                        'car_info_id': record.get('car_info_id'),
                        agent_inventory_id: record2.get('agent_inventory_id'),
                        '_status': 'update'
                    });
                }
                Aurora.request({
                    url: $('update_agent_id_and_confirm_link').getUrl(),
                    para: param,
                    success: function() {
                        Aurora.SideBar.show({
                            msg: '确认成功',
                            duration: 2000
                        });
                        $('${/parameter/@layout_code}_user_button1').enable();
                        window['${/parameter/@bp_seq}${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                        location.href = $('con_df_car_confirm_link_id').getUrl() + '?function_code=${/parameter/@pre_function_code}';
                    },
                    failure: function() {
                        $('${/parameter/@layout_code}_user_button1').enable();
                        window['${/parameter/@bp_seq}${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    },
                    error: function() {
                        $('${/parameter/@layout_code}_user_button1').enable();
                        window['${/parameter/@bp_seq}${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                    },
                    scope: this
                });
            };
        ]]></script>
        <a:screen-include screen="modules/cont/CON500/con_contract_get_layout_code.screen"/>
    </a:view>
</a:screen>
