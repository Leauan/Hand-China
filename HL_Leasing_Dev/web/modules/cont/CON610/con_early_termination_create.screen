        <script><![CDATA[
            var new_recs = []; //任务数组
            var total_index = 0;
            var current_index = 0;
            var file_path = '${/parameter/@file_path}';
            var download_arr = [];
            
            
            
            
            var save_flag = false;
            
            function Screen_forward() {
                history.go(1);
            }
            
            function Screen_back() {
                history.go(-1);
