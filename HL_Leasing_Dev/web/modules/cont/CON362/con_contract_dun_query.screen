<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:view>
        <script><![CDATA[
            function query()
            {
                $('CON362_contract_dun_record_ds').query();
            }
            
            function reset()
            {
                $('CON362_contract_dun_record_query').reset();
            }
    ]]></script>
        <a:dataSets>
            <a:dataSet id="CON362_contract_dun_record_query"><![CDATA[
        	]]></a:dataSet>
            <a:dataSet id="lookup_ds" lookupCode="CONTACT_WAYS"/>
            <a:dataSet id="CON362_contract_dun_record_ds" autoQuery="true" model="cont.CON362.con_dun_record_for_query" queryDataSet="CON362_contract_dun_record_query">
                <a:fields>
                    <a:field name="contact_ways_desc" displayField="code_value_name" options="lookup_ds" returnField="contact_ways" valueField="code_value"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="reset" text="重置"/>
                <a:gridButton click="query" text="查询"/>
            </a:screenTopToolbar>
            <a:form column="2" marginWidth="30" title="查询条件">
                <a:textField name="contract_number" bindTarget="CON362_contract_dun_record_query" prompt="合同编号"/>
                <a:textField name="bp_id_tenant_desc" bindTarget="CON362_contract_dun_record_query" prompt="承租人名称"/>
            </a:form>
            <a:grid id="CON362_contract_dun_record" bindTarget="CON362_contract_dun_record_ds" marginHeight="265" marginWidth="30">
                <a:columns>
                    <a:column name="bp_id_tenant_desc" align="center" lock="true" prompt="承租人名称" width="150"/>
                    <a:column name="contract_number" align="center" lock="true" prompt="HLS.CONTRACT_NUMBER" width="150"/>
                    <!--<a:column name="bp_id_agent_desc" align="center" lock="true" prompt="经销商" width="150"/>-->
                    <a:column name="overdue_amount" align="right" prompt="逾期金额" renderer="Aurora.formatMoney"/>
                    <a:column name="penalty" align="right" prompt="逾期罚息" renderer="Aurora.formatMoney"/>
                    <a:column name="overdue_days" align="right" prompt="最大逾期天数"/>
                    <a:column name="contact_date" align="center" prompt="催收日期" renderer="Aurora.formatDate" width="120"/>
                    <a:column name="dun_unit_id_desc" align="center" prompt="催收部门" width="120"/>
                    <a:column name="dun_person_id_desc" align="center" prompt="催收人" width="160"/>
                    <a:column name="contact_ways_desc" align="center" prompt="催收方式" width="100"/>
                    <a:column name="dun_message" align="center" prompt="催收结果" width="250"/>
                    <a:column name="dun_after_message" align="center" prompt="后续措施" width="250"/>
                    <a:column name="promised_return_date" align="center" prompt="承诺下次还款日期" renderer="Aurora.formatDate" width="150"/>
                    <a:column name="promised_return_amount" align="right" prompt="承诺下次还款金额" renderer="Aurora.formatMoney" width="150"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
    <script><![CDATA[
        	        	
        ]]></script>
</a:screen>
