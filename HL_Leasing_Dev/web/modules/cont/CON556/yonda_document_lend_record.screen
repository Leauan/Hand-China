            function yonda_document_lend_record_add() {
                var add_win = new Aurora.Window({
                    id: 'yonda_document_lend_record_add_win',
                    params: {
                        'winid': 'yonda_document_lend_record_add_win',
                        'button_type': 'new'
                    },
                    url: $('yonda_document_lend_record_adds_link').getUrl(),
                    fullScreen: true
                });
                add_win.on('close', function() {
                    $('con_document_lend_record_hd_query_result_ds').query();
                });
            }
            
            function yonda_document_lend_record_save() {
                $('yonda_document_lend_record_ln_ds').submit();
                //var record = $('yonda_document_lend_record_ln_ds').getCurrentRecord()
                //var returnDateField = record.getMeta().getField("return_date");
                //returnDateField.setReadOnly(true);
            }
            
            function yonda_document_lend_record_query() {
                $('con_document_lend_record_hd_query_result_ds').query();
            
            }
            
            function yonda_document_lend_record_reset() {
                $('con_contract_query_ds').reset();
            }
            
            //index发生改变，重新查询
            
            function yonda_document_lend_record_hd_ds_indexchange(ds, record) {
                $('yonda_document_lend_record_ln_ds').setQueryParameter('contract_id', record.get('contract_id'));
                $('yonda_document_lend_record_ln_ds').setQueryParameter('lend_header_id', record.get('lend_header_id'));
                $('yonda_document_lend_record_ln_ds').query();
            }
            
            function open_contract_win(record_id) {
                var record = $('yonda_document_lend_record_hd_ds').findById(record_id);
                var param = record.data;
                param['function_code'] = 'CON301';
                param['function_usage'] = 'QUERY';
                param['maintain_type'] = 'UPDATE';
                param['url_title'] = '${l:CON301.CONTRACT_DETAIL}';
                hls_doc_get_layout_code('con_contract_get_layout_code_link_id', param, 'con_contract_modify_link');
            }
            
            function contract_number_renderer(value, record, name) {
                if (record.get('contract_id')) {
                    return '<a href="javascript:open_contract_win(' + record.id + ')">' + value + '<a>';
                }
            }
            
            function return_date_readOnly(record, name) {
            
                var returnDateField = record.getMeta().getField(name);
                if (record.get('return_flag') == 'N') returnDateField.setReadOnly(false);
                else returnDateField.setReadOnly(true);
                return "yonda_document_lend_record_ln_grid_dp";
            }
            
            function lend_record_hd_indexchange(ds, record) {
                var lend_header_id = record.get('lend_header_id');
                $('con_contract_lend_ds').setQueryParameter('lend_header_id', lend_header_id);
                $('con_contract_lend_ds').query();
            
            }
            
            function document_lend_record_maintenance(lend_header_id) {
                // var record=$('con_document_lend_record_hd_query_result_ds').getCurrentRecord();
                // var lend_header_id=record.get('lend_header_id');
                var add_win = new Aurora.Window({
                    id: 'yonda_document_lend_record_add_win',
                    params: {
                        'winid': 'yonda_document_lend_record_add_win',
                        lend_header_id: lend_header_id
                    },
                    url: $('yonda_document_lend_record_add_link').getUrl(),
                    fullScreen: true
                });
                add_win.on('close', function() {
                    $('con_document_lend_record_hd_query_result_ds').query();
                });
            }
            
             function document_lend_record_maintenances(lend_header_id) {
                 debugger;
                // var record=$('con_document_lend_record_hd_query_result_ds').getCurrentRecord();
                // var lend_header_id=record.get('lend_header_id');
                var add_win = new Aurora.Window({
                    id: 'yonda_document_lend_record_add_wins',
                    params: {
                        'winid': 'yonda_document_lend_record_add_wins',
                        lend_header_id: lend_header_id
                    },
                    url: $('yonda_document_lend_record_add_links').getUrl(),
                    fullScreen: true
                });
                add_win.on('close', function() {
                    $('con_document_lend_record_hd_query_result_ds').query();
                });
            }
            
            function borrower_number_renderer(value, record, name) {
                if (name == 'borrower_number') {
                    var lend_header_id = record.get('lend_header_id');
                    var status_n=record.get('status_n');
                    //var status = record.get('status');
                   // if (status == 'NEW' || Ext.isEmpty(status)) {
                     //   return '<a href="javascript:document_lend_record_maintenance(' + lend_header_id + ');">' + value + '</a>';
            
                   // }
                   // return value;
                   if(status_n=='审批完成' || status_n=='审批中'){
                        return '<a href="javascript:document_lend_record_maintenances(' + lend_header_id + ');">' + value + '</a>';
                   }
                   return '<a href="javascript:document_lend_record_maintenance(' + lend_header_id + ');">' + value + '</a>';;
                }
            
            }
             function borrower_date_renderer(value, record, name) {
              var  status_n= record.get('status_n');
              var date=new Date();
                if (status_n=='审批中' && Aurora.formatDate(date)>Aurora.formatDate(value)) {
                    return "<font color='red'>" + Aurora.formatDate(value)+ "</font>";
              // return "<div style='background-color:#FF0000'>" + Aurora.formatDate(value)+ "</div>";
                }
                return Aurora.formatDate(value);
            
            }
