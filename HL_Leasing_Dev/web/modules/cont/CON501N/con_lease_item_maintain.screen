            function loadHandler(ds) {
                var records = ds.getAll();
                for (var i = 0;i < records.length;i++) {
                    var record = records[i];
                    for (var name in record.data) {
                        var bak_name = name + '_bak';
                        record.set(bak_name, record.get(name));
                    }
                }
            }
