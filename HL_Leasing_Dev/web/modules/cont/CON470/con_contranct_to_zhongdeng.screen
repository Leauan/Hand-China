<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:view>
        <script><![CDATA[
             function zhongdeng_ds_ds_query(){
                 $('contract_info_zhongdeng_ds').query();
             }

        ]]></script>
        <a:dataSets>
            <a:dataSet id="bp_class_ds">
                <a:datas>
                    <a:record name="个人" value="NP"/>
                    <a:record name="企业" value="ORG"/>
                </a:datas>
            </a:dataSet>
            <a:dataSet id="for_query_ds" autoCreate="true">
                <a:fields>
                    <a:field name="contract_number"/>
                    <a:field name="bp_tenant_name"/>
                    <a:field name="bp_class"/>
                    <a:field name="bp_class_des" displayField="name" options="bp_class_ds" returnField="bp_class" valueField="value"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="contract_info_zhongdeng_ds" autoPageSize="true" autoQuery="true" model="cont.CON470.con_contract_to_zhongdeng" queryDataSet="for_query_ds"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="zhongdeng_ds_ds_query" text="查询"/>
            </a:screenTopToolbar>
            <a:form column="4" labelWidth="150" marginWidth="80" title="查询条件">
                <a:textField name="contract_number" bindTarget="for_query_ds" prompt="合同编号"/>
                <a:textField name="bp_tenant_name" bindTarget="for_query_ds" prompt="承租人名称"/>
                <a:comboBox name="bp_class_des" bindTarget="for_query_ds" prompt="承租人类型"/>
            </a:form>
            <a:grid bindTarget="contract_info_zhongdeng_ds" marginHeight="180" marginWidth="80" navBar="true">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="rownum" align="center" lock="true" prompt="序号" width="50"/>
                    <a:column name="contract_number" lock="true" prompt="合同编号" width="150"/>
                    <a:column name="bp_tenant_name" lock="true" prompt="承租人名称" width="200"/>
                    <a:column name="bp_class_des" align="center" prompt="承租人类型" width="120"/>
                    <a:column name="id_card_no" prompt="身份证号" width="150"/>
                    <a:column name="corporate_code" prompt="法人代表" width="120"/>
                    <a:column name="organization_code" prompt="组织机构代码" width="150"/>
                    <a:column name="total_rental" align="right" prompt="租金总额（元）" renderer="Aurora.formatMoney" width="150"/>
                    <a:column name="cny" align="center" prompt="币种" width="60"/>
                    <a:column name="business_type_des" prompt="租赁方式" width="150"/>
                    <a:column name="lease_term" align="center" prompt="租赁期限(年)" width="120"/>
                    <a:column name="lease_item_name" prompt="租赁物名称" width="300"/>
                    <a:column name="lease_item_identy" prompt="租赁财产唯一标识码（车牌号/车架号/发动机号）" width="350"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
