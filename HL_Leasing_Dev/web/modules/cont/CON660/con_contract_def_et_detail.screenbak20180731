            //新增和加载时调用(form)
            window['${/parameter/@bp_seq}${/parameter/@layout_code}_on_layout_dynamic_form_add_and_load'] = function(ds, record, config_records, bp_seq) {
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'con_contract');
                if (ds.id == ds_id) {
                    record = $(ds_id).getCurrentRecord();
                    record.set('user_id', '${/session/@user_id}');
                    record.set('user_id_n', '${/model/user_name_path/record/@description}');
                    // record.set('req_status', '${/parameter/@req_status}');
                    record.set('req_status', '${/parameter/@req_status_n}');
                    if (record.get('outstanding_principal')) {
                        g_et_principal = record.get('outstanding_principal');
                    } else {
                        if (record.get('et_date')) {
                            calc_et_data(record.get('contract_id'), record.get('et_date'));
                        }
                    }
                    window['${/parameter/@layout_code}_unlock_layout_dynamic_window']();
                }
            
            };
