<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
		
	]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
			function con333_reset() {
			    $('con_document_history_query_ds').reset();
			}
			
			function con333_query() {
			    $('con_document_history_result_ds').query();
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="con_document_history_query_ds">
                <a:fields>
                    <a:field name="contract_number" autoComplete="true" autoCompleteField="contract_number" lovGridHeight="300" lovHeight="450" lovService="cont.CON500.con_contract_number_lov" lovWidth="500" title="HLS.CONTRACT_NUMBER">
                        <a:mapping>
                            <a:map from="contract_id" to="contract_id"/>
                            <a:map from="contract_number" to="contract_number"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="description" autoComplete="true" lovGridHeight="350" lovHeight="500" lovService="cont.CON333.exp_emp_assign_e_v" lovWidth="550" title="操作人">
                        <a:mapping>
                            <a:map from="user_desc" to="description"/>
                            <a:map from="user_id" to="user_id"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="user_id"/>
                    <a:field name="document_number" lovGridHeight="300" lovHeight="430" lovService="cont.CON333.con_document_number_for_query" lovWidth="400" title="申请编号">
                        <a:mapping>
                            <a:map from="project_id" to="project_id"/>
                            <a:map from="project_number" to="document_number"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="company_authority" defaultValue="${/session/@company_id}"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="con_document_history_result_ds" autoPageSize="true" model="cont.CON333.yonda_doc_status_history_vl" queryDataSet="con_document_history_query_ds"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="con333_reset" text="重置"/>
                <a:gridButton click="con333_query" text="查询"/>
            </a:screenTopToolbar>
        </a:screenBody>
        <a:form column="1" title="查询条件">
            <a:hBox>
                <a:lov name="document_number" bindTarget="con_document_history_query_ds" prompt="申请编号"/>
                <a:lov name="contract_number" bindTarget="con_document_history_query_ds" prompt="合同编号"/>
                <a:lov name="description" bindTarget="con_document_history_query_ds" prompt="操作人"/>
            </a:hBox>
        </a:form>
        <a:grid id="con_document_history_result_grid" bindTarget="con_document_history_result_ds" marginHeight="200" marginWidth="30" navBar="true" showRowNumber="true">
            <a:columns>
                <a:column name="document_category" align="center" prompt="单据类型" width="120"/>
                <a:column name="document_number" align="center" prompt="单据编号" width="120"/>
                <a:column name="description" align="center" prompt="操作人员" width="120"/>
                <a:column name="position_name" align="center" prompt="操作人员岗位" width="120"/>
                <a:column name="status_desc" align="center" prompt="操作明细" width="120"/>
                <a:column name="operation_time" align="center" prompt="操作时间" width="120"/>
                <a:column name="action_type_desc" align="center" prompt="工作流审批工作" width="120"/>
                <a:column name="comment_text" align="center" prompt="工作流审批信息" width="150"/>
                <a:column name="current_status_flag_des" align="center" prompt="是否单据最后状态"/>
            </a:columns>
        </a:grid>
    </a:view>
</a:screen>
