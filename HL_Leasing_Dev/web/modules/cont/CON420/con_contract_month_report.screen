<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:view>
        <script><![CDATA[
           function query() {
               $('con_contract_month_report_result_ds').query();
           }
           
           function reset() {
               $('con_contract_month_report_query_ds').reset();
           }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="con_contract_month_report_query_ds">
                <a:fields>
                    <a:field name="contract_number"/>
                    <a:field name="bp_np_name"/>
                    <a:field name="price_list_des"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="con_contract_month_report_result_ds" autoPageSize="true" autoQuery="true" model="cont.CON420.con_contract_month_report" queryDataSet="con_contract_month_report_query_ds"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="query" text="查询"/>
                <a:gridButton click="reset" text="重置"/>
            </a:screenTopToolbar>
            <a:form column="3" labelWidth="120" marginWidth="60" title="查询条件">
                <a:textField name="contract_number" bindTarget="con_contract_month_report_query_ds" prompt="合同号"/>
                <a:textField name="bp_np_name" bindTarget="con_contract_month_report_query_ds" prompt="承租人名称"/>
                <a:textField name="price_list_des" bindTarget="con_contract_month_report_query_ds" prompt="金融产品名称"/>
            </a:form>
            <a:grid bindTarget="con_contract_month_report_result_ds" marginHeight="180" marginWidth="80" navBar="true">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="contract_number" align="center" prompt="合同编号" width="150"/>
                    <a:column name="invoice_agent_name" align="center" prompt="经销商名称" width="150"/>
                    <a:column name="bp_np_name" align="center" prompt="用户名称" width="100"/>
                    <a:column name="bp_org_name" align="center" prompt="客户公司名称" width="120"/>
                    <a:column name="brand_id_des" align="center" prompt="品牌" width="80"/>
                    <a:column name="series_id_des" align="center" prompt="车系" width="80"/>
                    <a:column name="model_id_des" align="center" prompt="车型" width="80"/>
                    <a:column name="hd_user_col_n12" align="right" prompt="厂商指导价" width="80"/>
                    <a:column name="item_frame_number" align="center" prompt="车架号" width="100"/>
                    <a:column name="other_fee" align="right" prompt="车辆成交价" width="80"/>
                    <a:column name="insurance_fee" align="right" prompt="保险费" width="80"/>
                    <a:column name="other_fee3" align="right" prompt="购置税" width="80"/>
                    <a:column name="deposit_ratio_v" align="right" prompt="保证金比例" width="80"/>
                    <a:column name="lease_item_amount" align="right" prompt="贷款金额" width="80"/>
                    <a:column name="lease_term" align="center" prompt="贷款期限" width="80"/>
                    <a:column name="int_rate" align="center" prompt="利率" width="80"/>
                    <a:column name="pmt" align="center" prompt="每期租金" width="80"/>
                    <a:column name="submit_date" align="center" prompt="申请日期" renderer="Aurora.formatDate" width="100"/>
                    <a:column name="car_payment_completed_date" align="center" prompt="放款日期" renderer="Aurora.formatDate" width="100"/>
                    <a:column name="price_list_des" align="center" prompt="金融产品名称" width="100"/>
                    <a:column name="lease_charge_ratio" align="center" prompt="手续费费率" width="80"/>
                    <a:column name="lease_charge" align="right" prompt="手续费" width="80"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
