        <script><![CDATA[
            function contractQueryScreen_forward() {
                history.go(1);
            }
            
            function contractQueryScreen_back() {
                history.go(-1);
            }
            
            function contractQueryScreen_query() {
                $('contract_et_Screen_mainDs').query();
            }
            
            function contractQueryScreen_refresh() {
                var ds = $('contract_et_Screen_mainDs');
                ds.query(ds.currentPage);
            }
            
            function contractQueryScreen_add() {
                var a = $('contract_et_Screen_mainDs').getSelected();
                var record = a[0],
                    contract_id = record.get('contract_id');
                record.getMeta().getField('document_type_desc').setLovPara('contract_id', contract_id);
            
                new Aurora.Window({
                    id: 'con_contract_adv_settle_create_window',
                    url: $('con_contract_adv_settle_create_link').getUrl(),
                    params: {
                        winId: 'con_contract_adv_settle_create_window'
                    },
                    title: '提前结清创建',
                    fullScreen: true
                });
            }
            
            function onUpdate_early_termination(dataSet, record, name, value) {
                if (name == 'termination_date') {
                    var termination_date = Aurora.formatDate(value);
                    Aurora.request({
                        url: $('con_contract_termination_date_check_link').getUrl(),
                        para: {
                            termination_date: termination_date
                        },
                        success: function(args) { //
                            var check_flag = args.result.check_flag;
                            if (check_flag == 'N') {
                                Aurora.showMessage('提示', '提前结清日不在预定规则内');
                            }
                        },
                        scope: this
                    });
                }
            }
            
            function contractQueryScreen_submit() {
            
               }
            
            function render_et_agreement_number(value, record, name) {
                if (!record.isNew) {
                    return '<a href="javascript:winOpen_update(' + record.get('et_agreement_id') + ',' + record.get('contract_id') + ',\'' + record.get('et_agreement_status') + '\')">' + value + '</a>';
                }
            
            }
            
            function winOpen_update(et_agreement_id, contract_id, et_agreement_status) {
                var function_usage, utl_title;
            
                if (et_agreement_status == 'NEW' || et_agreement_status == 'REJECT') {
                    utl_title = '提前结清维护';
                    function_usage = 'UPDATE';
                } else {
                    function_usage = 'QUERY';
                    utl_title = '提前结清查询';
                }
            
                var win = new Aurora.Window({
                    id: 'con_contrac_et_update_window',
                    url: $('con_contrac_et_update_link').getUrl(),
                    params: {
                        et_agreement_id: et_agreement_id,
                        contract_id: contract_id,
                        winId: 'con_contrac_et_update_window',
                        function_usage: function_usage
                    },
                    title: utl_title,
                    fullScreen: true
                });
                win.on('close', function() {
                    contractQueryScreen_query();
                });
            }
            
            function contractQueryScreen_maintance() {
                var record = $('contract_et_Screen_mainDs').getCurrentRecord();
                winOpen_update(record.get('et_agreement_id'), record.get('contract_id'), record.get('et_agreement_status'));
            }
            
            function contractQueryScreen_reset() {
                $('contract_et_Screen_paraDs').reset();
            }
            
            function cancel() {
                var record = $('contract_et_Screen_mainDs').getCurrentRecord();
                var et_agreement_id = record.get('et_agreement_id');
                if (record.get('et_agreement_status') != 'NEW' && record.get('et_agreement_status') != 'REJECT') {
                    Aurora.showMessage('${l:PROMPT}', '只有新建和拒绝状态的提前结清才允许取消！');
                    return;
                }
            
                Aurora.showConfirm('${l:HLS.PROMPT}', '确定要取消？', function() {
                    Aurora.request({
                        url: $('con_contract_et_cancel_link').getUrl(),
                        para: {
                            et_agreement_id: et_agreement_id
                        },
                        success: function(args) {
                            Aurora.SideBar.show({
                                msg: '取消成功',
                                duration: 2000
                            });
                            $('contract_et_Screen_mainDs').query();
                        },
                        failure: function() {
                            Aurora.Masker.unmask(Ext.getBody());
                        },
                        error: function() {
                            Aurora.Masker.unmask(Ext.getBody());
                        },
                        scope: this
                    });
                });
            }
            
