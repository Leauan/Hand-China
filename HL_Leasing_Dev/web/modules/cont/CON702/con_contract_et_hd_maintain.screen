    <a:view>
        <a:link id="con_contrac_et_update_link" url="${/request/@context_path}/modules/cont/CON702/con_contract_et_update.screen"/>
        <a:link id="con_contract_et_cancel_link" model="cont.CON611.con_contract_rp_cancel" modelaction="execute"/>
