<a:screen xmlns:a="http://www.aurora-framework.org/application" default-dispatch="${/model/url/@URL}" dispatch-style="redirect" trace="true">
    <a:init-procedure>
        <a:model-query model="acp.ACP310.acp_invoice_hd_print_query" rootPath="hd_rp"/>
        <a:model-query model="acp.ACP310.acp_invoice_ln_print_query" rootPath="ln_rp"/>
    </a:init-procedure>
    <a:view>
        <style media="print"><![CDATA[
	        .PageNext
	        {
	            page-break-after: always;
	        }
		]]></style>
        <style type="text/css"><![CDATA[
			table
			{
			border-collapse:collapse;
			border:none;
			};
			td{
			    height:50px;
			}
    	]]></style>
        <ajax-init/>
        <a:freeMarker><![CDATA[
        <#if  model.getObject('/model/hd_rp').getChilds()??>
		<#list  model.getObject("/model/hd_rp").getChilds() as payment_req_rec>
		 <P align="center">
            <B>
                <FONT face="楷体" size="7" style="border-bottom:4px double black;">进项案审核单</FONT>
                <br/>
            </B>
        </P>
       <table border="1" width="1000"  style="margin-left:80px;"  >
            <tr>
             <td width="10%">合同编号</td>
             <td width="15%">${payment_req_rec.getString('contract_number')!''}</td> 
             <td width="10%">车架号</td>
             <td width="15%">${payment_req_rec.getString('item_frame_number')!''}</td> 
             <td width="10%">申请日期</td>
             <td width="15%">${payment_req_rec.getString('invoice_date')!''}</td> 
             <td width="10%">币种</td>
             <td width="15%">${payment_req_rec.getString('currency_name')!''}</td>  
           </tr>
		    <tr>
             <td >对象名称</td>
             <td colspan="3">${payment_req_rec.getString('agent_name')!''}</td> 
             <td >承租人</td>
             <td colspan="3">${payment_req_rec.getString('bp_tenant_name')!''}</td> 
           </tr>
      </table>
      </#list>
		</#if>
      <p/>
      <table border="1" width="1000"  style="margin-left:80px;">
         <tr>
           <td width="50%" style="text-align:center;">应付项目</td>
           <td width="50%" style="text-align:center;">本次申请金额</td>
         </tr>
             <#if  model.getObject('/model/ln_rp').getChilds()??>
		     <#list  model.getObject("/model/ln_rp").getChilds() as payment_req_l_rec>
		       <tr>
		       <td>${payment_req_l_rec.getString('product_name')!''}</td>
		       <td style="text-align:right;">${payment_req_l_rec.getString('total_amount')!''}</td>
		       </tr>
		     </#list>
		     </#if>
		     </table>
		 ]]></a:freeMarker>
        <hr style="margin-top:100px;margin-left:80px;height:2px;border:none;border-top:2px ridge black;" width="1000"/>
        <div style="margin-left:80px;" width="1000"><![CDATA[相关参会人员确认：]]></div>
        <script><![CDATA[
            window.onload = window.print();
        ]]></script>
    </a:view>
</a:screen>
