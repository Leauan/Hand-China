<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
		
	]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
			function query() {
			    $('ast606_mortgage_result_ds').query();
			}
			
			function reset() {
			    $('ast602_mortgage_query_ds').reset();
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="ast602_mortgage_query_ds">
                <a:fields>
                    <a:field name="contract_number"/>
                    <a:field name="bp_name"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="ast606_mortgage_result_ds" autoPageSize="true" autoQuery="true" model="ast.AST602.ast_car_mortgage_report" queryDataSet="ast602_mortgage_query_ds">
                <a:fields>
                    <a:field name="mortgage_date" datatype="java.util.Date"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="query" text="查询"/>
                <a:gridButton click="reset" text="重置"/>
            </a:screenTopToolbar>
            <a:form column="4" marginWidth="60" title="查询条件">
                <a:textField name="contract_number" bindTarget="ast602_mortgage_query_ds" prompt="合同号"/>
                <a:textField name="bp_name" bindTarget="ast602_mortgage_query_ds" prompt="承租人名称"/>
            </a:form>
            <a:grid bindTarget="ast606_mortgage_result_ds" marginHeight="200" marginWidth="60" navBar="true">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="contract_number" align="center" prompt="合同号" width="150"/>
                    <a:column name="bp_name" align="center" prompt="承租人名称" width="220"/>
                    <a:column name="brand_des" align="center" prompt="品牌" width="120"/>
                    <a:column name="series_des" align="center" prompt="车系" width="120"/>
                    <a:column name="model_des" align="center" prompt="车型" width="120"/>
                    <a:column name="item_frame_number" align="center" prompt="车架号" width="150"/>
                    <a:column name="license_number" align="center" prompt="车牌号" width="100"/>
                    <a:column name="mortgage_by" align="center" prompt="抵押权人" width="150"/>
                    <a:column name="mortgage_date" align="center" prompt="抵押日期" renderer="Aurora.formatDate" width="100"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
