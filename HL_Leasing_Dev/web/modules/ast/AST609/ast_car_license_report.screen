<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
		
	]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
			function query()　{
			    $('ast609_license_result_ds').query();
			}
			
			function reset() {
			    $('ast609_license_query_ds').reset();
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="yes_no_ds" lookupCode="YES_NO"/>
            <a:dataSet id="ast609_license_query_ds">
                <a:fields>
                    <a:field name="contract_number"/>
                    <a:field name="bp_name"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="ast609_license_result_ds" autoPageSize="true" autoQuery="true" model="ast.AST609.ast_car_license_report" queryDataSet="ast609_license_query_ds">
                <a:fields>
                    <a:field name="pay_promise_date" datatype="java.util.Date"/>
                    <a:field name="first_license_date" datatype="java.util.Date"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="query" text="查询"/>
                <a:gridButton click="reset" text="重置"/>
            </a:screenTopToolbar>
            <a:form column="4" marginWidth="60" title="查询条件">
                <a:textField name="contract_number" bindTarget="ast609_license_query_ds" prompt="合同号"/>
                <a:textField name="bp_name" bindTarget="ast609_license_query_ds" prompt="承租人名称"/>
            </a:form>
            <a:grid bindTarget="ast609_license_result_ds" marginHeight="200" marginWidth="60" navBar="true">
                <a:toolBar>
                    <a:button type="excel"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="contract_number" align="center" prompt="合同号" width="150"/>
                    <a:column name="bp_name" align="center" prompt="承租人名称" width="180"/>
                    <a:column name="brand_des" align="center" prompt="品牌" width="100"/>
                    <a:column name="series_des" align="center" prompt="车系" width="100"/>
                    <a:column name="model_des" align="center" prompt="车型" width="150"/>
                    <a:column name="item_frame_number" align="center" prompt="车架号" width="120"/>
                    <a:column name="license_provider_name" align="center" prompt="牌照提供方" width="120"/>
                    <a:column name="pay_promise_date" align="center" prompt="付款承诺书打印时间" renderer="Aurora.formatDate" width="150"/>
                    <a:column name="first_license_date" align="center" prompt="第一次上牌时间" renderer="Aurora.formatDate" width="150"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
