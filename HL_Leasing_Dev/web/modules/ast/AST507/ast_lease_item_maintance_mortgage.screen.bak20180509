                    </a:events>
                </a:comboBox>
                <a:textField name="inception_of_lease" bindTarget="con_item_info_query_ds" prompt="起租日">
                    <a:events>
                        <a:event name="enterdown" handler="enterdownHandler"/>
                    </a:events>
                </a:textField>
                <a:textField name="bp_id_agent_level1" bindTarget="con_item_info_query_ds" prompt="经销商">
                    <a:events>
                        <a:event name="enterdown" handler="enterdownHandler"/>
                    </a:events>
                </a:textField>
                <a:comboBox name="contract_status_desc" id="contract_status_ds" bindTarget="con_item_info_query_ds" prompt="合同状态">
                    <a:events>
                        <a:event name="enterdown" handler="enterdownHandler"/>
                    </a:events>
                </a:comboBox>
            </a:form>
            <a:grid bindTarget="con_item_info_mortgage_ds" height="200" marginWidth="30" navBar="true">
                <a:columns>
                    <a:column name="contract_number" prompt="合同号" width="120"/>
                    <a:column name="bp_name" prompt="承租人" showTitle="true" width="150"/>
                    <a:column name="brand_dis" prompt="品牌" showTitle="true" width="80"/>
                    <a:column name="series_dis" prompt="车系" showTitle="true" width="80"/>
                    <a:column name="model_dis" prompt="车型" showTitle="true" width="0"/>
                    <a:column name="color_of_apprearance" prompt="外观颜色" showTitle="true" width="80"/>
                    <a:column name="item_frame_number" prompt="车架号" showTitle="true" width="150"/>
                    <a:column name="item_engine_number" prompt="发动机号" showTitle="true" width="100"/>
                    <a:column name="inception_of_lease" prompt="起租日" showTitle="true" width="150"/>
                    <a:column name="contract_status_n" prompt="合同状态" showTitle="true" width="100"/>
                    <a:column name="bp_id_agent_level1_n" prompt="经销商" showTitle="true" width="100"/>
                </a:columns>
                <a:editors>
                    <a:textField id="item_info_tf"/>
                    <a:checkBox id="item_info_cb"/>
                </a:editors>
            </a:grid>
            <a:screen-include screen="modules/ast/AST507/ast_car_insurance_mortgage.screen"/>
        </a:screenBody>
    </a:view>
</a:screen>
