<a:screen xmlns:a="http://www.aurora-framework.org/application" trace="true">
    <a:init-procedure>
        <a:model-query model="ast.AST610.con_df_get_import_head_id" rootPath="header"/>
        <a:import-excel header_id="${/model/header/record/@header_id}" separator="," status_field="/parameter/@ImportSuccess" template_code="CAR_REGU_IMPORT" user_id="${/session/@user_id}"/>
        <a:model-query defaultWhereClause="header_id=${/model/header/record/@header_id} and TEMPLATE_CODE = &apos;CAR_REGU_IMPORT&apos;" model="ast.AST610.con_df_import_get_status" rootPath="status"/>
    </a:init-procedure>
    <a:view>
        <a:link id="ast610_import_link" url="${/request/@context_path}/modules/ast/AST610/ast_car_import_detail.screen?header_id=${/model/header/record/@header_id}"/>
        <a:link id="ast610_import_save_data_link" url="${/request/@context_path}/modules/ast/AST610/ast_car_import_save.svc"/>
        <script><![CDATA[
            function loadComplete() {
                if ('${/model/status/record/@status}' == 'NEW') {
                    var import_type = '${/parameter/@import_type}';
                    var param = {};
                    param['header_id'] = '${/model/header/record/@header_id}';
                    param['user_id'] = '${/session/@user_id}';
                    param['import_type'] = import_type;
                    Aurora.request({
                        url: $('ast610_import_save_data_link').getUrl(),
                        para: param,
                        success: function() {
                            debugger;
                            window.location.href = $('ast610_import_link').getUrl() + '&import_type=' + import_type;
                        },
                        scope: this
                    });
                } else {
                    Ext.get('success_form').setStyle('display', 'none');
                    Ext.get('failure_form').setStyle('visibility', 'visible');
                }
            }
            
            
        ]]></script>
        <a:dataSets>
            <a:dataSet id="error_ds">
                <a:fields>
                    <a:field name="import_field_1" prompt="import_field_1"/>
                    <a:field name="import_field_2" prompt="import_field_2"/>
                    <a:field name="import_field_3" prompt="import_field_3"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:form id="failure_form" height="400" style="visibility:hidden" title="ERROR_MESSAGE" width="980">
                <a:grid bindTarget="error_ds" height="340" navBar="true" width="980">
                    <a:columns>
                        <a:column name="import_field_1"/>
                        <a:column name="import_field_2"/>
                        <a:column name="import_field_3"/>
                    </a:columns>
                </a:grid>
            </a:form>
        </a:screenBody>
        <script><![CDATA[
	  		loadComplete();
	  	]]></script>
    </a:view>
</a:screen>
