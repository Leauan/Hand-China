<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" dynamiccreateenabled="true">
    <a:init-procedure/>
    <a:view>
        <a:link id="${/parameter/@layout_code}${/parameter/@tree_code}_get_layout_code_link_id" model="cont.CON500.con_contract_get_layout_code" modelaction="update"/>
        <a:link id="${/parameter/@layout_code}${/parameter/@tree_code}_credit_query_request_id" url="${/request/@context_path}/modules/cre/CRE000/credit_query_request.screen"/>
        <script><![CDATA[
	
    
      //超链接
                        function credit(id, name, query_only) {
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'tre_loan_withdraw_con');
                var record = window['${/parameter/@layout_code}_hls_link_render_record'][id + '---' + name];
                var param = {};
                param['company_id'] = ${/session/@company_id};
                param['project_id'] = record.get('project_id');
                param['be_queried_bp_id'] = record.get('bp_id_tenant');
                param['id_number'] = record.get('id_card_number');
                param['be_queried_phone'] = record.get('cell_phone');
                param['function_code'] = 'CRE001';   
                param['url_title'] = '鹏元征信查看';
                hls_doc_get_layout_code('${/parameter/@layout_code}${/parameter/@tree_code}_get_layout_code_link_id', param, '${/parameter/@layout_code}${/parameter/@tree_code}_credit_query_request_id', ds_id);
            }
            
            //超链接渲染
            window['${/parameter/@layout_code}_dynamic_link_renderer'] = function(value, record, name, config_record) {
                var link_function = '';
                window['${/parameter/@layout_code}_hls_link_render_record'][record.id + '---' + name] = record;
                if (name == 'credit' && !record.isnew) {
                    link_function = 'credit';
                    return '<a href="javascript:window[\'' + link_function + '\'](\'' + record.id + '\',\'' + name + '\',\'' + config_record.get('query_only') + '\');">' + '鹏元征信' + '</a>';
                }
            };

]]></script>
        <a:screen-include screen="modules/cont/CON500/con_contract_get_layout_code.screen"/>
    </a:view>
</a:screen>
