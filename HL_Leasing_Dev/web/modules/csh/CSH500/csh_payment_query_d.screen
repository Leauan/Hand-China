                    <!-- <a:column name="closed_flag" prompt="CSH502.CSH_CLOSED_FLAG" width="60"/> -->
                    <!-- <a:column name="user_name" prompt="CSH502.CSH_PROPOSER"/> -->
                    <!-- <a:column name="currency_code" align="center" prompt="HLS.CURRENCY" width="60"/> -->
