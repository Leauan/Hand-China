<a:screen xmlns:c="aurora.application.action" xmlns:p="uncertain.proc" xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" trace="true">
    <a:init-procedure>
        <a:model-query fetchAll="true" model="rpt.RPT5220.balance_sheet_columns" rootPath="/model/balance_sheet_columns"/>
        <a:model-query model="rpt.RPT5210.rpt_select_flag" rootPath="rpt_select_flag"/>
    </a:init-procedure>
    <a:view>
        <script><![CDATA[
            function close() {
                $('monthend_amount_report_window').close();
            }
            
            function query() {
                $('rpt5220_monthend_amount_ds').query();
            }
            
            function reset() {
                $('rpt5220_monthend_amount_ds').reset();
            }
              
            function amtSumInfo(data, name) {
                if (name == 'contract_number') {
                    return '<font color=red>' + '合计:' + '</font>';
                } else {
                    return colum_caculateTotal(data, name);
                }
            }
            
            function colum_caculateTotal(data, name) {
                var total = 0;
                var length = data.length;
                var value = 0;
                for (var i = 0;i < length;i++) {
            
                    if (Ext.isEmpty(data[i].get(name))) {
                        value = 0;
                    } else {
                        //去掉小计
                        if (data[i].get('contract_id') == -1) {
                            value = 0;
                        } else {
                            value = data[i].get(name);
                        }
                    }
                    total = plus(total, value);
                }
                return '<font color=red>' + Aurora.formatMoney(total) + '</font>';
            
            }
            
            function count_backgroundcolor(value, record, name) {
                var flag = record.get('contract_id');
                //小计颜色背景色改变
                if (flag == -1) {
                    if (value) {
                        if (name == 'year_rate' && value) {
                            return '<div style="background-color:#fff2cc">' + parseFloat(mul(value, 100)).toFixed(2) + '%' + '</div>';
            
                        } else if (name == 'bp_code' || name == 'bp_name' || name == 'contract_number' || name == 'year_rate'|| name =='days') {
                            //文本格式
                            return '<div style="background-color:#fff2cc">' + value + '</div>';
                        } else {
                            return '<div style="background-color:#fff2cc">' + Aurora.formatMoney(value) + '</div>';
                        }
                    } else if (value == 0) {
                        return '<div style="background-color:#fff2cc">' + Aurora.formatMoney(value) + '</div>';
                    } else {
                        return '<div style="background-color:#fff2cc">' + '&nbsp' + '</div>';
                    }
                } else {
            
                    if (name == 'year_rate' && value) {
                        return parseFloat(mul(value, 100)).toFixed(2) + '%';
                    } else if (name == 'bp_code' || name == 'bp_name' || name == 'contract_number' || name == 'year_rate'|| name =='days') {
                        //文本格式
                        return value;
                    } else {
                        return Aurora.formatMoney(value);
                    }
            
                }
            }
            function select_flag_change(ds, record, name, value, oldVlaue){
                if(name=='select_flag'){
                    query();
                }
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="cash_received_record_ds">
                <a:fields>
                    <a:field name="bp_id"/>
                    <a:field name="bp_name" lovGridHeight="330" lovHeight="470" lovLabelWidth="120" lovService="cont.CON341.hls_bp_master_v_all_lov?bp_category=AGENT" lovWidth="700" title="承租人">
                        <a:mapping>
                            <a:map from="bp_id" to="bp_id"/>
                            <a:map from="bp_name" to="bp_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="select_flag" defaultValue="ALL"/>
                </a:fields>
                <a:events>
                    <a:event name="update" handler="select_flag_change"/>
                </a:events>
            </a:dataSet>
            <a:dataSet id="rpt5220_monthend_amount_ds" autoPageSize="true" autoQuery="true" model="rpt.RPT5220.rpt_month_report_query" queryDataSet="cash_received_record_ds" queryUrl="${/request/@context_path}/autocrud/rpt.RPT5220.rpt_month_report_query/query?function_code=RPT5220"><![CDATA[
                
            ]]></a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:gridButton click="close" text="退出"/>
                <a:gridButton click="query" text="查询"/>
                <a:gridButton click="reset" text="重置"/>
                <a:gridButton bind="rpt5220_monthend_amount_grid" type="excel"/>
            </a:screenTopToolbar>
            <a:form column="4" marginWidth="80" title="查询条件">
                <a:lov name="bp_name" bindTarget="cash_received_record_ds" prompt="经销商"/>
                <a:radio name="select_flag" bindTarget="cash_received_record_ds" labelField="code_value_name" options="/model/rpt_select_flag" prompt="" radioSeparator="" valueField="code_value" width="600"/>
            </a:form>
            <a:grid id="rpt5220_monthend_amount_grid" bindTarget="rpt5220_monthend_amount_ds" marginHeight="200" marginWidth="80" navBar="true">
                <a:columns>
                    <a:column name="bp_code" lock="true" prompt="经销商编号" renderer="count_backgroundcolor" width="100"/>
                    <a:column name="bp_name" lock="true" prompt="经销商名称" renderer="count_backgroundcolor" width="200"/>
                    <a:column name="contract_number" footerRenderer="amtSumInfo" lock="true" prompt="合同编号" renderer="count_backgroundcolor" width="120"/>
                    <a:placeHolder id="balance_sheet_id"/>
                    <a:column name="ref_n01" align="right" footerRenderer="amtSumInfo" prompt="管理费收入" renderer="count_backgroundcolor" width="120"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
    <a:view-config>
        <c:create-config targetId="balance_sheet_id">
            <p:loop source="/model/balance_sheet_columns">
                <c:process-config>
                    <a:column prompt="${@field}">
                        <a:column name="attribute_${@no}" align="right" footerRenderer="amtSumInfo" prompt="余额" renderer="count_backgroundcolor"/>
                    </a:column>
                </c:process-config>
            </p:loop>
        </c:create-config>
    </a:view-config>
</a:screen>
