<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" dynamiccreateenabled="true" trace="true">
    <a:init-procedure/>
    <a:view>
        <a:link id="open_hls_agent_linkage_detail_query_link" url="${/request/@context_path}/modules/hls/HLS890/hls_agent_linkage_detail_query.screen"/>
        <a:link id="linkage_submit_wfl" model="hls.HLS891.linkage_submit_wfl" modelaction="execute"/>
        <script><![CDATA[
            window['${/parameter/@layout_code}_submit_approval_layout_dynamic_click'] = function() {
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'hls_linkage_bp_month', 'G_RESULT');
                var records = $(ds_id).getSelected();
                var record = records[0];
                if (record.dirty || !record.get('linkage_amount')) {
                    Aurora.showInfoMessage('提示', '请先保存！');
                    return false;
                }
                Aurora.showConfirm('${l:HLS.PROMPT}', '确认提交申请？', function() {
                    Aurora.Masker.mask(Ext.getBody());
                    Aurora.request({
                        url: $('linkage_submit_wfl').getUrl(),
                        para: {
                            record_id: record.get('record_id')
                        },
                        success: function(res) {
                            Aurora.Masker.unmask(Ext.getBody());
                            Aurora.SideBar.show({
                                msg: '提交成功',
                                duration: 2000
                            });
                            $(ds_id).query();
                        },
                        failure: function() {
                            Aurora.Masker.unmask(Ext.getBody());
                        },
                        error: function() {
                            Aurora.Masker.unmask(Ext.getBody());
                        },
                        scope: this
                    });
                }, null);
            };
            
            function open_hls_linkage_bp_number_win(ds_id, record_id) {
                var record = $(ds_id).findById(record_id);
                var param = record.data;
                var hd_id = record.get('hd_id');
                var final_count = record.get('final_count');
                var cars_num = record.get('cars_num');
                var linkage_amount = record.get('linkage_amount');
                var win = new Aurora.Window({
                    id: 'hls_linkage_bp_number_window',
                    url: $('open_hls_agent_linkage_detail_query_link').getUrl(),
                    params: {
                        hd_id: hd_id,
                        final_count: final_count,
                        cars_num: cars_num,
                        linkage_amount: linkage_amount,
                        winId: 'hls_linkage_bp_number_window'
                    },
                    title: '联动矩阵',
                    width: 600,
                    height: 360
                });
            
            }
            window['${/parameter/@layout_code}_dynamic_link_renderer'] = function(value, record, name, config_record) {
                if (name == 'detail' && !record.isNew) {
                    return '<a href="javascript:open_hls_linkage_bp_number_win(\'' + record.ds.id + '\',\'' + record.id + '\')">' + '联动矩阵' + '</a>';
                }
                return value;
            };
            
            
            //加载时调用
            window['${/parameter/@bp_seq}${/parameter/@layout_code}_on_layout_dynamic_grid_load'] = function(ds, record, config_records, bp_seq) {
            
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'hls_linkage_bp_month', 'G_RESULT');
                var records = $(ds_id).getAll();
                // if (records.length == 0) {
                    // $('AGENT_MONTH_LINKAGE_MODIFY_save').disable();
                    // $('AGENT_MONTH_LINKAGE_MODIFY_submit_approval').disable();
                // } else {  }
                    for (var i = 0;i < records.length;i++) {
                        var record = records[i];
                        var status = record.get('status');
                        if (status == 'APPROVED' || status == 'APPROVING') {
                            record.getField('linkage_desc').setReadOnly(true);
                            record.getField('linkage_desc').setRequired(false);
                            record.getField('linkage_desc_n').setReadOnly(true);
                            record.getField('linkage_desc_n').setRequired(false);
                        }
                    }
            
            };
            //保存方法
            window['${/parameter/@layout_code}_SAVE_LAYOUT_DYNAMIC_CLICK'] = function(nextStep) {
                var ds_id = get_dsid_by_basetable(window['${/parameter/@layout_code}_layoutDataSetList'], 'hls_linkage_bp_month');
                $(ds_id).submit();
            }
        ]]></script>
        <a:screen-include screen="modules/cont/CON500/con_contract_get_layout_code.screen"/>
    </a:view>
</a:screen>
