<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
		
	]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
			function hls234_reset() {
			    $('hls234_bank_query_ds').reset();
			}
			
			function hls234_query() {
			    $('hls234_bank_result_ds').query();
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="yes_no_ds" lookupCode="YES_NO"/>
            <a:dataSet id="hls234_bank_query_ds">
                <a:fields>
                    <a:field name="bank_name"/>
                    <a:field name="bank_code" autoComplete="true" autoCompleteField="bank_code" lovHeight="500" lovService="hls.HLS234.yonda_fin_institute" lovWidth="500" title="金融机构（银行）">
                        <a:mapping>
                            <a:map from="bank_code" to="bank_code"/>
                            <a:map from="bank_name" to="bank_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="enabled_flag_des" displayField="code_value_name" options="yes_no_ds" returnField="enabled_flag" valueField="code_value"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="hls234_bank_result_ds" autoPageSize="true" autoQuery="true" model="hls.HLS234.yonda_fin_institute" queryDataSet="hls234_bank_query_ds" selectable="true">
                <a:fields>
                    <a:field name="csh_bank_id"/>
                    <a:field name="enabled_flag" checkedValue="Y" defaultValue="N" uncheckedValue="N"/>
                    <a:field name="bank_short_name" lovHeight="500" lovService="hls.HLS234.csh_bank" lovWidth="500" title="银行">
                        <a:mapping>
                            <a:map from="bank_code" to="bank_code_des"/>
                            <a:map from="bank_short_name" to="bank_short_name"/>
                            <a:map from="bank_id" to="csh_bank_id"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="bank_code_des"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="hls234_reset" text="重置"/>
                <a:gridButton click="hls234_query" text="查询"/>
            </a:screenTopToolbar>
            <a:form column="3" labelWidth="100" marginWidth="350" title="查询条件">
                <a:lov name="bank_code" bindTarget="hls234_bank_query_ds" prompt="金融机构代码"/>
                <a:textField name="bank_name" bindTarget="hls234_bank_query_ds" prompt="金融机构名称"/>
                <a:comboBox name="enabled_flag_des" bindTarget="hls234_bank_query_ds" prompt="是否启用"/>
            </a:form>
            <a:grid id="bank_result_grid" bindTarget="hls234_bank_result_ds" marginHeight="150" marginWidth="50" navBar="true">
                <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="delete"/>
                    <a:button type="save"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="bank_code" align="center" editor="bank_result_grid_tf" prompt="金融机构代码" width="250"/>
                    <a:column name="bank_name" align="center" editor="bank_result_grid_tf" prompt="金融机构名称" width="350"/>
                    <a:column name="bank_short_name" align="center" editor="bank_result_grid_lov" prompt="银行" width="250"/>
                    <a:column name="enabled_flag" align="center" editor="bank_result_grid_cb" prompt="是否启用" width="200"/>
                </a:columns>
                <a:editors>
                    <a:lov id="bank_result_grid_lov"/>
                    <a:checkBox id="bank_result_grid_cb"/>
                    <a:textField id="bank_result_grid_tf"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
