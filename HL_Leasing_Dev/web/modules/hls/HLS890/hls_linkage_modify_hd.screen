<?xml version="1.0" encoding="UTF-8"?>
<a:screen xmlns:a="http://www.aurora-framework.org/application" customizationEnabled="true" dynamiccreateenabled="true" trace="true">
    <a:view>
        <a:link id="open_hls_linkage_bp_number_link" url="${/request/@context_path}/modules/hls/HLS890/hls_agent_linkage_detail.screen"/>
        <a:link id="open_copy_linkage_bp_hd_link" url="${/request/@context_path}/modules/hls/HLS890/hls_linkage_hd_copy.screen"/>
        <script><![CDATA[
            function open_hls_linkage_bp_number_win(ds_id, record_id) {
                var record = $(ds_id).findById(record_id);
                var param = record.data;
                var hd_id = record.get('hd_id');
                var win = new Aurora.Window({
                    id: 'hls_linkage_bp_number_window',
                    url: $('open_hls_linkage_bp_number_link').getUrl(),
                    params: {
                        hd_id: hd_id,
                        winId: 'hls_linkage_bp_number_window'
                    },
                    title: '联动矩阵维护',
                    fullScreen: true
                });
            
            }
            window['${/parameter/@layout_code}_dynamic_link_renderer'] = function(value, record, name, config_record) {
                if (name == 'detail' && !record.isNew) {
                    return '<a href="javascript:open_hls_linkage_bp_number_win(\'' + record.ds.id + '\',\'' + record.id + '\')">' + '联动矩阵维护' + '</a>';
                }
                return value;
            };
            window['${/parameter/@layout_code}_user_button2_layout_dynamic_click'] = function() {
                var win = new Aurora.Window({
                    id: 'copy_linkage_bp_hd_window',
                    url: $('open_copy_linkage_bp_hd_link').getUrl(),
                    params: {
                        function_code:'HLS890C',
                        bp_id: '${/parameter/@bp_id}',
                        winId: 'copy_linkage_bp_hd_window'
                    },
                    title: '复制给其他经销商',
                    width: 800,
                    height: 480
                });
            };
        ]]></script>
        <a:screen-include screen="modules/cont/CON500/con_contract_get_layout_code.screen"/>
    </a:view>
</a:screen>
