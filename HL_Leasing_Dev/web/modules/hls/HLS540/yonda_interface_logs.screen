<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:view>
        <a:link id="sys_home_page_link" url="${/request/@context_path}/home_page.screen"/>
        <script><![CDATA[
          function this_exit(){
               location.href = $('sys_home_page_link').getUrl();
          }
         
          function interface_logs_query(){
              $('interface_logs_ds').query();
          }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="query_ds" autoCreate="true">
                <a:fields>
                    <a:field name="journal_num"/>
                    <a:field name="external_itfc_num"/>
                    <a:field name="start_date"/>
                    <a:field name="end_date"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="interface_logs_ds" autoQuery="true" model="hls.HLS540.yonda_interface_logs" queryDataSet="query_ds"/>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="this_exit" text="退出"/>
                <a:gridButton click="interface_logs_query" text="HLS.QUERY"/>
            </a:screenTopToolbar>
            <a:form title="查询条件">
                <a:hBox labelWidth="120">
                    <a:textField name="journal_num" bindTarget="query_ds" prompt="凭证号"/>
                    <a:textField name="external_itfc_num" bindTarget="query_ds" prompt="金蝶回传凭证号"/>
                    <a:datePicker name="start_date" bindTarget="query_ds" prompt="起始时间"/>
                    <a:datePicker name="end_date" bindTarget="query_ds" prompt="结束时间"/>
                </a:hBox>
            </a:form>
            <a:grid bindTarget="interface_logs_ds" height="300" marginWidth="100" navBar="true">
                <a:columns>
                    <a:column name="journal_num" prompt="凭证号" width="150"/>
                    <a:column name="interface_deal_message" prompt="返回代码" width="150"/>
                    <a:column name="itfc_exception" prompt="返回描述" width="250"/>
                    <a:column name="external_itfc_num" prompt="金蝶回传凭证号" width="150"/>
                    <a:column name="interface_date" align="center" prompt="记录时间" renderer="Aurora.formatDate" width="150"/>
                </a:columns>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
