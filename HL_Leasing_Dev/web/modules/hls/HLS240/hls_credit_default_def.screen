<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view>
        <script><![CDATA[
    		function reset() {
    		$('hls_credit_default_def_head_ds').reset();
    		   }
    		
    		function query() {
    			$('hls_credit_default_def_result_ds').query();
    		   }
		]]></script>
        <a:dataSets>
            <a:dataSet id="hls211_bp_class_ds" lookupCode="HLS211_BP_CLASS"/>
            <a:dataSet id="hls_channelDs" loadData="true" model="basic.hls_lease_channel_for_lov"/>
            <a:dataSet id="hls_bp_category_ds" loadData="true" model="hls.HLS106.fnd_hls_bp_category_for_lov"/>
            <a:dataSet id="hls_credit_default_def_head_ds" autoCreate="true">
                <a:fields>
                    <a:field name="bp_class_desc" displayField="code_value_name" options="hls211_bp_class_ds" returnField="bp_class" valueField="code_value"/>
                    <a:field name="lease_channel_desc" displayField="description" options="hls_channelDs" returnField="lease_channel" valueField="lease_channel"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="hls_credit_default_def_result_ds" autoPageSize="true" autoQuery="true" model="hls.HLS240.hls_credit_default_def" queryDataSet="hls_credit_default_def_head_ds" selectable="true">
                <a:fields>
                    <a:field name="bp_category_desc" displayField="bp_category_desc" options="hls_bp_category_ds" required="true" returnField="bp_category" valueField="bp_category"/>
                    <a:field name="bp_class_desc" displayField="code_value_name" options="hls211_bp_class_ds" required="true" returnField="bp_class" valueField="code_value"/>
                    <a:field name="lease_channel_desc" displayField="description" options="hls_channelDs" required="true" returnField="lease_channel" valueField="lease_channel"/>
                    <a:field name="valid_from" required="true"/>
                    <a:field name="valid_to"/>
                    <a:field name="credit_limit" required="true"/>
                    <a:field name="credit_quantity" required="true"/>
                    <a:field name="enabled_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                    <a:field name="external_business_flag" checkedValue="Y" defaultValue="Y" uncheckedValue="N"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="reset" text="重置"/>
                <a:gridButton click="query" text="查询"/>
            </a:screenTopToolbar>
            <a:form column="4" marginWidth="200" title="查询条件">
                <a:comboBox name="bp_class_desc" bindTarget="hls_credit_default_def_head_ds" prompt="承租人类型"/>
                <a:comboBox name="lease_channel_desc" bindTarget="hls_credit_default_def_head_ds" prompt="商业模式"/>
                <a:numberField name="credit_limit_f" bindTarget="hls_credit_default_def_head_ds" prompt="信用额度从"/>
                <a:numberField name="credit_limit_t" bindTarget="hls_credit_default_def_head_ds" prompt="信用额度到"/>
            </a:form>
            <a:grid bindTarget="hls_credit_default_def_result_ds" marginHeight="200" marginWidth="200" navBar="true">
                <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="delete"/>
                    <a:button type="save"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="bp_category_desc" editor="hls240_comboBox_id" prompt="商业伙伴类别"/>
                    <a:column name="bp_class_desc" editor="hls240_comboBox_id" prompt="商业伙伴类型"/>
                    <a:column name="lease_channel_desc" editor="hls240_comboBox_id" prompt="商业模式"/>
                    <a:column name="external_business_flag" editor="hls240_checkBox_id" prompt="外部业务"/>
                    <a:column name="valid_from" editor="hls240_datePicker_id" prompt="有效期从" renderer="Aurora.formatDate"/>
                    <a:column name="valid_to" editor="hls240_datePicker_id" prompt="有效期到" renderer="Aurora.formatDate"/>
                    <a:column name="credit_limit" align="right" editor="hls240_numberField_id" prompt="授信额度" renderer="Aurora.formatNumber"/>
                    <a:column name="credit_quantity" align="right" editor="hls240_numberField_id" prompt="授信数量"/>
                    <a:column name="enabled_flag" editor="hls240_checkBox_id" prompt="启用标志"/>
                </a:columns>
                <a:editors>
                    <a:checkBox id="hls240_checkBox_id"/>
                    <a:comboBox id="hls240_comboBox_id"/>
                    <a:datePicker id="hls240_datePicker_id"/>
                    <a:numberField id="hls240_numberField_id"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
