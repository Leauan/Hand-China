<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure><![CDATA[
	]]></a:init-procedure>
    <a:view>
        <script><![CDATA[
			function financial_scale_result_grid_editorFunction(record,name) {
			    if (record.isNew) {
                    return 'financial_scale_result_grid_lov';
                } else {
                    return '';
                }
			}
		]]></script>
        <a:dataSets>
            <a:dataSet id="financial_scale_query_ds">
                <a:fields>
                    <a:field name="price_list" defaultValue="${/parameter/@price_list}"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="financial_scale_result_ds" autoQuery="true" model="hls.HLS052.hls_price_list_conds_financial" queryDataSet="financial_scale_query_ds" selectable="true">
                <a:fields>
                    <a:field name="price_list" defaultValue="${/parameter/@price_list}"/>
                    <a:field name="financial_code" lovGridHeight="300" lovHeight="460" lovLabelWidth="150" lovService="hls.HLS052.hls_financial_scale" lovWidth="500" title="融资范围">
                        <a:mapping>
                            <a:map from="code_value" to="financial_code"/>
                            <a:map from="code_value_name" to="code_value_name"/>
                        </a:mapping>
                    </a:field>
                    <a:field name="code_value_name" readOnly="true"/>
                </a:fields>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:grid id="financial_scale_result_grid" bindTarget="financial_scale_result_ds" height="350" navBar="true" width="320">
                <a:toolBar>
                    <a:button type="add"/>
                    <a:button type="delete"/>
                    <a:button type="save"/>
                </a:toolBar>
                <a:columns>
                    <a:column name="financial_code" align="center" autoAdjust="true" editorFunction="financial_scale_result_grid_editorFunction" prompt="融资范围代码"/>
                    <a:column name="code_value_name" align="center" autoAdjust="true" prompt="融资范围描述"/>
                </a:columns>
                <a:editors>
                    <a:lov id="financial_scale_result_grid_lov"/>
                </a:editors>
            </a:grid>
        </a:screenBody>
    </a:view>
</a:screen>
