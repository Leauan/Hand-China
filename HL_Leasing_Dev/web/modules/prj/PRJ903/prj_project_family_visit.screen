<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view>
        <script><![CDATA[
            function submit_prj_project_family_visit_result_ds() {
                $('prj_project_family_visit_result_ds').submit();
            }
            
            var confirm_flag = 'N';
            
            function zjwfl5110_onButtonGroup2() {
                //debugger;
                confirm_flag = 'Y';
                submit_prj_project_family_visit_result_ds();
            }
            
            function on_family_visit_result_ds_submitsuccess(ds,dd) {
                 debugger;
                if (confirm_flag == 'Y') {
                   
                    var combobox_ds_id = "${/parameter/@combobox_ds_id}";
                    var wfl_node_action_id = "${/parameter/@wfl_node_action_id}";
                    var wfl_node_action_prompt = '${/parameter/@wfl_node_action_prompt}';
                    zjwfl5110_onButtonGroup(null, combobox_ds_id, wfl_node_action_id, wfl_node_action_prompt, 3);
                    $('zj_wfl_workflow_service_window').close();
                }
            }
            function on_family_visit_result_ds_submitfailed(ds,dd){
                confirm_flag = 'N';
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="prj_project_family_visit_query">
                <a:fields>
                    <a:field name="project_id" defaultValue="${/parameter/@project_id}"/>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="prj_project_family_visit_result_ds" autoQuery="true" model="prj.PRJ903.prj_project_family_visit" queryDataSet="prj_project_family_visit_query">
                <a:fields>
                    <a:field name="feedback"/>
                    <a:field name="opinion" required="true"/>
                    <a:field name="project_id" defaultValue="${/parameter/@project_id}"/>
                    <a:field name="combobox_ds_id" defaultValue="${/parameter/@combobox_ds_id}"/>
                    <a:field name="wfl_node_action_id" defaultValue="${/parameter/@wfl_node_action_id}"/>
                    <a:field name="wfl_node_action_prompt" defaultValue="${/parameter/@wfl_node_action_prompt}"/>
                    <a:field name="action_type" defaultValue="${/parameter/@action_type}"/>
                </a:fields>
                <a:events>
                    <a:event name="submitsuccess" handler="on_family_visit_result_ds_submitsuccess"/>
                    <a:event name="submitfailed" handler="on_family_visit_result_ds_submitfailed"/>
                </a:events>
            </a:dataSet>
            <a:dataSet id="prj_project_family_base_ds" autoQuery="true" queryUrl="${/request/@context_path}/autocrud/zjwfl.rd_project_base_info/query?project_id=${/parameter/@project_id}">
                <a:field name="project_number"/>
                <a:field name="bp_name"/>
            </a:dataSet>
        </a:dataSets>
        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="submit_prj_project_family_visit_result_ds" text="保存"/>
                <a:gridButton click="zjwfl5110_onButtonGroup2" text="确定"/>
            </a:screenTopToolbar>
            <a:form column="2" width="500">
                <a:textField name="project_number" bindTarget="prj_project_family_base_ds" prompt="申请编号" readOnly="true"/>
                <a:textField name="bp_name" bindTarget="prj_project_family_base_ds" prompt="承租人" readOnly="true"/>
                <a:textArea name="opinion" bindTarget="prj_project_family_visit_result_ds" colspan="2" height="200" prompt="家访意见" width="400"/>
            </a:form>
        </a:screenBody>
    </a:view>
</a:screen>
