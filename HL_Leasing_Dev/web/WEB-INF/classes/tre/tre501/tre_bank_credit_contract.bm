    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
            select * from (
        		SELECT
        		    t1.credit_contract_id,
        		    t1.credit_limit_type,
        		    t1.bp_id,
        		    cbb.bank_branch_name,
        		    t1.credit_contract_number,
        		    t1.credit_amount,
        		    tre_bank_credit_contract_pkg.get_available_amount(t1.credit_contract_id) AS available_amount,
        		    t1.currency,
        		    gcv.currency_name,
        		    t1.credit_date_from,
        		    t1.credit_date_to
        		FROM
        		    tre_bank_credit_contract t1,
        		    csh_bank_branch cbb,
        		    gld_currency_v gcv
        		WHERE
        		    t1.bp_id  = cbb.bank_branch_id AND
        		    t1.currency = gcv.currency_code(+))t
        		    #WHERE_CLAUSE#
    		]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
