        <bm:query-field name="bp_id" queryExpression="t.bp_id=${@bp_id}"/>
        <bm:query-field name="credit_contract_number" queryExpression="t.credit_contract_number like ${@credit_contract_number}"/>
        <bm:query-field name="currency" queryExpression="t.currency=${@currency}"/>
    </bm:query-fields>
