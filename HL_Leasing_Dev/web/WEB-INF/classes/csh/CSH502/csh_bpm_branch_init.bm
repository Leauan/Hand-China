<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
           select bank.bank_name,
       b.bank_branch_name,
       c.city_code,
       c.city_name
  from csh_payment_req_hd         rh,
       hls_bp_master              bm,
      hls_bp_master_bank_account  b,
       hls_sap_bank               bank,
       hls_sap_city               c,
       Hls_Bp_Master_Bank_Account ba
 where rh.payment_req_id = ${/parameter/@payment_req_id}
   and bm.bp_id = rh.bp_id
   and ba.bp_id = bm.bp_id
   and ba.branch_id = b.branch_id
   and b.city_id = c.city_id
   and bank.bank_id = b.bank_id
   and rownum=1
   ]]></bm:query-sql>
            <bm:parameters>
                <bm:parameter name="payment_req_id"/>
            </bm:parameters>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="bank_name" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="BANK_NAME"/>
        <bm:field name="bank_branch_name" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="BANK_BRANCH_NAME"/>
        <bm:field name="city_code" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="CITY_CODE"/>
        <bm:field name="city_name" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="CITY_NAME"/>
       <!--  <bm:field name="branch_code" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="BRANCH_CODE"/> -->
    </bm:fields>
</bm:model>
