<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" alias="t1">
    <bm:fields>
        <bm:field name="bp_id"/>
        <bm:field name="bp_code" forDisplay="true" forQuery="true" prompt="编号"/>
        <bm:field name="bp_name" forDisplay="true" forQuery="true" prompt="名称"/>
        <bm:field name="bp_category_dis" forDisplay="true" prompt="类别"/>
    </bm:fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
    			SELECT *
				  FROM (SELECT bp_id,
				               bp_name,
				               bp_code,
				               extra_nam,
				               (SELECT description FROM hls_bp_category WHERE bp_category = t.bp_category) bp_category_dis
				          FROM hls_bp_master t
				         WHERE t.enabled_flag = 'Y'
				         and (t.bp_category = 'BPO' or t.bp_category = 'AGENT')
				          order by bp_category desc) t1 #WHERE_CLAUSE#
    		]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field field="bp_code" queryExpression="t1.bp_code like &apos;%&apos;|| ${@bp_code} ||&apos;%&apos;"/>
        <bm:query-field field="bp_name" queryExpression="t1.bp_name like &apos;%&apos;|| ${@bp_name} ||&apos;%&apos;"/>
    </bm:query-fields>
</bm:model>
