<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="false">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    *
                FROM
                    (SELECT
                        t.brand_id,
                        t.brand_code,
                        t.description
                    FROM
                        hls_car_brands_vl t
                    WHERE
                        t.enabled_flag='Y'
                    ) #WHERE_CLAUSE#
                ORDER BY
                    brand_code
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="brand_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="brand_id"/>
        <bm:field name="brand_code" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="100" forDisplay="true" forQuery="true" physicalName="brand_code" prompt="品牌代码"/>
        <bm:field name="description" databaseType="VARCHAR2" datatype="java.lang.String" displayWidth="200" forDisplay="true" forQuery="true" physicalName="DESCRIPTION" prompt="品牌名称"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field field="description" queryOperator="like"/>
        <bm:query-field field="brand_code" queryOperator="like"/>
    </bm:query-fields>
</bm:model>
