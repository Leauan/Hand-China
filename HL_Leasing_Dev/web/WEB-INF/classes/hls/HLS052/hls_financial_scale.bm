<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:fields>
        <bm:field name="code_value" databaseType="VARCHAR2" datatype="java.lang.String" forDisplay="true" forQuery="true" physicalName="CODE_VALUE" prompt="值代码"/>
        <bm:field name="code_value_name" databaseType="VARCHAR2" datatype="java.lang.String" forDisplay="true" forQuery="true" physicalName="CODE_VALUE_NAME" prompt="值描述"/>
    </bm:fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:update-sql><![CDATA[
            select * from sys_code_values_v scv where code='HLS_052_FINANCIAL_SCALE'
            ]]></bm:update-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field name="code_value" queryExpression="scv.code_value like &apos;%&apos;||${@code_value}||&apos;%&apos;"/>
        <bm:query-field name="code_value_name" queryExpression="scv.code_value like &apos;%&apos;||${@code_value_name}||&apos;%&apos;"/>
    </bm:query-fields>
</bm:model>
