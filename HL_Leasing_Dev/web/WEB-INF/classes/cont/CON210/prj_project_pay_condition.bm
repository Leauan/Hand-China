<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    pc.pay_condition_id,
                    pc.project_id,
                    pc.condition_seq,
                    pc.condition_des,
                    pc.required_flag,
                    pc.status
                FROM
                    prj_pay_condition pc
                WHERE
                    pc.project_id=${@project_id}
                    and rownum=1
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
