<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:fields>
        <bm:field name="type_name"/>
        <bm:field name="group_name"/>
        <bm:field name="staff_name"/>
        <bm:field name="staff_id"/>
        <bm:field name="district"/>
        <bm:field name="note"/>
    </bm:fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    cct.type_name,
                    ccg.group_name,
                    ccp.staff_name,
                    ccp.staff_id,
                    ccp.district,
                    ccp.note
                FROM
                    con_collection_type cct,
                    con_collection_group ccg,
                    con_collection_persons ccp
                WHERE
                    cct.type_id  = ccg.type_id AND
                    ccg.group_id = ccp.group_id
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
