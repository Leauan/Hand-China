<?xml version="1.0" encoding="UTF-8"?>
<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    t.status_id,
                    t.status_name,
                    t.overdue_status_type,
                    t.overdue_status_type_n
                FROM
                    conllection_overdue_status_lv t
                    #WHERE_CLAUSE#
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="status_id" forDisplay="false" forQuery="false"/>
        <bm:field name="status_name" forDisplay="true" forQuery="true" prompt="逾期状态"/>
        <bm:field name="overdue_status_type" forDisplay="false" forQuery="false"/>
        <bm:field name="overdue_status_type_n" forDisplay="true" forQuery="true" prompt="逾期状态类别"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field field="status_name" queryOperator="like"/>
        <bm:query-field field="overdue_status_type_n" queryOperator="like"/>
    </bm:query-fields>
</bm:model>
