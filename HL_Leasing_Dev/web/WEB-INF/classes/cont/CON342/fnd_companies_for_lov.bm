<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:fields>
        <bm:field name="company_id"/>
        <bm:field name="company_code" displayWidth="80" forDisplay="true" forQuery="true" prompt="公司编码"/>
        <bm:field name="company_short_name" displayWidth="200" forDisplay="true" forQuery="true" prompt="公司简称"/>
        <bm:field name="address" displayWidth="300" forDisplay="true" forQuery="true" prompt="公司地址"/>
        <bm:field name="company_full_name"/>
    </bm:fields>
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
	            SELECT company_id,company_code,address,company_short_name,company_full_name FROM fnd_companies t1
	            #WHERE_CLAUSE#
			]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field field="company_code" queryExpression="upper(t1.company_code) like &apos;%&apos; || upper(${@company_code}) || &apos;%&apos; "/>
        <bm:query-field field="address" queryExpression="upper(t1.address) like &apos;%&apos; || upper(${@address}) || &apos;%&apos; "/>
        <bm:query-field field="company_short_name" queryExpression="upper(t1.company_short_name) like &apos;%&apos; || upper(${@company_short_name}) || &apos;%&apos; "/>
    </bm:query-fields>
</bm:model>
