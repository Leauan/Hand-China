<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[  SELECT * FROM(select 
            t1.business_type,t1.description,t1.enabled_flag 
            from hls_business_type t1 WHERE
            t1.business_type in ('LEASE','LEASEBACK','FORMLB') 
            AND T1.enabled_flag='Y') T1 #WHERE_CLAUSE#
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="business_type" forDisplay="true" forQuery="true" prompt="租赁模式代码"/>
        <bm:field name="description" forDisplay="true" forQuery="true" prompt="租赁模式"/>
        <bm:field name="enabled_flag"/>
    </bm:fields>
</bm:model>
