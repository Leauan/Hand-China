<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" alias="t1" baseTable="hls_car_brands_vl" defaultOrderBy="brand_code">
    <bm:fields>
        <bm:field name="brand_id"/>
        <bm:field name="brand_code" displayWidth="60" forDisplay="true" forQuery="true" prompt="品牌编号"/>
        <bm:field name="description" displayWidth="200" forDisplay="true" forQuery="true" prompt="品牌名称"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field field="brand_code" queryExpression="upper(t1.brand_code) like &apos;%&apos; || upper(${@brand_code}) || &apos;%&apos;"/>
        <bm:query-field field="description" queryExpression="upper(t1.description) like &apos;%&apos; || upper(${@description}) || &apos;%&apos;"/>
    </bm:query-fields>
    <bm:data-filters>
        <bm:data-filter enforceOperations="query" expression="t1.enabled_flag = &apos;Y&apos;"/>
    </bm:data-filters>
</bm:model>
