<bm:model xmlns:f="aurora.database.features" xmlns:bm="http://www.aurora-framework.org/schema/bm" alias="t1" baseTable="SYS_FUNCTION_GROUP_ITEM" defaultOrderBy="t1.layout_sequence">
    <bm:fields>
        <bm:field name="function_group_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="FUNCTION_GROUP_ID" prompt="SYS_FUNCTION_GROUP_ITEM.FUNCTION_GROUP_ID"/>
        <bm:field name="function_id" databaseType="NUMBER" datatype="java.lang.Long" physicalName="FUNCTION_ID" prompt="SYS_FUNCTION_GROUP_ITEM.FUNCTION_ID"/>
        <bm:field name="layout_sequence" databaseType="NUMBER" datatype="java.lang.Long" physicalName="LAYOUT_SEQUENCE" prompt="SYS_FUNCTION_GROUP_ITEM.LAYOUT_SEQUENCE"/>
        <bm:field name="enabled_flag" databaseType="VARCHAR2" datatype="java.lang.String" physicalName="ENABLED_FLAG" prompt="SYS_FUNCTION_GROUP_ITEM.ENABLED_FLAG"/>
    </bm:fields>
    <bm:features>
        <f:standard-who/>
    </bm:features>
    <bm:primary-key>
        <bm:pk-field name="function_group_id"/>
        <bm:pk-field name="function_id"/>
    </bm:primary-key>
    <bm:data-filters>
        <bm:data-filter name="function_group_id" enforceOperations="query" expression="t1.function_group_id=${@function_group_id}"/>
    </bm:data-filters>
    <bm:operations>
        <bm:operation name="insert">
            <bm:update-sql><![CDATA[
    			
    			   begin
    				INSERT INTO SYS_FUNCTION_GROUP_ITEM
					  (function_group_id,
					   function_id,
					   layout_sequence,
					   enabled_flag,
					   CREATED_BY,
					   CREATION_DATE,
					   LAST_UPDATED_BY,
					   LAST_UPDATE_DATE)
					VALUES
					  (${@function_group_id},
					   ${@function_id},
					   ${@layout_sequence},
					   ${@enabled_flag},
					   ${/session/@user_id},
					   sysdate,
					   ${/session/@user_id},
					   sysdate);
					--默认排除所有的功能
					for c_rfs in (select g.role_function_group_id from sys_role_function_group  g where g.function_group_id = ${@function_group_id}) loop
  						insert into sys_role_function_exclude_item(role_function_group_id,function_id,created_by,creation_date,last_updated_by,last_update_date)
						values(c_rfs.role_function_group_id,${@function_id},1,sysdate,1,sysdate);  
					end loop;
					
					 
				end;	
    			
    		]]></bm:update-sql>
        </bm:operation>
    </bm:operations>
</bm:model>
