<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm" needAccessControl="false">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    sms.mail_smtp_host,
                    sms.mail_protocol,
                    sms.mail_port_number,
                    sms.mail_address,
                    sms.mail_username,
                    sms.mail_password,
                    sms.attch_directory
                FROM
                    sys_mail_server sms
                WHERE
                    sms.enabled_flag = 'Y'
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="mail_smtp_host"/>
        <bm:field name="mail_protocol"/>
        <bm:field name="mail_port_number"/>
        <bm:field name="mail_address"/>
        <bm:field name="mail_username"/>
        <bm:field name="mail_password"/>
        <bm:field name="attch_directory"/>
    </bm:fields>
</bm:model>
