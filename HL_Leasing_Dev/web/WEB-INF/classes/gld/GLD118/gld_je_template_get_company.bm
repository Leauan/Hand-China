<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
            	select * from (select f.company_id,
			       f.company_code,
			       f.company_full_name,
			       f.company_short_name
			  	from fnd_companies f) t1#WHERER_CLAUSE#
			  ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:fields>
        <bm:field name="company_id"/>
        <bm:field name="company_code" forDisplay="true" forQuery="true"/>
        <bm:field name="company_full_name"/>
        <bm:field name="company_short_name" forDisplay="true" forQuery="true"/>
    </bm:fields>
    <bm:query-fields>
        <bm:query-field field="company_id" queryOperator="="/>
        <bm:query-field field="company_code" queryExpression="t1.company_code like &apos;%&apos;||${@company_code}||&apos;%&apos;"/>
        <bm:query-field field="company_short_name" queryExpression="t1.company_short_name like &apos;%&apos;||${@company_short_name}||&apos;%&apos;"/>
    </bm:query-fields>
</bm:model>
