<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[SELECT 
       t1.bp_name,
       t1.gender,
       t1.gender_n,
       t1.date_of_birth,
       t1.cell_phone,
       t1.living_address,
       t1.zip_of_living_address,
       t1.marital_status,
       t1.address_on_resident_booklit,
       t1.zip_on_resident_booklit,
       t1.bp_name_sp,
       t1.card_type_sp,
       t1.id_no_sp,
       t1.source_of_income,
       t1.source_of_income_n,
       t1.annual_income,
       t1.other_annual_income,
       t1.ownship_of_house,
       t1.ownship_of_house_n,
       t1.house_loans_flag,
       t1.house_loans_flag_n,
       t1.house_month_amount,
       t1.work_unit,
       t1.work_unit_address,
       t1.work_unit_phone,
       t1.work_unit_zip,
       t1.position,
        (SELECT A.code_value_name   FROM SYS_CODE_VALUES_V A 
       WHERE A.code='PRJ500_FIRM_SIZE' AND A.code_value=T1.INDUSTRY) INDUSTRY_N,
        (SELECT A.code_value_name   FROM SYS_CODE_VALUES_V A 
       WHERE A.code='PRJ500N_POSITION_TYPE' AND A.code_value=T1.POSITION) POSITION_N,
       t1.entry_date,
       t1.industry,
       t1.industry_work_experience,
       t1.marital_status,
       t1.marital_status_n
  FROM hls_bp_master_np_v t1
 #WHERE_CLAUSE#]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field name="id_card_no" queryExpression="t1.id_card_no=${@id_card_no} and t1.bp_category = &apos;GUARANTOR&apos; and  rownum&lt;2"/>
        <bm:query-field name="id_type" queryExpression="t1.id_type=${@id_type}"/>
    </bm:query-fields>
</bm:model>
