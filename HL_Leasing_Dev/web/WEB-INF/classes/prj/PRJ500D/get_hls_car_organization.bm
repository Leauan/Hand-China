<bm:model xmlns:bm="http://www.aurora-framework.org/schema/bm">
    <bm:operations>
        <bm:operation name="query">
            <bm:query-sql><![CDATA[
                SELECT
                    t1.*
                FROM
                    (SELECT
                        a.bp_id,
                        (SELECT
                            v.organization_id
                        FROM
                            hls_car_organization v
                        WHERE
                            v.organization_code = a.yonda_organization_code
                        ) organization_id,
                        (SELECT
                            v.organization_name
                        FROM
                            hls_car_organization v
                        WHERE
                            v.organization_code = a.yonda_organization_code
                        ) organization_name
                    FROM
                        hls_bp_master a
                    ) t1 #WHERE_CLAUSE#
            ]]></bm:query-sql>
        </bm:operation>
    </bm:operations>
    <bm:query-fields>
        <bm:query-field name="bp_id" queryExpression="t1.bp_id=${@bp_id}"/>
    </bm:query-fields>
</bm:model>
